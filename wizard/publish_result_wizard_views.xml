<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_publish_result_wizard_form" model="ir.ui.view">
        <field name="name">publish.result.wizard.form</field>
        <field name="model">publish.result.wizard</field>
        <field name="arch" type="xml">
            <form string="Publish Examination Results">
                <sheet>
                    <div class="oe_title">
                        <h1>Publish Results</h1>
                    </div>
                    <group>
                        <group>
                            <field name="examination_id"/>
                            <field name="semester"/>
                            <field name="publish_date"/>
                        </group>
                        <group>
                            <field name="program_id"/>
                            <field name="department_id"/>
                        </group>
                    </group>

                    <group string="Statistics" col="4">
                        <field name="preview_count"/>
                        <field name="pass_count"/>
                        <field name="fail_count"/>
                        <field name="pass_percentage"/>
                    </group>

                    <notebook>
                        <page string="Options">
                            <group>
                                <group>
                                    <field name="generate_marksheet"/>
                                    <field name="publish_on_portal"/>
                                </group>
                                <group>
                                    <field name="send_email"/>
                                    <field name="send_sms"/>
                                </group>
                            </group>
                        </page>

                        <page string="Select Results (Optional)">
                            <field name="result_ids" nolabel="1">
                                <list>
                                    <field name="student_id"/>
                                    <field name="examination_id"/>
                                    <field name="total_marks"/>
<!--                                    <field name="obtained_marks"/>-->
                                    <field name="percentage"/>
                                    <field name="result"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_preview_results"
                            string="Preview Results"
                            type="object"
                            class="btn-secondary"/>
                    <button name="action_publish_results"
                            string="Publish Results"
                            type="object"
                            class="btn-primary"
                            confirm="Are you sure you want to publish these results?"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_publish_result_wizard" model="ir.actions.act_window">
        <field name="name">Publish Results</field>
        <field name="res_model">publish.result.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

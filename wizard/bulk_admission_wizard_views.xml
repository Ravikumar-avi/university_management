<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bulk_admission_wizard_form" model="ir.ui.view">
        <field name="name">bulk.admission.wizard.form</field>
        <field name="model">bulk.admission.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Student Admission">
                <sheet>
                    <div class="oe_title">
                        <h1>Import Student Admissions</h1>
                    </div>
                    <group>
                        <group>
                            <field name="import_file" filename="filename" required="1"/>
                            <field name="filename" invisible="1"/>
                            <field name="file_type" widget="radio"/>
                            <field name="program_id"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="batch_id"/>
                            <field name="academic_year_id"/>
                            <field name="admission_date"/>
                        </group>
                    </group>
                    <group string="Options">
                        <group>
                            <field name="auto_generate_registration"/>
                            <field name="auto_approve"/>
                        </group>
                        <group>
                            <field name="send_email"/>
                            <field name="send_sms"/>
                        </group>
                    </group>
                    <group>
                        <button name="action_download_sample"
                                string="Download Sample Template"
                                type="object"
                                class="btn-link"
                                icon="fa-download"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_import_admissions"
                            string="Import Admissions"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bulk_admission_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Admission Import</field>
        <field name="res_model">bulk.admission.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

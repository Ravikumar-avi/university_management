<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_generate_hall_ticket_wizard_line_list" model="ir.ui.view">
        <field name="name">generate.hall.ticket.wizard.line.list</field>
        <field name="model">generate.hall.ticket.wizard.line</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false"
                  decoration-success="eligible"
                  decoration-danger="not eligible">
                <field name="student_id"/>
                <field name="eligible"/>
                <field name="reason"/>
            </list>
        </field>
    </record>

    <record id="view_generate_hall_ticket_wizard_form" model="ir.ui.view">
        <field name="name">generate.hall.ticket.wizard.form</field>
        <field name="model">generate.hall.ticket.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Hall Tickets">
                <sheet>
                    <div class="oe_title">
                        <h1>Generate Hall Tickets</h1>
                    </div>
                    <group>
                        <group>
                            <field name="examination_id"/>
                            <field name="semester"/>
                            <field name="hall_ticket_template_id"/>
                        </group>
                        <group>
                            <field name="auto_print"/>
                            <field name="send_email"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Student Filters">
                            <group>
                                <group>
                                    <field name="program_id"/>
                                    <field name="department_id"/>
                                </group>
                                <group>
                                    <field name="batch_id"/>
                                    <field name="student_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>

                        <page string="Eligibility Criteria">
                            <group>
                                <field name="check_eligibility"/>
                            </group>
                            <group>
                                <group>
                                    <field name="min_attendance"/>
                                    <field name="check_fee_payment"/>
                                </group>
                                <group>
                                    <field name="check_documents"/>
                                </group>
                            </group>
                        </page>

                        <page string="Preview">
                            <field name="preview_lines" nolabel="1">
                                <list>
                                    <field name="student_id"/>
                                    <field name="eligible"/>
                                    <field name="reason"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_generate_hall_tickets"
                            string="Generate Hall Tickets"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generate_hall_ticket_wizard" model="ir.actions.act_window">
        <field name="name">Generate Hall Tickets</field>
        <field name="res_model">generate.hall.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

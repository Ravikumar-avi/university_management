<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_placement_report_wizard_form" model="ir.ui.view">
        <field name="name">placement.report.wizard.form</field>
        <field name="model">placement.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Placement Statistics Report">
                <sheet>
                    <group>
                        <group>
                            <field name="academic_year_id"/>
                            <field name="program_id"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="include_year_comparison"/>
                        </group>
                    </group>
                    <group string="Date Range (optional)">
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group string="Remarks (optional)">
                        <field name="remarks" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_report"
                            string="Print Placement Report"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_placement_report_wizard" model="ir.actions.act_window">
        <field name="name">Placement Statistics Report</field>
        <field name="res_model">placement.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

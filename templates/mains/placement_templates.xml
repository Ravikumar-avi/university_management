<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Placements Page Template -->
        <template id="placements_page" name="Placements Portal">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure">
                    <!-- Hero Section -->
                    <section class="s_title bg-primary text-white py-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 mx-auto text-center">
                                    <h1 class="display-4 mb-3">Campus Placements</h1>
                                    <p class="lead mb-4">
                                        Connecting talented students with leading companies for successful career opportunities
                                    </p>
                                    <div class="d-flex justify-content-center gap-4 mt-4">
                                        <a href="#placement-drives" class="btn btn-light btn-lg">
                                            <i class="fa fa-briefcase me-2"></i>View Drives
                                        </a>
                                        <a href="#placement-stats" class="btn btn-outline-light btn-lg">
                                            <i class="fa fa-chart-bar me-2"></i>Statistics
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Statistics Section -->
                    <section id="placement-stats" class="s_text_block py-5 bg-light">
                        <div class="container">
                            <div class="row mb-4">
                                <div class="col-12 text-center">
                                    <h2 class="text-primary mb-3">Placement Statistics</h2>
                                    <p class="text-muted" t-if="current_year">
                                        Academic Year: <span class="fw-bold" t-field="current_year.name"/>
                                    </p>
                                </div>
                            </div>

                            <div class="row g-4">
                                <!-- Total Students Card -->
                                <div class="col-md-4">
                                    <div class="card shadow-sm border-0 h-100">
                                        <div class="card-body text-center p-4">
                                            <div class="mb-3">
                                                <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex p-3">
                                                    <i class="fa fa-graduation-cap fa-3x text-primary"></i>
                                                </div>
                                            </div>
                                            <h3 class="display-5 fw-bold text-dark" t-if="stats">
                                                <t t-esc="stats.get('total_students', 0)"/>
                                            </h3>
                                            <h5 class="card-title">Total Students</h5>
                                            <p class="text-muted">Eligible for placements this year</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Placed Students Card -->
                                <div class="col-md-4">
                                    <div class="card shadow-sm border-0 h-100">
                                        <div class="card-body text-center p-4">
                                            <div class="mb-3">
                                                <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex p-3">
                                                    <i class="fa fa-briefcase fa-3x text-success"></i>
                                                </div>
                                            </div>
                                            <h3 class="display-5 fw-bold text-dark" t-if="stats">
                                                <t t-esc="stats.get('placed_students', 0)"/>
                                            </h3>
                                            <h5 class="card-title">Placed Students</h5>
                                            <p class="text-muted">Successfully placed in companies</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Companies Card -->
                                <div class="col-md-4">
                                    <div class="card shadow-sm border-0 h-100">
                                        <div class="card-body text-center p-4">
                                            <div class="mb-3">
                                                <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex p-3">
                                                    <i class="fa fa-building fa-3x text-warning"></i>
                                                </div>
                                            </div>
                                            <h3 class="display-5 fw-bold text-dark" t-if="stats">
                                                <t t-esc="stats.get('companies', 0)"/>
                                            </h3>
                                            <h5 class="card-title">Companies</h5>
                                            <p class="text-muted">Recruiting from our campus</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Placement Drives Section -->
                    <section id="placement-drives" class="s_text_block py-5">
                        <div class="container">
                            <div class="row mb-5">
                                <div class="col-12 text-center">
                                    <h2 class="text-primary mb-3">Upcoming Placement Drives</h2>
                                    <p class="text-muted">Explore the latest placement opportunities from top companies</p>
                                </div>
                            </div>

                            <!-- Placement Drives List -->
                            <div class="row g-4">
                                <!-- This would be dynamically populated with placement.drive records -->
                                <div class="col-12 text-center py-5" id="placement-drives-list">
                                    <div class="alert alert-info">
                                        <h4 class="alert-heading">No Active Drives</h4>
                                        <p>There are currently no active placement drives. Please check back later.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Information Section -->
                    <section class="s_text_block py-5 bg-light">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-6">
                                    <h2 class="text-primary mb-4">Placement Process</h2>
                                    <div class="d-flex mb-3">
                                        <div class="flex-shrink-0">
                                            <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                1
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5>Registration</h5>
                                            <p class="text-muted">Students register for placement drives through the portal</p>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-3">
                                        <div class="flex-shrink-0">
                                            <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                2
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5>Aptitude Test</h5>
                                            <p class="text-muted">Online/offline aptitude tests to assess problem-solving skills</p>
                                        </div>
                                    </div>
                                    <div class="d-flex mb-3">
                                        <div class="flex-shrink-0">
                                            <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                3
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5>Technical Interview</h5>
                                            <p class="text-muted">Technical rounds to evaluate domain knowledge</p>
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <span class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                4
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5>HR Interview &amp; Offer</h5>
                                            <p class="text-muted">Final HR round and offer letter distribution</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-body p-4">
                                            <h4 class="card-title text-primary mb-3">Eligibility Criteria</h4>
                                            <ul class="list-unstyled">
                                                <li class="mb-2">
                                                    <i class="fa fa-check text-success me-2"></i>
                                                    Minimum CGPA: 6.0 (varies by company)
                                                </li>
                                                <li class="mb-2">
                                                    <i class="fa fa-check text-success me-2"></i>
                                                    No active backlogs
                                                </li>
                                                <li class="mb-2">
                                                    <i class="fa fa-check text-success me-2"></i>
                                                    75%+ attendance
                                                </li>
                                                <li class="mb-2">
                                                    <i class="fa fa-check text-success me-2"></i>
                                                    All documents verified
                                                </li>
                                                <li class="mb-2">
                                                    <i class="fa fa-check text-success me-2"></i>
                                                    No disciplinary actions
                                                </li>
                                            </ul>
                                            <div class="alert alert-warning mt-4">
                                                <i class="fa fa-exclamation-triangle me-2"></i>
                                                <strong>Note:</strong> Additional company-specific criteria may apply
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Call to Action -->
                    <section class="s_text_block py-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 mx-auto text-center">
                                    <h2 class="text-primary mb-4">Ready to Start Your Career?</h2>
                                    <p class="lead mb-4">
                                        Contact our Placement Cell for guidance and support throughout the placement process
                                    </p>
                                    <div class="d-flex justify-content-center gap-3">
                                        <a href="/contact" class="btn btn-primary btn-lg">
                                            <i class="fa fa-envelope me-2"></i>Contact Placement Cell
                                        </a>
                                        <a href="/student-portal" class="btn btn-outline-primary btn-lg">
                                            <i class="fa fa-user-graduate me-2"></i>Student Portal
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>

    </data>
</odoo>
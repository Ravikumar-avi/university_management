<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Events List Page -->
    <template id="events_page" name="Events Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-4">
                    <!-- Page Header -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h1 class="display-4 text-center">
                                <i class="fa fa-calendar-alt me-2"></i>
                                University Events
                            </h1>
                            <p class="lead text-center text-muted">
                                Discover workshops, seminars, cultural fests, and more
                            </p>
                        </div>
                    </div>

                    <!-- Event Type Filter -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">
                                        <i class="fa fa-filter me-2"></i>
                                        Filter by Event Type
                                    </h5>
                                    <div class="btn-group d-flex flex-wrap" role="group">
                                        <a href="/events"
                                           class="btn btn-outline-primary mb-2 me-2"
                                           t-attf-class="{{'btn-primary' if not event_type else 'btn-outline-primary'}}">
                                            All Events
                                        </a>
                                        <a href="/events?event_type=fest"
                                           class="btn btn-outline-primary mb-2 me-2"
                                           t-attf-class="{{'btn-primary' if event_type == 'fest' else 'btn-outline-primary'}}">
                                            <i class="fa fa-music me-1"></i>
                                            Cultural Fest
                                        </a>
                                        <a href="/events?event_type=tech_fest"
                                           class="btn btn-outline-primary mb-2 me-2"
                                           t-attf-class="{{'btn-primary' if event_type == 'tech_fest' else 'btn-outline-primary'}}">
                                            <i class="fa fa-laptop-code me-1"></i>
                                            Tech Fest
                                        </a>
                                        <a href="/events?event_type=seminar"
                                           class="btn btn-outline-primary mb-2 me-2"
                                           t-attf-class="{{'btn-primary' if event_type == 'seminar' else 'btn-outline-primary'}}">
                                            <i class="fa fa-chalkboard-teacher me-1"></i>
                                            Seminar
                                        </a>
                                        <a href="/events?event_type=workshop"
                                           class="btn btn-outline-primary mb-2 me-2"
                                           t-attf-class="{{'btn-primary' if event_type == 'workshop' else 'btn-outline-primary'}}">
                                            <i class="fa fa-tools me-1"></i>
                                            Workshop
                                        </a>
                                        <a href="/events?event_type=competition"
                                           class="btn btn-outline-primary mb-2 me-2"
                                           t-attf-class="{{'btn-primary' if event_type == 'competition' else 'btn-outline-primary'}}">
                                            <i class="fa fa-trophy me-1"></i>
                                            Competition
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Events Grid -->
                    <div class="row">
                        <t t-if="not events">
                            <div class="col-12 text-center py-5">
                                <div class="text-muted">
                                    <i class="fa fa-calendar-times fa-3x mb-3"></i>
                                    <h4>No events available</h4>
                                    <p>Check back later for upcoming events.</p>
                                </div>
                            </div>
                        </t>

                        <t t-foreach="events" t-as="event">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <!-- Event Image -->
                                    <div class="card-img-top position-relative">
                                        <t t-if="event.poster">
                                            <img t-att-src="'/web/image/university.event/' + str(event.id) + '/poster'"
                                                 class="img-fluid w-100" style="height: 200px; object-fit: cover;"
                                                 t-att-alt="event.name"/>
                                        </t>
                                        <t t-else="">
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="height: 200px;">
                                                <i class="fa fa-calendar-alt fa-3x"></i>
                                            </div>
                                        </t>
                                        <!-- Event Status Badge -->
                                        <div class="position-absolute top-0 end-0 m-2">
                                            <span class="badge"
                                                  t-attf-class="{
                                                    'bg-success': event.state == 'ongoing',
                                                    'bg-primary': event.state == 'registration_open',
                                                    'bg-info': event.state == 'published'
                                                  }">
                                                <t t-if="event.state == 'ongoing'">Ongoing</t>
                                                <t t-elif="event.state == 'registration_open'">Registration Open</t>
                                                <t t-elif="event.state == 'published'">Published</t>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Card Body -->
                                    <div class="card-body">
                                        <!-- Event Type -->
                                        <span class="badge bg-light text-dark mb-2">
                                            <t t-if="event.event_type == 'fest'">Cultural Fest</t>
                                            <t t-elif="event.event_type == 'tech_fest'">Tech Fest</t>
                                            <t t-elif="event.event_type == 'seminar'">Seminar</t>
                                            <t t-elif="event.event_type == 'workshop'">Workshop</t>
                                            <t t-elif="event.event_type == 'conference'">Conference</t>
                                            <t t-elif="event.event_type == 'webinar'">Webinar</t>
                                            <t t-elif="event.event_type == 'sports'">Sports Event</t>
                                            <t t-elif="event.event_type == 'competition'">Competition</t>
                                            <t t-elif="event.event_type == 'guest_lecture'">Guest Lecture</t>
                                            <t t-elif="event.event_type == 'hackathon'">Hackathon</t>
                                            <t t-else="">Other</t>
                                        </span>

                                        <!-- Event Title -->
                                        <h5 class="card-title">
                                            <a t-att-href="'/event/' + str(event.id)" class="text-decoration-none text-dark">
                                                <t t-esc="event.name"/>
                                            </a>
                                        </h5>

                                        <!-- Event Code -->
                                        <p class="text-muted small mb-2">
                                            <i class="fa fa-hashtag me-1"></i>
                                            <t t-esc="event.event_code"/>
                                        </p>

                                        <!-- Event Dates -->
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <small class="text-muted d-block">Start</small>
                                                <small class="text-dark">
                                                    <i class="fa fa-calendar text-primary me-1"></i>
                                                    <t t-esc="event.start.strftime('%b %d, %Y')"/>
                                                </small>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted d-block">End</small>
                                                <small class="text-dark">
                                                    <i class="fa fa-calendar text-danger me-1"></i>
                                                    <t t-esc="event.stop.strftime('%b %d, %Y')"/>
                                                </small>
                                            </div>
                                        </div>

                                        <!-- Venue Type -->
                                        <div class="mb-3">
                                            <small class="text-muted d-block">Venue</small>
                                            <small>
                                                <i t-attf-class="{
                                                    'fa fa-map-marker text-success': event.venue_type == 'offline',
                                                    'fa fa-video text-info': event.venue_type == 'online',
                                                    'fa fa-map-marker-plus text-warning': event.venue_type == 'hybrid'
                                                }"></i>
                                                <t t-if="event.venue_type == 'offline'">Offline - <span t-esc="event.location or 'TBA'"/></t>
                                                <t t-elif="event.venue_type == 'online'">Online</t>
                                                <t t-elif="event.venue_type == 'hybrid'">Hybrid</t>
                                            </small>
                                        </div>

                                        <!-- Registration Info -->
                                        <div class="mb-3">
                                            <small class="text-muted d-block">Registration</small>
                                            <small>
                                                <t t-if="event.requires_registration and event.registration_open">
                                                    <i class="fa fa-user-check text-success me-1"></i>
                                                    Open
                                                    <t t-if="event.max_participants">
                                                        (<t t-esc="event.total_registrations"/>/<t t-esc="event.max_participants"/>)
                                                    </t>
                                                    <t t-if="event.has_registration_fee">
                                                        - <span class="badge bg-warning">
                                                            <i class="fa fa-money-bill-wave"></i>
                                                            <t t-esc="event.registration_fee"/>
                                                            <t t-esc="event.currency_id.symbol or event.currency_id.name"/>
                                                        </span>
                                                    </t>
                                                </t>
                                                <t t-elif="event.requires_registration and not event.registration_open">
                                                    <i class="fa fa-user-clock text-warning me-1"></i>
                                                    Closed
                                                </t>
                                                <t t-else="">
                                                    <i class="fa fa-user-times text-muted me-1"></i>
                                                    Not Required
                                                </t>
                                            </small>
                                        </div>

                                        <!-- Organizer -->
                                        <div class="mb-3">
                                            <small class="text-muted d-block">Organized By</small>
                                            <small>
                                                <i class="fa fa-users text-info me-1"></i>
                                                <t t-if="event.organized_by == 'department' and event.department_id">
                                                    <t t-esc="event.department_id.name"/> Department
                                                </t>
                                                <t t-elif="event.organized_by == 'club' and event.club_name">
                                                    <t t-esc="event.club_name"/> Club
                                                </t>
                                                <t t-elif="event.organized_by == 'university'">
                                                    University
                                                </t>
                                                <t t-elif="event.organized_by == 'external'">
                                                    External Organization
                                                </t>
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Card Footer -->
                                    <div class="card-footer bg-white border-0 pt-0">
                                        <div class="d-flex justify-content-between">
                                            <a t-att-href="'/event/' + str(event.id)"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fa fa-info-circle me-1"></i>
                                                Details
                                            </a>
                                            <t t-if="event.requires_registration and event.registration_open and request.website.user_id.id">
                                                <a t-att-href="'/event/' + str(event.id) + '/register'"
                                                   class="btn btn-primary btn-sm"
                                                   data-method="post"
                                                   t-att-disabled="event.max_participants and event.total_registrations >= event.max_participants">
                                                    <i class="fa fa-user-plus me-1"></i>
                                                    Register
                                                </a>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- Pagination -->
                    <t t-if="events and pager and pager['page_count'] > 1">
                        <div class="row mt-4">
                            <div class="col-12">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item" t-attf-class="{'disabled': pager['page'] == 1}">
                                            <a class="page-link" t-att-href="pager['previous']['url']">
                                                Previous
                                            </a>
                                        </li>
                                        <t t-foreach="range(1, pager['page_count'] + 1)" t-as="page_num">
                                            <li class="page-item" t-attf-class="{'active': page_num == pager['page']}">
                                                <a class="page-link" t-att-href="'/events/page/' + str(page_num) + (event_type and '?event_type=' + event_type or '')">
                                                    <t t-esc="page_num"/>
                                                </a>
                                            </li>
                                        </t>
                                        <li class="page-item" t-attf-class="{'disabled': pager['page'] == pager['page_count']}">
                                            <a class="page-link" t-att-href="pager['next']['url']">
                                                Next
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <!-- Event Detail Page -->
    <template id="event_detail_page" name="Event Detail Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-4">
                    <!-- Back Button -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <a href="/events" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left me-2"></i>
                                Back to Events
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Event Header -->
                        <div class="col-lg-8">
                            <!-- Event Status Banner -->
                            <div class="alert" t-attf-class="{
                                'alert-success': event.state == 'ongoing',
                                'alert-primary': event.state == 'registration_open',
                                'alert-info': event.state == 'published'
                            }">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="alert-heading mb-0">
                                            <t t-esc="event.name"/>
                                        </h4>
                                        <p class="mb-0">
                                            <span class="badge"
                                                  t-attf-class="{
                                                    'bg-success': event.state == 'ongoing',
                                                    'bg-primary': event.state == 'registration_open',
                                                    'bg-info': event.state == 'published'
                                                  }">
                                                <t t-if="event.state == 'ongoing'">Ongoing</t>
                                                <t t-elif="event.state == 'registration_open'">Registration Open</t>
                                                <t t-elif="event.state == 'published'">Published</t>
                                            </span>
                                            <span class="ms-2 badge bg-light text-dark">
                                                <t t-if="event.event_type == 'fest'">Cultural Fest</t>
                                                <t t-elif="event.event_type == 'tech_fest'">Tech Fest</t>
                                                <t t-elif="event.event_type == 'seminar'">Seminar</t>
                                                <t t-elif="event.event_type == 'workshop'">Workshop</t>
                                                <t t-elif="event.event_type == 'conference'">Conference</t>
                                                <t t-elif="event.event_type == 'webinar'">Webinar</t>
                                                <t t-elif="event.event_type == 'sports'">Sports Event</t>
                                                <t t-elif="event.event_type == 'competition'">Competition</t>
                                                <t t-elif="event.event_type == 'guest_lecture'">Guest Lecture</t>
                                                <t t-elif="event.event_type == 'hackathon'">Hackathon</t>
                                                <t t-else="">Other</t>
                                            </span>
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <p class="mb-0 text-muted small">
                                            <i class="fa fa-hashtag"></i>
                                            <t t-esc="event.event_code"/>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Event Poster -->
                            <t t-if="event.poster">
                                <div class="card mb-4">
                                    <img t-att-src="'/web/image/university.event/' + str(event.id) + '/poster'"
                                         class="card-img-top"
                                         t-att-alt="event.name"/>
                                </div>
                            </t>

                            <!-- Event Description -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fa fa-info-circle text-primary me-2"></i>
                                        About Event
                                    </h5>
                                    <div class="card-text" t-raw="event.description or '&lt;p class=&quot;text-muted&quot;&gt;No description available.&lt;/p&gt;'"/>
                                </div>
                            </div>

                            <!-- Event Agenda -->
                            <t t-if="event.agenda">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fa fa-list-alt text-success me-2"></i>
                                            Agenda/Schedule
                                        </h5>
                                        <div class="card-text" t-raw="event.agenda"/>
                                    </div>
                                </div>
                            </t>

                            <!-- Guest Speaker -->
                            <t t-if="event.has_guest_speaker and event.speaker_name">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fa fa-user-tie text-warning me-2"></i>
                                            Guest Speaker
                                        </h5>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h6 class="mb-1"><t t-esc="event.speaker_name"/></h6>
                                                <p class="text-muted mb-2">
                                                    <t t-esc="event.speaker_designation or ''"/>
                                                </p>
                                                <div t-if="event.speaker_bio" t-raw="event.speaker_bio"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>

                        <!-- Sidebar -->
                        <div class="col-lg-4">
                            <!-- Registration Card -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fa fa-calendar-check text-primary me-2"></i>
                                        Registration
                                    </h5>

                                    <!-- Registration Status -->
                                    <div class="mb-3">
                                        <t t-if="event.requires_registration">
                                            <t t-if="event.registration_open">
                                                <div class="alert alert-success">
                                                    <i class="fa fa-check-circle me-2"></i>
                                                    <strong>Registration Open</strong>
                                                    <t t-if="event.registration_start and event.registration_end">
                                                        <p class="mb-0 small">
                                                            From: <t t-esc="event.registration_start.strftime('%b %d, %Y %I:%M %p')"/><br/>
                                                            To: <t t-esc="event.registration_end.strftime('%b %d, %Y %I:%M %p')"/>
                                                        </p>
                                                    </t>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div class="alert alert-warning">
                                                    <i class="fa fa-clock me-2"></i>
                                                    <strong>Registration Closed</strong>
                                                </div>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-info">
                                                <i class="fa fa-user-times me-2"></i>
                                                <strong>Registration Not Required</strong>
                                            </div>
                                        </t>
                                    </div>

                                    <!-- Registration Button -->
                                    <t t-if="request.website.user_id.id">
                                        <t t-if="event.requires_registration and event.registration_open">
                                            <form t-att-action="'/event/' + str(event.id) + '/register'"
                                                  method="post"
                                                  class="mb-3">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <button type="submit"
                                                        class="btn btn-primary w-100"
                                                        t-att-disabled="event.max_participants and event.total_registrations >= event.max_participants">
                                                    <t t-if="event.max_participants and event.total_registrations >= event.max_participants">
                                                        <i class="fa fa-user-times me-2"></i>
                                                        Event Full
                                                    </t>
                                                    <t t-else="">
                                                        <i class="fa fa-user-plus me-2"></i>
                                                        Register Now
                                                    </t>
                                                </button>
                                            </form>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <div class="alert alert-info">
                                            <p class="mb-2">
                                                <i class="fa fa-sign-in-alt me-2"></i>
                                                Please <a href="/web/login">login</a> to register for this event.
                                            </p>
                                        </div>
                                    </t>

                                    <!-- Registration Stats -->
                                    <t t-if="event.requires_registration">
                                        <div class="mt-3">
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Registered:</span>
                                                <strong>
                                                    <t t-esc="event.total_registrations"/>
                                                    <t t-if="event.max_participants">/<t t-esc="event.max_participants"/></t>
                                                </strong>
                                            </div>
                                            <t t-if="event.max_participants">
                                                <div class="progress mb-3" style="height: 10px;">
                                                    <div class="progress-bar bg-success"
                                                         role="progressbar"
                                                         t-att-style="'width: ' + str((event.total_registrations / event.max_participants) * 100) + '%'"
                                                         t-att-aria-valuenow="event.total_registrations"
                                                         aria-valuemin="0"
                                                         t-att-aria-valuemax="event.max_participants">
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </t>

                                    <!-- Registration Fee -->
                                    <t t-if="event.has_registration_fee and event.registration_fee > 0">
                                        <div class="mt-3">
                                            <div class="d-flex justify-content-between">
                                                <span>Registration Fee:</span>
                                                <strong>
                                                    <t t-esc="event.registration_fee"/>
                                                    <t t-esc="event.currency_id.symbol or event.currency_id.name"/>
                                                </strong>
                                            </div>
                                        </div>
                                    </t>

                                    <!-- Certificate Info -->
                                    <t t-if="event.provides_certificate">
                                        <div class="mt-3">
                                            <div class="alert alert-info">
                                                <i class="fa fa-certificate me-2"></i>
                                                <strong>Certificate Available</strong>
                                                <p class="mb-0 small">
                                                    Participants will receive a certificate upon completion.
                                                </p>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>

                            <!-- Event Details Card -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fa fa-calendar-alt text-info me-2"></i>
                                        Event Details
                                    </h5>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fa fa-calendar text-primary me-2"></i>
                                            <strong>Start:</strong> <t t-esc="event.start.strftime('%b %d, %Y %I:%M %p')"/>
                                        </li>
                                        <li class="mb-2">
                                            <i class="fa fa-calendar text-danger me-2"></i>
                                            <strong>End:</strong> <t t-esc="event.stop.strftime('%b %d, %Y %I:%M %p')"/>
                                        </li>
                                        <li class="mb-2">
                                            <i t-attf-class="{
                                                'fa fa-map-marker text-success me-2': event.venue_type == 'offline',
                                                'fa fa-video text-info me-2': event.venue_type == 'online',
                                                'fa fa-map-marker-plus text-warning me-2': event.venue_type == 'hybrid'
                                            }"></i>
                                            <strong>Venue:</strong>
                                            <t t-if="event.venue_type == 'offline'">
                                                <t t-esc="event.location or 'TBA'"/>
                                                <t t-if="event.venue_address">
                                                    <br/><small class="text-muted"><t t-esc="event.venue_address"/></small>
                                                </t>
                                            </t>
                                            <t t-elif="event.venue_type == 'online'">
                                                Online
                                                <t t-if="event.online_meeting_url">
                                                    <br/><small><a t-att-href="event.online_meeting_url" target="_blank">Join Meeting</a></small>
                                                </t>
                                            </t>
                                            <t t-elif="event.venue_type == 'hybrid'">
                                                Hybrid
                                                <t t-if="event.location">
                                                    <br/><small><t t-esc="event.location"/></small>
                                                </t>
                                                <t t-if="event.online_meeting_url">
                                                    <br/><small><a t-att-href="event.online_meeting_url" target="_blank">Online Join Link</a></small>
                                                </t>
                                            </t>
                                        </li>
                                        <li class="mb-2">
                                            <i class="fa fa-users text-secondary me-2"></i>
                                            <strong>Target Audience:</strong>
                                            <t t-if="event.target_audience == 'students'">Students Only</t>
                                            <t t-elif="event.target_audience == 'faculty'">Faculty Only</t>
                                            <t t-elif="event.target_audience == 'all'">All (Students &amp; Faculty)</t>
                                            <t t-elif="event.target_audience == 'external'">Open to External Participants</t>
                                        </li>
                                        <li class="mb-2">
                                            <i class="fa fa-building text-warning me-2"></i>
                                            <strong>Organized By:</strong>
                                            <t t-if="event.organized_by == 'department' and event.department_id">
                                                <br/><t t-esc="event.department_id.name"/> Department
                                            </t>
                                            <t t-elif="event.organized_by == 'club' and event.club_name">
                                                <br/><t t-esc="event.club_name"/> Club
                                            </t>
                                            <t t-elif="event.organized_by == 'university'">
                                                <br/>University
                                            </t>
                                            <t t-elif="event.organized_by == 'external'">
                                                <br/>External Organization
                                            </t>
                                        </li>
                                        <li t-if="event.category" class="mb-2">
                                            <i class="fa fa-tags text-success me-2"></i>
                                            <strong>Category:</strong>
                                            <t t-if="event.category == 'cultural'">Cultural</t>
                                            <t t-elif="event.category == 'technical'">Technical</t>
                                            <t t-elif="event.category == 'sports'">Sports</t>
                                            <t t-elif="event.category == 'academic'">Academic</t>
                                            <t t-elif="event.category == 'social'">Social</t>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Contact/Coordinator Info -->
                            <t t-if="event.coordinator_ids or event.student_coordinator_ids">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fa fa-address-book text-danger me-2"></i>
                                            Contact Coordinators
                                        </h5>
                                        <div class="small">
                                            <t t-if="event.coordinator_ids">
                                                <strong>Faculty Coordinators:</strong>
                                                <ul class="mb-2">
                                                    <t t-foreach="event.coordinator_ids" t-as="coordinator">
                                                        <li>
                                                            <t t-esc="coordinator.name"/>
                                                            <t t-if="coordinator.work_email"> - <t t-esc="coordinator.work_email"/></t>
                                                        </li>
                                                    </t>
                                                </ul>
                                            </t>
                                            <t t-if="event.student_coordinator_ids">
                                                <strong>Student Coordinators:</strong>
                                                <ul>
                                                    <t t-foreach="event.student_coordinator_ids" t-as="student_coord">
                                                        <li>
                                                            <t t-esc="student_coord.name"/>
                                                            <t t-if="student_coord.personal_email"> - <t t-esc="student_coord.personal_email"/></t>
                                                        </li>
                                                    </t>
                                                </ul>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Event Error Page -->
    <template id="event_error_page" name="Event Error Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white">
                                    <h4 class="mb-0">
                                        <i class="fa fa-exclamation-triangle me-2"></i>
                                        Event Registration Error
                                    </h4>
                                </div>
                                <div class="card-body text-center py-5">
                                    <i class="fa fa-times-circle text-danger fa-4x mb-4"></i>
                                    <h5 class="mb-3">Unable to Process Registration</h5>
                                    <p class="text-muted mb-4" t-esc="error"/>
                                    <div class="d-grid gap-2">
                                        <a href="/events" class="btn btn-primary">
                                            <i class="fa fa-arrow-left me-2"></i>
                                            Back to Events
                                        </a>
                                        <a href="/my/registrations" class="btn btn-outline-secondary">
                                            <i class="fa fa-calendar-check me-2"></i>
                                            View My Registrations
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

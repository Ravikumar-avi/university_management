<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Action -->
    <record id="action_report_hall_ticket" model="ir.actions.report">
        <field name="name">Examination Hall Ticket</field>
        <field name="model">examination.hall.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">university_management.report_hall_ticket</field>
        <field name="report_file">university_management.report_hall_ticket</field>
        <field name="binding_model_id" ref="model_examination_hall_ticket"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_hall_ticket">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">

                        <!-- Header -->
                        <div class="row" style="border-bottom: 3px solid #2196F3; padding-bottom: 10px; margin-bottom: 20px;">
                            <div class="col-3 text-center">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 80px;"/>
                            </div>
                            <div class="col-6 text-center">
                                <h2 style="color: #2196F3; margin: 0; font-weight: bold;">
                                    <t t-esc="o.company_id.name"/>
                                </h2>
                                <p style="margin: 5px 0; font-size: 12pt;">
                                    <t t-esc="o.company_id.street"/>, <t t-esc="o.company_id.city"/>
                                </p>
                                <h3 style="margin: 10px 0; color: #333; text-transform: uppercase; background: #2196F3; color: white; padding: 5px;">
                                    EXAMINATION HALL TICKET
                                </h3>
                            </div>
                            <div class="col-3 text-right">
                                <div style="border: 2px solid #2196F3; padding: 5px; display: inline-block;">
                                    <img t-if="o.student_id.photo"
                                         t-att-src="image_data_uri(o.student_id.photo)"
                                         style="width: 100px; height: 120px; object-fit: cover;"/>
                                    <div t-else="" style="width: 100px; height: 120px; background: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                                        <span style="color: #999;">No Photo</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Hall Ticket Details -->
                        <div style="margin-bottom: 20px;">
                            <table class="table table-bordered" style="margin-bottom: 20px;">
                                <tr>
                                    <td style="width: 25%; background: #f5f5f5; font-weight: bold;">Hall Ticket Number</td>
                                    <td style="width: 25%; font-size: 14pt; color: #2196F3; font-weight: bold;">
                                        <t t-esc="o.name"/>
                                    </td>
                                    <td style="width: 25%; background: #f5f5f5; font-weight: bold;">Examination</td>
                                    <td style="width: 25%;">
                                        <t t-esc="o.examination_id.name"/>
                                    </td>
                                </tr>
                            </table>

                            <table class="table table-bordered">
                                <tr>
                                    <td style="width: 25%; background: #f5f5f5; font-weight: bold;">Student Name</td>
                                    <td style="width: 75%;" colspan="3">
                                        <span style="text-transform: uppercase; font-weight: bold;">
                                            <t t-esc="o.student_id.name"/>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background: #f5f5f5; font-weight: bold;">Registration Number</td>
                                    <td><t t-esc="o.student_id.registration_number"/></td>
                                    <td style="background: #f5f5f5; font-weight: bold;">Roll Number</td>
                                    <td><t t-esc="o.roll_number"/></td>
                                </tr>
                                <tr>
                                    <td style="background: #f5f5f5; font-weight: bold;">Program</td>
                                    <td><t t-esc="o.student_id.program_id.name"/></td>
                                    <td style="background: #f5f5f5; font-weight: bold;">Semester</td>
                                    <td><t t-esc="o.examination_id.semester_id.name"/></td>
                                </tr>
                                <tr>
                                    <td style="background: #f5f5f5; font-weight: bold;">Department</td>
                                    <td><t t-esc="o.student_id.department_id.name"/></td>
                                    <td style="background: #f5f5f5; font-weight: bold;">Academic Year</td>
                                    <td><t t-esc="o.examination_id.academic_year_id.name"/></td>
                                </tr>
                            </table>
                        </div>

                        <!-- Examination Schedule -->
                        <div style="margin-bottom: 20px;">
                            <h4 style="background: #2196F3; color: white; padding: 8px; margin-bottom: 10px;">
                                EXAMINATION SCHEDULE
                            </h4>
                            <table class="table table-bordered table-sm">
                                <thead style="background: #f5f5f5;">
                                    <tr>
                                        <th style="width: 10%;">S.No</th>
                                        <th style="width: 15%;">Date</th>
                                        <th style="width: 15%;">Day</th>
                                        <th style="width: 15%;">Time</th>
                                        <th style="width: 15%;">Subject Code</th>
                                        <th style="width: 30%;">Subject Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="counter" t-value="1"/>
                                    <t t-foreach="o.examination_id.timetable_ids" t-as="timetable">
                                        <tr>
                                            <td class="text-center"><t t-esc="counter"/></td>
                                            <td><t t-esc="timetable.exam_date"/></td>
                                            <td><t t-esc="timetable.day_of_week.title()"/></td>
                                            <td><t t-esc="timetable.start_time"/> - <t t-esc="timetable.end_time"/></td>
                                            <td><t t-esc="timetable.subject_id.code"/></td>
                                            <td><t t-esc="timetable.subject_id.name"/></td>
                                        </tr>
                                        <t t-set="counter" t-value="counter + 1"/>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Important Instructions -->
                        <div style="margin-bottom: 20px; border: 2px solid #FF5722; padding: 15px; background: #FFF3E0;">
                            <h4 style="color: #FF5722; margin-top: 0;">âš  IMPORTANT INSTRUCTIONS</h4>
                            <ol style="margin-bottom: 0; padding-left: 20px; line-height: 1.8;">
                                <li>This Hall Ticket must be presented at the examination center without fail.</li>
                                <li>Candidates should carry a valid photo ID proof (Aadhar Card/Driving License/Student ID).</li>
                                <li>Report to the examination center 30 minutes before the scheduled exam time.</li>
                                <li>Mobile phones and electronic devices are strictly prohibited in the exam hall.</li>
                                <li>Candidates involved in any malpractice will be expelled from the examination.</li>
                                <li>Use only blue/black ballpoint pen for writing answers.</li>
                                <li>Read the question paper instructions carefully before answering.</li>
                                <li>Rough work should be done only on the answer sheets provided.</li>
                            </ol>
                        </div>

                        <!-- Barcode and Signatures -->
                        <div class="row" style="margin-top: 30px;">
                            <div class="col-4">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 400, 60)"
                                     style="width: 100%;"/>
                            </div>
                            <div class="col-4 text-center">
                                <div style="border-top: 1px solid #333; margin-top: 40px; padding-top: 5px;">
                                    Student Signature
                                </div>
                            </div>
                            <div class="col-4 text-right">
                                <div style="border-top: 1px solid #333; margin-top: 40px; padding-top: 5px; text-align: center;">
                                    Controller of Examinations
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="text-center" style="margin-top: 20px; padding-top: 10px; border-top: 1px solid #ddd; font-size: 10pt; color: #666;">
                            <p style="margin: 0;">
                                <strong>Note:</strong> This is a computer-generated document and does not require a physical signature.
                            </p>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================= -->
    <!-- FEE DISCOUNT APPLICATION VIEWS -->
    <!-- ========================================= -->

    <!-- Form View -->
    <record id="fee_discount_application_view_form" model="ir.ui.view">
        <field name="name">fee.discount.application.view.form</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <form string="Discount Application">
                <header>
                    <button name="action_submit" string="Submit Application"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="oe_highlight"
                            invisible="state != 'submitted'"
                            groups="base.group_user"/>
                    <button name="action_reject" string="Reject"
                            type="object"
                            invisible="state != 'submitted'"
                            groups="base.group_user"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Approved"
                            bg_color="text-bg-success"
                            invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Rejected"
                            bg_color="text-bg-danger"
                            invisible="state != 'rejected'"/>

                    <div class="oe_title">
                        <label for="student_id" string="Student"/>
                        <h1>
                            <field name="student_id"
                                   placeholder="Select Student"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Application Details">
                            <field name="discount_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="application_date" widget="date"/>
                        </group>
                        <group string="Discount Amount">
                            <field name="applicable_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Reason &amp; Justification" name="reason">
                            <field name="reason"
                                   placeholder="Explain why this discount should be granted. Include relevant details about academic performance, financial situation, or other qualifying factors..."
                                   readonly="state in ['approved', 'rejected']"/>
                        </page>

                        <page string="Supporting Documents" name="documents">
                            <field name="document_ids" widget="many2many_binary" nolabel="1"/>
                            <div class="alert alert-info" role="alert"
                                 invisible="document_ids">
                                <p>
                                    <i class="fa fa-info-circle"/>
                                    Please upload supporting documents such as:
                                </p>
                                <ul>
                                    <li>Income certificate (for EWS/financial aid)</li>
                                    <li>Previous marksheets (for merit-based)</li>
                                    <li>Sports achievement certificates (for sports quota)</li>
                                    <li>Caste certificate (for category-based)</li>
                                    <li>Any other relevant documents</li>
                                </ul>
                            </div>
                        </page>

                        <page string="Approval Details" name="approval">
                            <group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approval_date" widget="date" readonly="1"/>
                                </group>
                            </group>
                            <separator string="Rejection Reason"
                                       invisible="state != 'rejected'"/>
                            <field name="rejection_reason"
                                   placeholder="Enter reason for rejection..."
                                   invisible="state != 'rejected'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="fee_discount_application_view_list" model="ir.ui.view">
        <field name="name">fee.discount.application.view.list</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <list string="Discount Applications"
                  default_order="application_date desc"
                  multi_edit="1"
                  sample="1">
                <field name="name"/>
                <field name="student_id"/>
                <field name="discount_id"/>
                <field name="application_date"/>
                <field name="applicable_amount" widget="monetary" sum="Total Discount"/>
                <field name="approved_by" optional="hide"/>
                <field name="approval_date" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="fee_discount_application_view_search" model="ir.ui.view">
        <field name="name">fee.discount.application.view.search</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <search string="Search Discount Applications">
                <field name="name"/>
                <field name="student_id"/>
                <field name="discount_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_submitted" string="Submitted"
                        domain="[('state', '=', 'submitted')]"/>
                <filter name="filter_approved" string="Approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter name="filter_rejected" string="Rejected"
                        domain="[('state', '=', 'rejected')]"/>

                <separator/>

                <filter name="filter_pending" string="Pending Approval"
                        domain="[('state', '=', 'submitted')]"/>

                <separator/>

                <filter name="filter_today" string="Applied Today"
                        domain="[('application_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('application_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('application_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_discount" string="Discount"
                            context="{'group_by': 'discount_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_approved_by" string="Approved By"
                            context="{'group_by': 'approved_by'}"/>
                    <filter name="group_by_application_date" string="Application Date"
                            context="{'group_by': 'application_date'}"/>
                </group>

                <searchpanel>
                    <field name="discount_id" string="Discount"
                           select="multi"
                           icon="fa-tag"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="fee_discount_application_view_kanban" model="ir.ui.view">
        <field name="name">fee.discount.application.view.kanban</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="discount_id"/>
                <field name="application_date"/>
                <field name="applicable_amount"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "submitted": "warning", "approved": "success", "rejected": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-muted="state == 'draft'"
                                               decoration-warning="state == 'submitted'"
                                               decoration-success="state == 'approved'"
                                               decoration-danger="state == 'rejected'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-tag text-primary"/>
                                            <field name="discount_id"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-info"/>
                                            <field name="application_date"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-money text-success"/>
                                            ₹ <field name="applicable_amount"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="fee_discount_application_view_calendar" model="ir.ui.view">
        <field name="name">fee.discount.application.view.calendar</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <calendar string="Discount Applications"
                      date_start="application_date"
                      color="state"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="student_id"/>
                <field name="name"/>
                <field name="discount_id"/>
                <field name="applicable_amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="fee_discount_application_view_pivot" model="ir.ui.view">
        <field name="name">fee.discount.application.view.pivot</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <pivot string="Application Analysis">
                <field name="discount_id" type="row"/>
                <field name="state" type="col"/>
                <field name="applicable_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="fee_discount_application_view_graph" model="ir.ui.view">
        <field name="name">fee.discount.application.view.graph</field>
        <field name="model">fee.discount.application</field>
        <field name="arch" type="xml">
            <graph string="Application Statistics" type="bar">
                <field name="discount_id"/>
                <field name="applicable_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fee_discount_application" model="ir.actions.act_window">
        <field name="name">Discount Applications</field>
        <field name="res_model">fee.discount.application</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_filter_submitted': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Discount Application
            </p>
            <p>
                Students can apply for various discount schemes. Applications can be reviewed,
                approved or rejected with automatic discount calculation based on fee structure.
            </p>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- FEE DISCOUNT VIEWS -->
    <!-- ========================================= -->

    <!-- Form View -->
    <record id="fee_discount_view_form" model="ir.ui.view">
        <field name="name">fee.discount.view.form</field>
        <field name="model">fee.discount</field>
        <field name="arch" type="xml">
            <form string="Fee Discount">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                        <button name="%(action_fee_discount_application)d" type="action"
                                class="oe_stat_button" icon="fa-file-text-o"
                                context="{'search_default_discount_id': id}">
                            <field name="total_applications" widget="statinfo"
                                   string="Applications"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" string="Discount Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Merit Scholarship 2025"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="code" placeholder="e.g., MERIT2025"/>
                            <field name="discount_type"/>
                            <field name="requires_approval" widget="boolean_toggle"/>
                        </group>
                        <group string="Validity Period">
                            <field name="start_date" widget="date"/>
                            <field name="end_date" widget="date"/>
                        </group>
                    </group>

                    <group string="Discount Calculation">
                        <group>
                            <field name="discount_method" widget="radio"/>
                            <field name="discount_percentage"
                                   invisible="discount_method != 'percentage'"
                                   placeholder="e.g., 50 for 50%"/>
                            <field name="discount_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   invisible="discount_method != 'fixed'"
                                   placeholder="e.g., 10000"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="fee_structure_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Eligibility" name="eligibility">
                            <group>
                                <group string="Programs">
                                    <field name="program_ids" widget="many2many_tags"
                                           options="{'no_create': True}"
                                           nolabel="1"/>
                                </group>
                                <group string="Academic &amp; Financial Criteria">
                                    <field name="min_percentage"
                                           placeholder="e.g., 85 for 85% minimum"/>
                                    <field name="max_income" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"
                                           placeholder="e.g., 500000 for max 5 lakhs"/>
                                </group>
                            </group>
                            <separator string="Detailed Eligibility Criteria"/>
                            <field name="eligibility_criteria"
                                   placeholder="Enter detailed eligibility requirements..."/>
                        </page>

                        <page string="Description" name="description">
                            <field name="description"
                                   placeholder="Enter detailed description about this discount scheme..."/>
                        </page>

                        <page string="Terms &amp; Conditions" name="terms">
                            <field name="terms_conditions"
                                   placeholder="Enter terms and conditions for this discount..."/>
                        </page>

                        <page string="Applications" name="applications">
                            <field name="application_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="student_id"/>
                                    <field name="application_date"/>
                                    <field name="applicable_amount" widget="monetary"/>
                                    <field name="state" widget="badge"
                                           decoration-muted="state == 'draft'"
                                           decoration-warning="state == 'submitted'"
                                           decoration-success="state == 'approved'"
                                           decoration-danger="state == 'rejected'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="fee_discount_view_list" model="ir.ui.view">
        <field name="name">fee.discount.view.list</field>
        <field name="model">fee.discount</field>
        <field name="arch" type="xml">
            <list string="Fee Discounts" multi_edit="1" sample="1">
                <field name="name"/>
                <field name="code"/>
                <field name="discount_type"/>
                <field name="discount_method"/>
                <field name="discount_percentage" optional="show"
                       invisible="discount_method != 'percentage'"/>
                <field name="discount_amount" widget="monetary" optional="show"
                       invisible="discount_method != 'fixed'"/>
                <field name="start_date" optional="hide"/>
                <field name="end_date" optional="hide"/>
                <field name="total_applications" optional="show"/>
                <field name="requires_approval" widget="boolean_toggle" optional="hide"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="fee_discount_view_search" model="ir.ui.view">
        <field name="name">fee.discount.view.search</field>
        <field name="model">fee.discount</field>
        <field name="arch" type="xml">
            <search string="Search Fee Discounts">
                <field name="name"/>
                <field name="code"/>
                <field name="discount_type"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactive"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_percentage" string="Percentage Based"
                        domain="[('discount_method', '=', 'percentage')]"/>
                <filter name="filter_fixed" string="Fixed Amount"
                        domain="[('discount_method', '=', 'fixed')]"/>

                <separator/>

                <filter name="filter_merit" string="Merit Based"
                        domain="[('discount_type', '=', 'merit')]"/>
                <filter name="filter_sports" string="Sports Quota"
                        domain="[('discount_type', '=', 'sports')]"/>
                <filter name="filter_ews" string="EWS"
                        domain="[('discount_type', '=', 'economically_weak')]"/>
                <filter name="filter_sibling" string="Sibling"
                        domain="[('discount_type', '=', 'sibling')]"/>

                <separator/>

                <filter name="filter_requires_approval" string="Requires Approval"
                        domain="[('requires_approval', '=', True)]"/>

                <separator/>

                <filter name="filter_valid_now" string="Currently Valid"
                        domain="[('start_date', '&lt;=', context_today().strftime('%Y-%m-%d')),
                                 '|', ('end_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('end_date', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_discount_type" string="Discount Type"
                            context="{'group_by': 'discount_type'}"/>
                    <filter name="group_by_discount_method" string="Discount Method"
                            context="{'group_by': 'discount_method'}"/>
                    <filter name="group_by_fee_structure" string="Fee Structure"
                            context="{'group_by': 'fee_structure_id'}"/>
                </group>

                <searchpanel>
                    <field name="discount_type" string="Type"
                           select="multi"
                           icon="fa-tag"/>
                    <field name="discount_method" string="Method"
                           select="multi"
                           icon="fa-calculator"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="fee_discount_view_kanban" model="ir.ui.view">
        <field name="name">fee.discount.view.kanban</field>
        <field name="model">fee.discount</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" quick_create="false" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="discount_type"/>
                <field name="discount_method"/>
                <field name="discount_percentage"/>
                <field name="discount_amount"/>
                <field name="total_applications"/>
                <field name="active"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-tag text-primary"/>
                                            <field name="discount_type"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-calculator text-success"/>
                                            <span t-if="record.discount_method.raw_value == 'percentage'">
                                                <field name="discount_percentage"/>%
                                            </span>
                                            <span t-else="">
                                                ₹ <field name="discount_amount"/>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <span class="badge text-bg-info">
                                                <i class="fa fa-file-text-o"/>
                                                <field name="total_applications"/> Apps
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span t-if="record.active.raw_value"
                                                  class="badge text-bg-success">
                                                <i class="fa fa-check"/> Active
                                            </span>
                                            <span t-else="" class="badge text-bg-secondary">
                                                <i class="fa fa-archive"/> Inactive
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fee_discount" model="ir.actions.act_window">
        <field name="name">Fee Discounts</field>
        <field name="res_model">fee.discount</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Fee Discount Scheme
            </p>
            <p>
                Define discount schemes for students based on merit, sports, financial need,
                or other criteria with automatic calculation and approval workflows.
            </p>
        </field>
    </record>



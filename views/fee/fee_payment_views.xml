<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="fee_payment_view_form" model="ir.ui.view">
        <field name="name">fee.payment.view.form</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <form string="Fee Payment">
                <header>
                    <button name="action_verify" string="Verify Payment"
                            type="object" class="oe_highlight"
                            invisible="state != 'pending'"
                            groups="base.group_user"/>
                    <button name="action_confirm_payment" string="Confirm Payment"
                            type="object" class="oe_highlight"
                            invisible="state != 'verified'"
                            confirm="This will confirm the payment and create invoice. Continue?"/>
                    <button name="action_print_receipt" string="Print Receipt"
                            type="object"
                            invisible="state not in ['paid', 'refunded']"
                            class="btn-primary"/>
                    <button name="action_mark_bounced" string="Mark as Bounced"
                            type="object"
                            invisible="state not in ['pending', 'verified'] or payment_method not in ['cheque', 'dd']"
                            confirm="Mark this cheque/DD as bounced?"/>
                    <button name="action_refund" string="Process Refund"
                            type="object"
                            invisible="state != 'paid'"
                            groups="base.group_user"
                            confirm="Process refund for this payment?"/>
                    <button name="action_cancel" string="Cancel Payment"
                            type="object"
                            invisible="state in ['paid', 'cancelled', 'refunded']"
                            confirm="Cancel this payment?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,pending,verified,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Paid"
                            bg_color="text-bg-success"
                            invisible="state != 'paid'"/>
                    <widget name="web_ribbon" title="Bounced"
                            bg_color="text-bg-danger"
                            invisible="state != 'bounced'"/>
                    <widget name="web_ribbon" title="Refunded"
                            bg_color="text-bg-warning"
                            invisible="state != 'refunded'"/>
                    <widget name="web_ribbon" title="Cancelled"
                            bg_color="text-bg-secondary"
                            invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <label for="student_id" string="Student"/>
                        <h1>
                            <field name="student_id"
                                   placeholder="Select Student"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Student Information">
                            <field name="registration_number" readonly="1"/>
                            <field name="program_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                        </group>
                        <group string="Fee Structure">
                            <field name="fee_structure_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="academic_year_id" readonly="1"/>
                            <field name="semester_id" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Payment Details">
                            <field name="payment_date" widget="date"/>
                            <field name="due_date" widget="date"/>
                            <field name="payment_method" widget="radio"/>
                        </group>
                        <group string="References">
                            <field name="installment_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="discount_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="scholarship_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group string="Amount Breakdown">
                        <group>
                            <field name="amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="late_fee" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="discount_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="total_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"
                                   class="oe_subtotal_footer_separator"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Payment Information" name="payment_info">
                            <group>
                                <group string="Payment Reference">
                                    <field name="payment_reference"/>
                                    <field name="cheque_number"
                                           invisible="payment_method not in ['cheque', 'dd']"/>
                                    <field name="cheque_date" widget="date"
                                           invisible="payment_method not in ['cheque', 'dd']"/>
                                    <field name="bank_name"
                                           invisible="payment_method not in ['cheque', 'dd', 'bank_transfer', 'netbanking']"/>
                                </group>
                                <group string="Collection Details">
                                    <field name="collected_by"/>
                                    <field name="receipt_printed" widget="boolean"/>
                                    <field name="receipt_sent" widget="boolean"/>
                                </group>
                            </group>
                        </page>

                        <page string="Verification" name="verification">
                            <group>
                                <group>
                                    <field name="verified_by" readonly="1"/>
                                    <field name="verification_date" widget="date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Invoice" name="invoice">
                            <group>
                                <group>
                                    <field name="invoice_id" readonly="1"/>
                                    <field name="invoice_status" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Refund Details" name="refund"
                              invisible="state != 'refunded'">
                            <group>
                                <group>
                                    <field name="refund_date" widget="date" readonly="1"/>
                                    <field name="refund_amount" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </group>
                            <separator string="Refund Reason"/>
                            <field name="refund_reason"
                                   placeholder="Enter reason for refund..."/>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes"
                                   placeholder="Enter any additional notes about this payment..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="fee_payment_view_list" model="ir.ui.view">
        <field name="name">fee.payment.view.list</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <list string="Fee Payments"
                  default_order="payment_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'paid'"
                  decoration-danger="state == 'bounced'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="registration_number" optional="show"/>
                <field name="program_id" optional="hide"/>
                <field name="department_id" optional="hide"/>
                <field name="fee_structure_id" optional="hide"/>
                <field name="payment_date"/>
                <field name="due_date" optional="hide"/>
                <field name="payment_method"/>
                <field name="amount" widget="monetary" sum="Total Amount"/>
                <field name="late_fee" widget="monetary" sum="Total Late Fee" optional="hide"/>
                <field name="discount_amount" widget="monetary" sum="Total Discount" optional="hide"/>
                <field name="total_amount" widget="monetary" sum="Grand Total"/>
                <field name="payment_reference" optional="hide"/>
                <field name="collected_by" optional="hide"/>
                <field name="verified_by" optional="hide"/>
                <field name="receipt_printed" widget="boolean_toggle" optional="hide"/>
                <field name="receipt_sent" widget="boolean_toggle" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-warning="state in ['pending', 'verified']"
                       decoration-success="state == 'paid'"
                       decoration-danger="state == 'bounced'"
                       decoration-info="state == 'refunded'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="fee_payment_view_search" model="ir.ui.view">
        <field name="name">fee.payment.view.search</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <search string="Search Fee Payments">
                <field name="name"/>
                <field name="student_id"/>
                <field name="registration_number"/>
                <field name="payment_reference"/>
                <field name="fee_structure_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_pending" string="Pending Verification"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_verified" string="Verified"
                        domain="[('state', '=', 'verified')]"/>
                <filter name="filter_paid" string="Paid"
                        domain="[('state', '=', 'paid')]"/>
                <filter name="filter_bounced" string="Bounced"
                        domain="[('state', '=', 'bounced')]"/>
                <filter name="filter_refunded" string="Refunded"
                        domain="[('state', '=', 'refunded')]"/>
                <filter name="filter_cancelled" string="Cancelled"
                        domain="[('state', '=', 'cancelled')]"/>

                <separator/>

                <filter name="filter_cash" string="Cash"
                        domain="[('payment_method', '=', 'cash')]"/>
                <filter name="filter_online" string="Online"
                        domain="[('payment_method', '=', 'online')]"/>
                <filter name="filter_upi" string="UPI"
                        domain="[('payment_method', '=', 'upi')]"/>
                <filter name="filter_cheque" string="Cheque"
                        domain="[('payment_method', '=', 'cheque')]"/>

                <separator/>

                <filter name="filter_receipt_not_printed" string="Receipt Not Printed"
                        domain="[('receipt_printed', '=', False), ('state', '=', 'paid')]"/>
                <filter name="filter_receipt_not_sent" string="Receipt Not Sent"
                        domain="[('receipt_sent', '=', False), ('state', '=', 'paid')]"/>

                <separator/>

                <filter name="filter_today" string="Paid Today"
                        domain="[('payment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('payment_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('payment_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('payment_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('payment_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_fee_structure" string="Fee Structure"
                            context="{'group_by': 'fee_structure_id'}"/>
                    <filter name="group_by_payment_method" string="Payment Method"
                            context="{'group_by': 'payment_method'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_collected_by" string="Collected By"
                            context="{'group_by': 'collected_by'}"/>
                    <filter name="group_by_payment_date" string="Payment Date"
                            context="{'group_by': 'payment_date'}"/>
                </group>

                <searchpanel>
                    <field name="academic_year_id" string="Academic Year"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="semester_id" string="Semester"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="payment_method" string="Payment Method"
                           select="multi"
                           icon="fa-credit-card"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="fee_payment_view_kanban" model="ir.ui.view">
        <field name="name">fee.payment.view.kanban</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="payment_date"/>
                <field name="payment_method"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="receipt_printed"/>
                <field name="receipt_sent"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "pending": "warning", "verified": "info", "paid": "success", "bounced": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-muted="state == 'draft'"
                                               decoration-warning="state in ['pending', 'verified']"
                                               decoration-success="state == 'paid'"
                                               decoration-danger="state == 'bounced'"
                                               decoration-info="state == 'refunded'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-primary"/>
                                            <field name="payment_date"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-credit-card text-success"/>
                                            <field name="payment_method"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-money text-warning"/>
                                            <strong>â‚¹ <field name="total_amount"/></strong>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <span t-if="record.receipt_printed.raw_value"
                                                  class="badge text-bg-success">
                                                <i class="fa fa-print"/> Printed
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span t-if="record.receipt_sent.raw_value"
                                                  class="badge text-bg-info">
                                                <i class="fa fa-envelope"/> Sent
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="fee_payment_view_calendar" model="ir.ui.view">
        <field name="name">fee.payment.view.calendar</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <calendar string="Payment Calendar"
                      date_start="payment_date"
                      color="payment_method"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="student_id"/>
                <field name="name"/>
                <field name="total_amount"/>
                <field name="payment_method"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="fee_payment_view_pivot" model="ir.ui.view">
        <field name="name">fee.payment.view.pivot</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <pivot string="Payment Analysis">
                <field name="payment_method" type="row"/>
                <field name="state" type="col"/>
                <field name="total_amount" type="measure"/>
                <field name="amount" type="measure"/>
                <field name="late_fee" type="measure"/>
                <field name="discount_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="fee_payment_view_graph" model="ir.ui.view">
        <field name="name">fee.payment.view.graph</field>
        <field name="model">fee.payment</field>
        <field name="arch" type="xml">
            <graph string="Payment Statistics" type="bar">
                <field name="payment_date" interval="month"/>
                <field name="total_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fee_payment" model="ir.actions.act_window">
        <field name="name">Fee Payments</field>
        <field name="res_model">fee.payment</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_today': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record a new Fee Payment
            </p>
            <p>
                Manage student fee payments with multiple payment methods, automatic verification,
                invoice generation, receipt printing, and email notifications.
            </p>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="fee_reminder_view_form" model="ir.ui.view">
        <field name="name">fee.reminder.view.form</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <form string="Fee Reminder">
                <header>
                    <button name="action_send_reminder" string="Send Reminder"
                            type="object" class="oe_highlight"
                            invisible="state != 'scheduled'"
                            confirm="This will send reminder to parents via email/SMS. Continue?"/>
                    <button name="action_schedule" string="Schedule"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_resend" string="Resend"
                            type="object"
                            invisible="state != 'sent'"
                            confirm="Resend this reminder to parents?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,sent"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Sent"
                            bg_color="text-bg-success"
                            invisible="state != 'sent'"/>
                    <widget name="web_ribbon" title="Failed"
                            bg_color="text-bg-danger"
                            invisible="state != 'failed'"/>

                    <div class="oe_title">
                        <label for="student_id" string="Student"/>
                        <h1>
                            <field name="student_id"
                                   placeholder="Select Student"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Student Information">
                            <field name="student_name" readonly="1"/>
                            <field name="registration_number" readonly="1"/>
                        </group>
                        <group string="Fee Structure">
                            <field name="fee_structure_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="total_fee" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"/>
                            <field name="due_date" widget="date" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Reminder Details">
                            <field name="reminder_type" widget="radio"/>
                            <field name="reminder_date" widget="date"/>
                            <field name="outstanding_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group string="Due Date Calculation">
                            <field name="days_before_due"
                                   invisible="reminder_type not in ['before_due']"/>
                            <field name="days_after_due"
                                   invisible="reminder_type not in ['after_due', 'second', 'final']"/>
                        </group>
                    </group>

                    <group string="Communication Preferences">
                        <group>
                            <field name="send_email" widget="boolean_toggle"/>
                            <field name="send_sms" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Recipients" name="recipients">
                            <group>
                                <field name="parent_ids" widget="many2many_tags"
                                       options="{'no_create': True}"
                                       readonly="1"/>
                            </group>
                            <group>
                                <group>
                                    <label for="recipient_emails" string="Email Addresses"/>
                                    <field name="recipient_emails" readonly="1" nolabel="1"/>
                                </group>
                                <group>
                                    <label for="recipient_phones" string="Phone Numbers"/>
                                    <field name="recipient_phones" readonly="1" nolabel="1"/>
                                </group>
                            </group>
                            <div class="alert alert-warning" role="alert"
                                 invisible="recipient_emails or recipient_phones">
                                <p>
                                    <i class="fa fa-exclamation-triangle"/>
                                    <strong>Warning:</strong> No parent contact details found for this student.
                                    Please update parent information before sending reminders.
                                </p>
                            </div>
                        </page>

                        <page string="Email Content" name="email_content"
                              invisible="not send_email">
                            <group>
                                <field name="email_subject" readonly="1"/>
                            </group>
                            <separator string="Email Body"/>
                            <field name="email_body" readonly="1" nolabel="1"/>
                        </page>

                        <page string="SMS Content" name="sms_content"
                              invisible="not send_sms">
                            <separator string="SMS Message"/>
                            <field name="sms_body" readonly="1" nolabel="1"
                                   placeholder="SMS message will be auto-generated..."/>
                        </page>

                        <page string="Communication Status" name="status">
                            <group>
                                <group string="Email Status">
                                    <field name="email_sent" widget="boolean"/>
                                    <field name="email_sent_date" widget="datetime"
                                           invisible="not email_sent"/>
                                </group>
                                <group string="SMS Status">
                                    <field name="sms_sent" widget="boolean"/>
                                    <field name="sms_sent_date" widget="datetime"
                                           invisible="not sms_sent"/>
                                </group>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes"
                                   placeholder="Enter any additional notes about this reminder..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="fee_reminder_view_list" model="ir.ui.view">
        <field name="name">fee.reminder.view.list</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <list string="Fee Reminders"
                  default_order="reminder_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'sent'"
                  decoration-danger="state == 'failed'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="student_name" optional="hide"/>
                <field name="registration_number" optional="show"/>
                <field name="fee_structure_id" optional="hide"/>
                <field name="reminder_date"/>
                <field name="due_date" optional="show"/>
                <field name="reminder_type"/>
                <field name="outstanding_amount" widget="monetary"/>
                <field name="send_email" widget="boolean_toggle" optional="show"/>
                <field name="send_sms" widget="boolean_toggle" optional="show"/>
                <field name="email_sent" widget="boolean_toggle" optional="show"/>
                <field name="sms_sent" widget="boolean_toggle" optional="show"/>
                <field name="recipient_emails" optional="hide"/>
                <field name="recipient_phones" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'scheduled'"
                       decoration-success="state == 'sent'"
                       decoration-danger="state == 'failed'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="fee_reminder_view_search" model="ir.ui.view">
        <field name="name">fee.reminder.view.search</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <search string="Search Fee Reminders">
                <field name="name"/>
                <field name="student_id"/>
                <field name="student_name"/>
                <field name="registration_number"/>
                <field name="fee_structure_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_scheduled" string="Scheduled"
                        domain="[('state', '=', 'scheduled')]"/>
                <filter name="filter_sent" string="Sent"
                        domain="[('state', '=', 'sent')]"/>
                <filter name="filter_failed" string="Failed"
                        domain="[('state', '=', 'failed')]"/>

                <separator/>

                <filter name="filter_before_due" string="Before Due Date"
                        domain="[('reminder_type', '=', 'before_due')]"/>
                <filter name="filter_on_due" string="On Due Date"
                        domain="[('reminder_type', '=', 'on_due')]"/>
                <filter name="filter_after_due" string="After Due Date"
                        domain="[('reminder_type', '=', 'after_due')]"/>
                <filter name="filter_second" string="Second Reminder"
                        domain="[('reminder_type', '=', 'second')]"/>
                <filter name="filter_final" string="Final Notice"
                        domain="[('reminder_type', '=', 'final')]"/>

                <separator/>

                <filter name="filter_email_pending" string="Email Pending"
                        domain="[('send_email', '=', True), ('email_sent', '=', False)]"/>
                <filter name="filter_sms_pending" string="SMS Pending"
                        domain="[('send_sms', '=', True), ('sms_sent', '=', False)]"/>

                <separator/>

                <filter name="filter_email_sent" string="Email Sent"
                        domain="[('email_sent', '=', True)]"/>
                <filter name="filter_sms_sent" string="SMS Sent"
                        domain="[('sms_sent', '=', True)]"/>

                <separator/>

                <filter name="filter_today" string="Reminder Today"
                        domain="[('reminder_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('reminder_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('reminder_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('reminder_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('reminder_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_fee_structure" string="Fee Structure"
                            context="{'group_by': 'fee_structure_id'}"/>
                    <filter name="group_by_reminder_type" string="Reminder Type"
                            context="{'group_by': 'reminder_type'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_reminder_date" string="Reminder Date"
                            context="{'group_by': 'reminder_date'}"/>
                </group>

                <searchpanel>
                    <field name="reminder_type" string="Type"
                           select="multi"
                           icon="fa-bell"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="fee_reminder_view_kanban" model="ir.ui.view">
        <field name="name">fee.reminder.view.kanban</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="reminder_date"/>
                <field name="reminder_type"/>
                <field name="outstanding_amount"/>
                <field name="state"/>
                <field name="email_sent"/>
                <field name="sms_sent"/>
                <field name="send_email"/>
                <field name="send_sms"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "scheduled": "info", "sent": "success", "failed": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-muted="state == 'draft'"
                                               decoration-info="state == 'scheduled'"
                                               decoration-success="state == 'sent'"
                                               decoration-danger="state == 'failed'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-primary"/>
                                            <field name="reminder_date"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-bell text-warning"/>
                                            <field name="reminder_type"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-money text-success"/>
                                            Outstanding: <strong>â‚¹ <field name="outstanding_amount"/></strong>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <span t-if="record.send_email.raw_value">
                                                <span t-if="record.email_sent.raw_value"
                                                      class="badge text-bg-success">
                                                    <i class="fa fa-envelope"/> Email Sent
                                                </span>
                                                <span t-else="" class="badge text-bg-warning">
                                                    <i class="fa fa-envelope"/> Email Pending
                                                </span>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span t-if="record.send_sms.raw_value">
                                                <span t-if="record.sms_sent.raw_value"
                                                      class="badge text-bg-success">
                                                    <i class="fa fa-mobile"/> SMS Sent
                                                </span>
                                                <span t-else="" class="badge text-bg-warning">
                                                    <i class="fa fa-mobile"/> SMS Pending
                                                </span>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="fee_reminder_view_calendar" model="ir.ui.view">
        <field name="name">fee.reminder.view.calendar</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <calendar string="Reminder Calendar"
                      date_start="reminder_date"
                      color="reminder_type"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="student_id"/>
                <field name="name"/>
                <field name="reminder_type"/>
                <field name="outstanding_amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="fee_reminder_view_pivot" model="ir.ui.view">
        <field name="name">fee.reminder.view.pivot</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <pivot string="Reminder Analysis">
                <field name="reminder_type" type="row"/>
                <field name="state" type="col"/>
                <field name="outstanding_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="fee_reminder_view_graph" model="ir.ui.view">
        <field name="name">fee.reminder.view.graph</field>
        <field name="model">fee.reminder</field>
        <field name="arch" type="xml">
            <graph string="Reminder Statistics" type="bar">
                <field name="reminder_date" interval="week"/>
                <field name="outstanding_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fee_reminder" model="ir.actions.act_window">
        <field name="name">Fee Reminders</field>
        <field name="res_model">fee.reminder</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_today': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Fee Reminder
            </p>
            <p>
                Automate fee payment reminders to parents via email and SMS with customizable
                reminder types (before due, on due, after due, second reminder, final notice).
            </p>
        </field>
    </record>


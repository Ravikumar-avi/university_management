<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="fee_installment_view_form" model="ir.ui.view">
        <field name="name">fee.installment.view.form</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <form string="Fee Installment">
                <header>
                    <button name="action_mark_paid" string="Mark as Paid"
                            type="object" class="oe_highlight"
                            invisible="state == 'paid'"
                            confirm="This will mark the installment as fully paid. Continue?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,partial,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Paid"
                            bg_color="text-bg-success"
                            invisible="state != 'paid'"/>
                    <widget name="web_ribbon" title="Overdue"
                            bg_color="text-bg-danger"
                            invisible="state != 'overdue'"/>
                    <widget name="web_ribbon" title="Partial"
                            bg_color="text-bg-warning"
                            invisible="state != 'partial'"/>

                    <div class="oe_title">
                        <label for="student_id" string="Student"/>
                        <h1>
                            <field name="student_id"
                                   placeholder="Select Student"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Installment Details">
                            <field name="fee_structure_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="installment_number"/>
                            <field name="due_date" widget="date"/>
                        </group>
                        <group string="Amount Details">
                            <field name="installment_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="paid_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="balance_amount" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"
                                   class="oe_subtotal_footer_separator"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Payment Information">
                            <field name="payment_id" readonly="1"/>
                            <field name="paid_date" widget="date" readonly="1"/>
                        </group>
                        <group string="Late Fee &amp; Overdue">
                            <field name="is_overdue" widget="boolean" readonly="1"/>
                            <field name="days_overdue" readonly="1"
                                   invisible="not is_overdue"/>
                            <field name="late_fee" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   invisible="not is_overdue"/>
                        </group>
                    </group>

                    <div class="alert alert-danger" role="alert"
                         invisible="not is_overdue or state == 'paid'">
                        <p>
                            <i class="fa fa-exclamation-triangle"/>
                            <strong>Payment Overdue!</strong>
                        </p>
                        <p>
                            This installment is overdue by <strong><field name="days_overdue" readonly="1"/> days</strong>.
                            Please make the payment immediately to avoid additional penalties.
                        </p>
                    </div>

                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes"
                                   placeholder="Enter any additional notes about this installment..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="fee_installment_view_list" model="ir.ui.view">
        <field name="name">fee.installment.view.list</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <list string="Fee Installments"
                  default_order="due_date"
                  multi_edit="1"
                  sample="1"
                  decoration-danger="is_overdue and state != 'paid'"
                  decoration-success="state == 'paid'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="fee_structure_id" optional="hide"/>
                <field name="installment_number"/>
                <field name="due_date" widget="date"/>
                <field name="installment_amount" widget="monetary" sum="Total Amount"/>
                <field name="paid_amount" widget="monetary" sum="Total Paid"/>
                <field name="balance_amount" widget="monetary" sum="Total Balance"/>
                <field name="paid_date" optional="hide"/>
                <field name="is_overdue" widget="boolean_toggle" optional="show"/>
                <field name="days_overdue" optional="show"/>
                <field name="late_fee" widget="monetary" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'pending'"
                       decoration-warning="state in ['partial', 'overdue']"
                       decoration-success="state == 'paid'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="fee_installment_view_search" model="ir.ui.view">
        <field name="name">fee.installment.view.search</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <search string="Search Fee Installments">
                <field name="name"/>
                <field name="student_id"/>
                <field name="fee_structure_id"/>

                <separator/>

                <filter name="filter_pending" string="Pending"
                        domain="[('state', '=', 'pending')]"/>
                <filter name="filter_partial" string="Partially Paid"
                        domain="[('state', '=', 'partial')]"/>
                <filter name="filter_paid" string="Paid"
                        domain="[('state', '=', 'paid')]"/>
                <filter name="filter_overdue" string="Overdue"
                        domain="[('state', '=', 'overdue')]"/>

                <separator/>

                <filter name="filter_unpaid" string="Unpaid"
                        domain="[('state', 'in', ['pending', 'partial', 'overdue'])]"/>

                <separator/>

                <filter name="filter_is_overdue" string="Overdue Payments"
                        domain="[('is_overdue', '=', True), ('state', '!=', 'paid')]"/>

                <separator/>

                <filter name="filter_due_today" string="Due Today"
                        domain="[('due_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_due_this_week" string="Due This Week"
                        domain="[('due_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('due_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_due_this_month" string="Due This Month"
                        domain="[('due_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('due_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_fee_structure" string="Fee Structure"
                            context="{'group_by': 'fee_structure_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_due_date" string="Due Date"
                            context="{'group_by': 'due_date'}"/>
                    <filter name="group_by_paid_date" string="Paid Date"
                            context="{'group_by': 'paid_date'}"/>
                </group>

                <searchpanel>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                    <field name="payment_id" string="Payment"
                           select="multi"
                           icon="fa-credit-card"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="fee_installment_view_kanban" model="ir.ui.view">
        <field name="name">fee.installment.view.kanban</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="installment_number"/>
                <field name="due_date"/>
                <field name="installment_amount"/>
                <field name="paid_amount"/>
                <field name="balance_amount"/>
                <field name="is_overdue"/>
                <field name="days_overdue"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"pending": "muted", "partial": "warning", "paid": "success", "overdue": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            Installment #<field name="installment_number"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-muted="state == 'pending'"
                                               decoration-warning="state in ['partial', 'overdue']"
                                               decoration-success="state == 'paid'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-primary"/>
                                            Due: <field name="due_date"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-money text-success"/>
                                            ₹ <field name="installment_amount"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <span class="text-muted">Paid:</span>
                                            ₹ <field name="paid_amount"/>
                                        </div>
                                        <div class="col-6">
                                            <span class="text-muted">Balance:</span>
                                            <strong>₹ <field name="balance_amount"/></strong>
                                        </div>
                                    </div>

                                    <div class="row" t-if="record.is_overdue.raw_value and record.state.raw_value != 'paid'">
                                        <div class="col-12">
                                            <span class="badge text-bg-danger">
                                                <i class="fa fa-exclamation-triangle"/>
                                                Overdue by <field name="days_overdue"/> days
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="fee_installment_view_calendar" model="ir.ui.view">
        <field name="name">fee.installment.view.calendar</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <calendar string="Installment Due Dates"
                      date_start="due_date"
                      color="state"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="student_id"/>
                <field name="name"/>
                <field name="installment_number"/>
                <field name="installment_amount"/>
                <field name="balance_amount"/>
                <field name="state"/>
                <field name="is_overdue"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="fee_installment_view_pivot" model="ir.ui.view">
        <field name="name">fee.installment.view.pivot</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <pivot string="Installment Analysis">
                <field name="student_id" type="row"/>
                <field name="state" type="col"/>
                <field name="installment_amount" type="measure"/>
                <field name="paid_amount" type="measure"/>
                <field name="balance_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="fee_installment_view_graph" model="ir.ui.view">
        <field name="name">fee.installment.view.graph</field>
        <field name="model">fee.installment</field>
        <field name="arch" type="xml">
            <graph string="Installment Statistics" type="bar" stacked="1">
                <field name="due_date" interval="month"/>
                <field name="balance_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fee_installment" model="ir.actions.act_window">
        <field name="name">Fee Installments</field>
        <field name="res_model">fee.installment</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_unpaid': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Fee Installment Plan
            </p>
            <p>
                Manage student fee installments with automatic tracking of due dates,
                payments, overdue status, late fees, and balance calculations.
            </p>
        </field>
    </record>


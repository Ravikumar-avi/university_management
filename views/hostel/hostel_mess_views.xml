<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Hostel Mess -->
    <record id="hostel_mess_view_form" model="ir.ui.view">
        <field name="name">hostel.mess.view.form</field>
        <field name="model">hostel.mess</field>
        <field name="arch" type="xml">
            <form string="Hostel Mess">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="active,closed"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Active" bg_color="text-bg-success"
                            invisible="state != 'active'"/>
                    <widget name="web_ribbon" title="Closed" bg_color="text-bg-danger"
                            invisible="state != 'closed'"/>

                    <div class="oe_title">
                        <label for="name" string="Mess Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Central Mess, Gandhi Hostel Mess"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Mess Information">
                            <field name="code" placeholder="e.g., MESS-001, GM-MESS"/>
                            <field name="manager_id" widget="many2one_avatar_user"/>
                            <field name="seating_capacity"/>
                        </group>
                        <group string="Rating &amp; Status">
                            <field name="average_rating" widget="float" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group>
                        <group string="Attached Hostels">
                            <field name="hostel_ids" nolabel="1" widget="many2many_tags"
                                   placeholder="Select hostels using this mess..."/>
                        </group>
                    </group>

                    <group>
                        <group string="Meal Timings">
                            <field name="breakfast_time" placeholder="e.g., 07:00 AM - 09:00 AM"/>
                            <field name="lunch_time" placeholder="e.g., 12:00 PM - 02:00 PM"/>
                            <field name="dinner_time" placeholder="e.g., 07:00 PM - 09:00 PM"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Weekly Menu" name="menu">
                            <field name="menu_ids" nolabel="1">
                                <list string="Menu Items" editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="meal_type"/>
                                    <field name="item_ids"/>
                                </list>
                            </field>
                        </page>

                        <page string="Feedback" name="feedback">
                            <field name="feedback_ids" nolabel="1">
                                <list string="Feedback">
                                    <field name="student_id"/>
                                    <field name="feedback_date"/>
                                    <field name="rating" widget="priority"/>
                                    <field name="rating"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View - Hostel Mess -->
    <record id="hostel_mess_view_list" model="ir.ui.view">
        <field name="name">hostel.mess.view.list</field>
        <field name="model">hostel.mess</field>
        <field name="arch" type="xml">
            <list string="Hostel Mess"
                  default_order="name"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'active'"
                  decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="code"/>
                <field name="hostel_ids" widget="many2many_tags" optional="show"/>
                <field name="manager_id" widget="many2one_avatar_user" optional="show"/>
                <field name="seating_capacity" optional="show"/>
                <field name="average_rating" widget="float" optional="show"/>
                <field name="breakfast_time" optional="hide"/>
                <field name="lunch_time" optional="hide"/>
                <field name="dinner_time" optional="hide"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-muted="state == 'closed'"/>
            </list>
        </field>
    </record>

    <!-- Search View - Hostel Mess -->
    <record id="hostel_mess_view_search" model="ir.ui.view">
        <field name="name">hostel.mess.view.search</field>
        <field name="model">hostel.mess</field>
        <field name="arch" type="xml">
            <search string="Search Mess">
                <field name="name"/>
                <field name="code"/>
                <field name="hostel_ids"/>
                <field name="manager_id"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('state', '=', 'active')]"/>
                <filter name="filter_closed" string="Closed"
                        domain="[('state', '=', 'closed')]"/>

                <separator/>

                <filter name="filter_active_toggle" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactive"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_high_rated" string="High Rated (â‰¥ 4.0)"
                        domain="[('average_rating', '&gt;=', 4.0)]"/>
                <filter name="filter_low_rated" string="Low Rated (&lt; 3.0)"
                        domain="[('average_rating', '&lt;', 3.0)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_manager" string="Manager"
                            context="{'group_by': 'manager_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                </group>

                <searchpanel>
                    <field name="hostel_ids" string="Hostel"
                           select="multi"
                           icon="fa-building"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Hostel Mess -->
    <record id="hostel_mess_view_kanban" model="ir.ui.view">
        <field name="name">hostel.mess.view.kanban</field>
        <field name="model">hostel.mess</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="hostel_ids"/>
                <field name="manager_id"/>
                <field name="seating_capacity"/>
                <field name="breakfast_time"/>
                <field name="lunch_time"/>
                <field name="dinner_time"/>
                <field name="average_rating"/>
                <field name="state"/>
                <field name="active"/>

                <progressbar field="state"
                             colors='{"active": "success", "closed": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'active'">
                                <span class="text-bg-success">Active</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'closed'">
                                <span class="text-bg-danger">Closed</span>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mt-3">
                                    <div class="row mb-2" t-if="record.hostel_ids.raw_value">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="mb-1">
                                                    <i class="fa fa-building text-primary"/>
                                                    <strong>Hostels:</strong> <field name="hostel_ids" widget="many2many_tags"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="mb-1" t-if="record.manager_id.raw_value">
                                                    <i class="fa fa-user-circle text-success"/>
                                                    <strong>Manager:</strong> <field name="manager_id" widget="many2one_avatar_user"/>
                                                </div>
                                                <div class="mb-1" t-if="record.seating_capacity.raw_value">
                                                    <i class="fa fa-users text-info"/>
                                                    <strong>Capacity:</strong> <field name="seating_capacity"/> seats
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="mb-1">
                                                    <i class="fa fa-coffee text-warning"/>
                                                    <strong>Breakfast:</strong> <field name="breakfast_time"/>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fa fa-cutlery text-primary"/>
                                                    <strong>Lunch:</strong> <field name="lunch_time"/>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fa fa-moon-o text-info"/>
                                                    <strong>Dinner:</strong> <field name="dinner_time"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.average_rating.raw_value &gt; 0">
                                        <div class="col-12">
                                            <div class="card bg-warning text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0">
                                                        <i class="fa fa-star"/> <field name="average_rating" widget="float"/> / 5.0
                                                    </h6>
                                                    <small>Average Rating</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'active'"
                                               decoration-muted="state == 'closed'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hostel_mess" model="ir.actions.act_window">
        <field name="name">Mess/Canteen</field>
        <field name="res_model">hostel.mess</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Hostel Mess/Canteen
            </p>
            <p>
                Manage hostel mess/canteen facilities. Enter name (required, tracked, e.g., "Central
                Mess", "Gandhi Hostel Mess"). Enter code (required, unique constraint, e.g., "MESS-001",
                "GM-MESS"). Select hostel_ids (Many2many to hostel.hostel, tags widget, placeholder,
                can attach multiple hostels to one mess). Select manager_id ("Mess Manager", res.users,
                tracked, avatar widget). Enter seating_capacity (integer, how many can sit at once).
                Enter 3 meal timings (char fields with defaults): breakfast_time (default "07:00 AM -
                09:00 AM"), lunch_time (default "12:00 PM - 02:00 PM"), dinner_time (default "07:00 PM -
                09:00 PM"). Weekly Menu page: menu_ids One2many to mess.menu (editable list inline with
                day, meal_type, items fields). Feedback page: feedback_ids One2many to mess.feedback
                (list view with student_id, date, rating priority widget, feedback fields). System
                computes average_rating (float, readonly, from feedback_ids.rating sum divided by count).
                2-state selection (default 'active', tracked): Active (mess operational, green), Closed
                (mess shut down, red). Active boolean (default True, toggle widget). Unique constraint
                on code. Ordered alphabetically by name. Full chatter support for communication &amp;
                tracking.
            </p>
        </field>
    </record>


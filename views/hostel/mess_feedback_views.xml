<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Mess Feedback -->
    <record id="mess_feedback_view_form" model="ir.ui.view">
        <field name="name">mess.feedback.view.form</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <form string="Mess Feedback">
                <sheet>
                    <div class="oe_title">
                        <label for="student_id" string="Student Feedback"/>
                        <h1>
                            <field name="student_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Feedback Details">
                            <field name="mess_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="feedback_date"/>
                            <field name="rating" widget="priority"/>
                        </group>
                    </group>

                    <group string="Detailed Ratings">
                        <group>
                            <field name="food_quality" widget="priority"/>
                            <field name="taste" widget="priority"/>
                        </group>
                        <group>
                            <field name="cleanliness" widget="priority"/>
                            <field name="service" widget="priority"/>
                        </group>
                    </group>

                    <group>
                        <field name="comments" nolabel="1"
                               placeholder="Enter your comments, suggestions, or specific issues..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View - Mess Feedback -->
    <record id="mess_feedback_view_list" model="ir.ui.view">
        <field name="name">mess.feedback.view.list</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <list string="Mess Feedback"
                  default_order="feedback_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="rating == '5'"
                  decoration-primary="rating == '4'"
                  decoration-muted="rating == '3'"
                  decoration-warning="rating == '2'"
                  decoration-danger="rating == '1'">
                <field name="feedback_date"/>
                <field name="student_id"/>
                <field name="mess_id"/>
                <field name="rating" widget="priority"/>
                <field name="food_quality" widget="priority" optional="show"/>
                <field name="taste" widget="priority" optional="show"/>
                <field name="cleanliness" widget="priority" optional="hide"/>
                <field name="service" widget="priority" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View - Mess Feedback -->
    <record id="mess_feedback_view_search" model="ir.ui.view">
        <field name="name">mess.feedback.view.search</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <search string="Search Feedback">
                <field name="student_id"/>
                <field name="mess_id"/>
                <field name="feedback_date"/>

                <separator/>

                <filter name="filter_today" string="Today"
                        domain="[('feedback_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('feedback_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('feedback_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <filter name="filter_excellent" string="Excellent (5★)"
                        domain="[('rating', '=', '5')]"/>
                <filter name="filter_good" string="Good (4★)"
                        domain="[('rating', '=', '4')]"/>
                <filter name="filter_average" string="Average (3★)"
                        domain="[('rating', '=', '3')]"/>
                <filter name="filter_poor" string="Poor (2★)"
                        domain="[('rating', '=', '2')]"/>
                <filter name="filter_very_poor" string="Very Poor (1★)"
                        domain="[('rating', '=', '1')]"/>

                <separator/>

                <filter name="filter_high_rated" string="High Rated (4★+)"
                        domain="[('rating', 'in', ['4', '5'])]"/>
                <filter name="filter_low_rated" string="Low Rated (1-2★)"
                        domain="[('rating', 'in', ['1', '2'])]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_feedback_date" string="Feedback Date"
                            context="{'group_by': 'feedback_date'}"/>
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_mess" string="Mess"
                            context="{'group_by': 'mess_id'}"/>
                    <filter name="group_by_rating" string="Rating"
                            context="{'group_by': 'rating'}"/>
                </group>

                <searchpanel>
                    <field name="mess_id" string="Mess"
                           select="multi"
                           icon="fa-cutlery"/>
                    <field name="rating" string="Rating"
                           select="multi"
                           icon="fa-star"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Mess Feedback -->
    <record id="mess_feedback_view_kanban" model="ir.ui.view">
        <field name="name">mess.feedback.view.kanban</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="rating"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="student_id"/>
                <field name="mess_id"/>
                <field name="feedback_date"/>
                <field name="rating"/>
                <field name="food_quality"/>
                <field name="taste"/>
                <field name="cleanliness"/>
                <field name="service"/>
                <field name="comments"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" t-if="record.rating.raw_value == '5'">
                                <span class="text-bg-success">Excellent</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.rating.raw_value == '4'">
                                <span class="text-bg-primary">Good</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.rating.raw_value == '3'">
                                <span class="text-bg-secondary">Average</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.rating.raw_value == '2'">
                                <span class="text-bg-warning">Poor</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.rating.raw_value == '1'">
                                <span class="text-bg-danger">Very Poor</span>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-user text-primary"/> <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <i class="fa fa-calendar"/> <field name="feedback_date"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mt-3">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="card bg-primary text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0">
                                                        <i class="fa fa-cutlery"/> <field name="mess_id"/>
                                                    </h6>
                                                    <small>Mess</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div t-if="record.rating.raw_value == '5'" class="card bg-success text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0">
                                                        <i class="fa fa-star"/> <i class="fa fa-star"/> <i class="fa fa-star"/> <i class="fa fa-star"/> <i class="fa fa-star"/>
                                                    </h5>
                                                    <small>Excellent</small>
                                                </div>
                                            </div>
                                            <div t-if="record.rating.raw_value == '4'" class="card bg-primary text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0">
                                                        <i class="fa fa-star"/> <i class="fa fa-star"/> <i class="fa fa-star"/> <i class="fa fa-star"/>
                                                    </h5>
                                                    <small>Good</small>
                                                </div>
                                            </div>
                                            <div t-if="record.rating.raw_value == '3'" class="card bg-secondary text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0">
                                                        <i class="fa fa-star"/> <i class="fa fa-star"/> <i class="fa fa-star"/>
                                                    </h5>
                                                    <small>Average</small>
                                                </div>
                                            </div>
                                            <div t-if="record.rating.raw_value == '2'" class="card bg-warning text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0">
                                                        <i class="fa fa-star"/> <i class="fa fa-star"/>
                                                    </h5>
                                                    <small>Poor</small>
                                                </div>
                                            </div>
                                            <div t-if="record.rating.raw_value == '1'" class="card bg-danger text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0">
                                                        <i class="fa fa-star"/>
                                                    </h5>
                                                    <small>Very Poor</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <div class="bg-light p-2 rounded text-center">
                                                <strong class="text-primary">Food Quality</strong>
                                                <div><field name="food_quality" widget="priority"/></div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="bg-light p-2 rounded text-center">
                                                <strong class="text-success">Taste</strong>
                                                <div><field name="taste" widget="priority"/></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <div class="bg-light p-2 rounded text-center">
                                                <strong class="text-info">Cleanliness</strong>
                                                <div><field name="cleanliness" widget="priority"/></div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="bg-light p-2 rounded text-center">
                                                <strong class="text-warning">Service</strong>
                                                <div><field name="service" widget="priority"/></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.comments.raw_value">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <strong class="text-muted">
                                                    <i class="fa fa-comment"/> Comments:
                                                </strong>
                                                <div><field name="comments"/></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View - Mess Feedback -->
    <record id="mess_feedback_view_calendar" model="ir.ui.view">
        <field name="name">mess.feedback.view.calendar</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <calendar string="Feedback Calendar"
                      date_start="feedback_date"
                      mode="month"
                      color="rating"
                      quick_create="0"
                      event_limit="5">
                <field name="student_id"/>
                <field name="mess_id"/>
                <field name="rating"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View - Mess Feedback -->
    <record id="mess_feedback_view_pivot" model="ir.ui.view">
        <field name="name">mess.feedback.view.pivot</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <pivot string="Feedback Analysis">
                <field name="mess_id" type="row"/>
                <field name="rating" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View - Mess Feedback -->
    <record id="mess_feedback_view_graph" model="ir.ui.view">
        <field name="name">mess.feedback.view.graph</field>
        <field name="model">mess.feedback</field>
        <field name="arch" type="xml">
            <graph string="Feedback Statistics" type="bar">
                <field name="rating"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mess_feedback" model="ir.actions.act_window">
        <field name="name">Mess Feedback</field>
        <field name="res_model">mess.feedback</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Submit Mess Feedback
            </p>
            <p>
                Collect and manage mess food feedback from students. Select student_id (Many2one to
                student.student, required, tracked, no-create). Select mess_id (Many2one to hostel.mess,
                required, no-create). Enter feedback_date (date, default today). Select rating (5 options,
                required, tracked, priority widget): 1 (Very Poor), 2 (Poor), 3 (Average), 4 (Good), 5
                (Excellent). Enter 4 detailed category ratings (same 5 options each, priority widgets):
                food_quality (Food Quality), taste (Taste), cleanliness (Cleanliness), service (Service).
                Enter comments (text "Comments/Suggestions", detailed feedback). List view shows 5-color
                row decorations: Green (5 excellent), Blue (4 good), Gray (3 average), Yellow (2 poor),
                Red (1 very poor). Kanban view shows dynamic quintuple ribbon (5 rating-based ribbons) and
                rating cards with stars. Calendar view displays feedback by month (date_start: feedback_date,
                color by rating, event_limit 5). Pivot view for analysis (mess × rating matrix). Graph view
                for statistics (bar chart by rating). Ordered by feedback_date desc (most recent first).
                Use for quality improvement, monitoring, and student satisfaction tracking. Full chatter
                support for communication and tracking.
            </p>
        </field>
    </record>


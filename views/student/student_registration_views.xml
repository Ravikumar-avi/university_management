<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="student_registration_view_form" model="ir.ui.view">
        <field name="name">student.registration.view.form</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <form string="Course Registration">
                <header>
                    <button name="action_register" string="Register Courses"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="oe_highlight"
                            invisible="state != 'registered'"
                            groups="base.group_user"/>
                    <button name="action_cancel" string="Cancel Registration"
                            type="object"
                            invisible="state in ['cancelled', 'draft']"
                            confirm="This will remove the student from all registered courses. Continue?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,registered,approved"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Approved"
                            bg_color="text-bg-success"
                            invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Cancelled"
                            bg_color="text-bg-danger"
                            invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <label for="student_id" string="Student"/>
                        <h1>
                            <field name="student_id"
                                   placeholder="Select Student"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Student Information">
                            <field name="registration_number" readonly="1"/>
                            <field name="program_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                        </group>
                        <group string="Registration Details">
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="semester_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="registration_date" widget="date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Registered Courses" name="courses">
                            <field name="course_ids" widget="many2many"
                                   options="{'no_create': True}"
                                   readonly="state in ['approved', 'cancelled']">
                                <list editable="bottom">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="course_type"/>
                                    <field name="credits"/>
                                    <field name="department_id"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_credits" readonly="1"
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                            <div class="alert alert-warning" role="alert"
                                 invisible="total_credits &lt;= 30">
                                <i class="fa fa-exclamation-triangle"/>
                                <strong>Warning:</strong> Total credits exceed the maximum limit of 30 credits per semester!
                            </div>
                        </page>

                        <page string="Approval Details" name="approval">
                            <group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                </group>
                                <group>
                                    <field name="approval_date" widget="date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes"
                                   placeholder="Enter any additional information about the registration..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="student_registration_view_list" model="ir.ui.view">
        <field name="name">student.registration.view.list</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <list string="Course Registrations"
                  default_order="registration_date desc"
                  multi_edit="1"
                  sample="1">
                <field name="name"/>
                <field name="student_id"/>
                <field name="registration_number" optional="show"/>
                <field name="program_id" optional="hide"/>
                <field name="department_id" optional="hide"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="registration_date"/>
                <field name="total_credits" sum="Total Credits" optional="show"/>
                <field name="approved_by" optional="hide"/>
                <field name="approval_date" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'registered'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="student_registration_view_search" model="ir.ui.view">
        <field name="name">student.registration.view.search</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <search string="Search Course Registrations">
                <field name="name" string="Registration"
                       filter_domain="['|', ('name', 'ilike', self), ('student_id', 'ilike', self)]"/>
                <field name="student_id"/>
                <field name="registration_number"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_registered" string="Registered"
                        domain="[('state', '=', 'registered')]"/>
                <filter name="filter_approved" string="Approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter name="filter_cancelled" string="Cancelled"
                        domain="[('state', '=', 'cancelled')]"/>

                <separator/>

                <filter name="filter_pending_approval" string="Pending Approval"
                        domain="[('state', '=', 'registered')]"/>

                <separator/>

                <filter name="filter_today" string="Registered Today"
                        domain="[('registration_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('registration_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('registration_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('registration_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('registration_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_semester" string="Semester"
                            context="{'group_by': 'semester_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_approved_by" string="Approved By"
                            context="{'group_by': 'approved_by'}"/>
                    <filter name="group_by_registration_date" string="Registration Date"
                            context="{'group_by': 'registration_date'}"/>
                </group>

                <searchpanel>
                    <field name="academic_year_id" string="Academic Year"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="semester_id" string="Semester"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-book"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="student_registration_view_kanban" model="ir.ui.view">
        <field name="name">student.registration.view.kanban</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="semester_id"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="registration_number"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="registration_date"/>
                <field name="total_credits"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "registered": "info", "approved": "success", "cancelled": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-muted="state == 'draft'"
                                               decoration-info="state == 'registered'"
                                               decoration-success="state == 'approved'"
                                               decoration-danger="state == 'cancelled'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-id-card text-primary"/>
                                            <field name="registration_number"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-info"/>
                                            <field name="registration_date"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-book text-success"/>
                                            <field name="academic_year_id"/> - <field name="semester_id"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-credit-card text-warning"/>
                                            <strong>Total Credits: <field name="total_credits"/></strong>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <span t-if="record.total_credits.raw_value &gt; 30"
                                                  class="badge text-bg-danger">
                                                <i class="fa fa-exclamation-triangle"/> Exceeds Limit
                                            </span>
                                            <span t-elif="record.total_credits.raw_value &gt; 24"
                                                  class="badge text-bg-warning">
                                                <i class="fa fa-warning"/> High Load
                                            </span>
                                            <span t-elif="record.total_credits.raw_value &gt; 0"
                                                  class="badge text-bg-success">
                                                <i class="fa fa-check"/> Normal Load
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="student_registration_view_calendar" model="ir.ui.view">
        <field name="name">student.registration.view.calendar</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <calendar string="Course Registrations"
                      date_start="registration_date"
                      color="state"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="student_id"/>
                <field name="name"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="total_credits"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="student_registration_view_pivot" model="ir.ui.view">
        <field name="name">student.registration.view.pivot</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <pivot string="Registration Analysis">
                <field name="academic_year_id" type="row"/>
                <field name="semester_id" type="row"/>
                <field name="program_id" type="col"/>
                <field name="total_credits" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="student_registration_view_graph" model="ir.ui.view">
        <field name="name">student.registration.view.graph</field>
        <field name="model">student.registration</field>
        <field name="arch" type="xml">
            <graph string="Registration Statistics" type="bar">
                <field name="semester_id"/>
                <field name="total_credits" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_student_registration" model="ir.actions.act_window">
        <field name="name">Course Registrations</field>
        <field name="res_model">student.registration</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_registered': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Course Registration
            </p>
            <p>
                Manage student course registrations for each semester, track credits,
                approve registrations, and automatically enroll students in selected courses.
            </p>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="student_attendance_view_form" model="ir.ui.view">
        <field name="name">student.attendance.view.form</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <form string="Student Attendance">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="present,absent,late"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="student_id" string="Student"/>
                        <h1>
                            <field name="student_id"
                                   placeholder="Select Student"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Student Information">
                            <field name="registration_number" readonly="1"/>
                            <field name="program_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="batch_id" readonly="1"/>
                        </group>
                        <group string="Attendance Details">
                            <field name="date" widget="date"/>
                            <field name="course_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="subject_id" readonly="1"/>
                            <field name="faculty_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Time">
                            <field name="time_in" widget="float_time"/>
                            <field name="time_out" widget="float_time"/>
                        </group>
                        <group string="References">
                            <field name="timetable_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="leave_application_id"
                                   invisible="state != 'on_leave'"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <field name="remarks" placeholder="Enter any remarks or notes..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="student_attendance_view_list" model="ir.ui.view">
        <field name="name">student.attendance.view.list</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <list string="Student Attendance"
                  default_order="date desc"
                  multi_edit="1"
                  sample="1"
                  editable="top">
                <field name="date" widget="date"/>
                <field name="student_id"
                       options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="registration_number" optional="show"/>
                <field name="course_id"
                       options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="subject_id" optional="show"/>
                <field name="faculty_id" optional="show"/>
                <field name="program_id" optional="hide"/>
                <field name="department_id" optional="hide"/>
                <field name="batch_id" optional="hide"/>
                <field name="time_in" widget="float_time" optional="show"/>
                <field name="time_out" widget="float_time" optional="show"/>
                <field name="state" widget="badge"/>
                <field name="remarks" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="student_attendance_view_search" model="ir.ui.view">
        <field name="name">student.attendance.view.search</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Attendance">
                <field name="student_id" string="Student"
                       filter_domain="['|', ('student_id', 'ilike', self), ('registration_number', 'ilike', self)]"/>
                <field name="registration_number"/>
                <field name="course_id"/>
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="date"/>

                <separator/>

                <filter name="filter_present" string="Present"
                        domain="[('state', '=', 'present')]"/>
                <filter name="filter_absent" string="Absent"
                        domain="[('state', '=', 'absent')]"/>
                <filter name="filter_late" string="Late"
                        domain="[('state', '=', 'late')]"/>
                <filter name="filter_half_day" string="Half Day"
                        domain="[('state', '=', 'half_day')]"/>
                <filter name="filter_on_leave" string="On Leave"
                        domain="[('state', '=', 'on_leave')]"/>
                <filter name="filter_holiday" string="Holiday"
                        domain="[('state', '=', 'holiday')]"/>

                <separator/>

                <filter name="filter_today" string="Today"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_yesterday" string="Yesterday"
                        domain="[('date', '=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_last_month" string="Last Month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;=', (context_today() - relativedelta(months=1, day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_date" string="Date"
                            context="{'group_by': 'date'}"/>
                    <filter name="group_by_student" string="Student"
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_by_course" string="Course"
                            context="{'group_by': 'course_id'}"/>
                    <filter name="group_by_subject" string="Subject"
                            context="{'group_by': 'subject_id'}"/>
                    <filter name="group_by_faculty" string="Faculty"
                            context="{'group_by': 'faculty_id'}"/>
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_batch" string="Batch"
                            context="{'group_by': 'batch_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                </group>

                <searchpanel>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="batch_id" string="Batch"
                           select="multi"
                           icon="fa-users"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-check-circle"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="student_attendance_view_kanban" model="ir.ui.view">
        <field name="name">student.attendance.view.kanban</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="student_id"/>
                <field name="registration_number"/>
                <field name="course_id"/>
                <field name="subject_id"/>
                <field name="date"/>
                <field name="time_in"/>
                <field name="time_out"/>
                <field name="state"/>
                <field name="faculty_id"/>

                <progressbar field="state"
                             colors='{"present": "success", "absent": "danger", "late": "warning", "half_day": "info", "on_leave": "primary", "holiday": "muted"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="student_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="registration_number"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'present'"
                                               decoration-danger="state == 'absent'"
                                               decoration-warning="state == 'late'"
                                               decoration-info="state == 'half_day'"
                                               decoration-primary="state == 'on_leave'"
                                               decoration-muted="state == 'holiday'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-calendar text-primary"/>
                                            <strong><field name="date"/></strong>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-book text-info"/>
                                            <field name="course_id"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.subject_id.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-graduation-cap text-success"/>
                                            <field name="subject_id"/>
                                        </div>
                                    </div>

                                    <div class="row" t-if="record.time_in.raw_value or record.time_out.raw_value">
                                        <div class="col-6" t-if="record.time_in.raw_value">
                                            <i class="fa fa-clock-o text-success"/>
                                            In: <field name="time_in" widget="float_time"/>
                                        </div>
                                        <div class="col-6" t-if="record.time_out.raw_value">
                                            <i class="fa fa-clock-o text-danger"/>
                                            Out: <field name="time_out" widget="float_time"/>
                                        </div>
                                    </div>

                                    <div class="row mt-2" t-if="record.faculty_id.raw_value">
                                        <div class="col-12 text-muted">
                                            <i class="fa fa-user"/>
                                            Faculty: <field name="faculty_id"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="student_attendance_view_calendar" model="ir.ui.view">
        <field name="name">student.attendance.view.calendar</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <calendar string="Attendance Calendar"
                      date_start="date"
                      color="state"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="student_id"/>
                <field name="registration_number"/>
                <field name="course_id"/>
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="state"/>
                <field name="time_in"/>
                <field name="time_out"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="student_attendance_view_pivot" model="ir.ui.view">
        <field name="name">student.attendance.view.pivot</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <pivot string="Attendance Analysis">
                <field name="student_id" type="row"/>
                <field name="program_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="state" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="student_attendance_view_graph" model="ir.ui.view">
        <field name="name">student.attendance.view.graph</field>
        <field name="model">student.attendance</field>
        <field name="arch" type="xml">
            <graph string="Attendance Statistics" type="bar" stacked="1">
                <field name="date" interval="month"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_student_attendance" model="ir.actions.act_window">
        <field name="name">Student Attendance</field>
        <field name="res_model">student.attendance</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_today': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Mark Student Attendance
            </p>
            <p>
                Track daily student attendance with time in/out, status tracking,
                and integration with courses, faculty, and timetables.
            </p>
        </field>
    </record>


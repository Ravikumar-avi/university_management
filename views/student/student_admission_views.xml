<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="student_admission_view_form" model="ir.ui.view">
        <field name="name">student.admission.view.form</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <form string="Student Admission">
                <header>
                    <button name="action_submit" string="Submit Application"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"
                            confirm="Are you sure you want to submit this application?"/>
                    <button name="action_review" string="Move to Review"
                            type="object"
                            invisible="state != 'submitted'"
                            groups="base.group_user"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="oe_highlight"
                            invisible="state != 'under_review'"
                            groups="base.group_user"/>
                    <button name="action_reject" string="Reject"
                            type="object"
                            invisible="state not in ['submitted', 'under_review']"
                            groups="base.group_user"/>
                    <button name="action_admit_student" string="Admit Student"
                            type="object" class="oe_highlight"
                            invisible="state != 'approved'"
                            confirm="This will create a student record. Are you sure?"
                            groups="base.group_user"/>
                    <button name="action_view_student" string="View Student Record"
                            type="object"
                            invisible="not student_id"
                            class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel"
                            type="object"
                            invisible="state in ['admitted', 'cancelled', 'rejected']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,under_review,approved,admitted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_student"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-user"
                                invisible="not student_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Student</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Admitted"
                            bg_color="text-bg-success"
                            invisible="state != 'admitted'"/>
                    <widget name="web_ribbon" title="Rejected"
                            bg_color="text-bg-danger"
                            invisible="state != 'rejected'"/>
                    <widget name="web_ribbon" title="Cancelled"
                            bg_color="text-bg-secondary"
                            invisible="state != 'cancelled'"/>

                    <field name="applicant_photo" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="applicant_name" string="Applicant Name"/>
                        <h1>
                            <field name="applicant_name" placeholder="Full Name" required="1"/>
                        </h1>
                        <h2>
                            <field name="name" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Personal Information">
                            <field name="email" widget="email"/>
                            <field name="mobile" widget="phone"/>
                            <field name="date_of_birth" widget="date"/>
                            <field name="gender" widget="radio"/>
                        </group>
                        <group string="Program Details">
                            <field name="program_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id" readonly="1"/>
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="batch_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="admission_category"/>
                        </group>
                    </group>

                    <group>
                        <group string="Application Information">
                            <field name="application_date" widget="date"/>
                            <field name="student_id" readonly="1"
                                   invisible="not student_id"/>
                        </group>
                        <group string="Application Fee">
                            <field name="application_fee" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="application_fee_paid" widget="boolean_toggle"/>
                            <field name="application_payment_ref"
                                   invisible="not application_fee_paid"/>
                            <field name="application_payment_date" widget="date"
                                   invisible="not application_fee_paid"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Previous Education" name="education">
                            <group>
                                <group>
                                    <field name="previous_qualification"
                                           placeholder="e.g., 10+2, B.Sc"/>
                                    <field name="previous_school"
                                           placeholder="School/College Name"/>
                                    <field name="previous_board"
                                           placeholder="CBSE, State Board, etc."/>
                                </group>
                                <group>
                                    <field name="previous_percentage"/>
                                    <field name="previous_year"/>
                                </group>
                            </group>

                            <separator string="Entrance Exam Details"
                                       invisible="not entrance_exam_taken"/>
                            <group invisible="not entrance_exam_taken">
                                <group>
                                    <field name="entrance_exam_taken" widget="boolean_toggle"/>
                                    <field name="entrance_exam_name"
                                           invisible="not entrance_exam_taken"/>
                                    <field name="entrance_exam_score"
                                           invisible="not entrance_exam_taken"/>
                                </group>
                                <group>
                                    <field name="entrance_exam_rank"
                                           invisible="not entrance_exam_taken"/>
                                    <field name="entrance_exam_percentile"
                                           invisible="not entrance_exam_taken"/>
                                </group>
                            </group>
                        </page>

                        <page string="Address" name="address">
                            <group>
                                <group string="Current Address">
                                    <field name="current_address"
                                           placeholder="Enter current address..."
                                           nolabel="1"/>
                                </group>
                                <group string="Permanent Address">
                                    <field name="permanent_address"
                                           placeholder="Enter permanent address..."
                                           nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="state_id"
                                           options="{'no_create': True}"/>
                                </group>
                                <group>
                                    <field name="country_id"
                                           options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Parent/Guardian Details" name="parents">
                            <group string="Father's Details">
                                <group>
                                    <field name="father_name"/>
                                    <field name="father_occupation"/>
                                </group>
                                <group>
                                    <field name="father_mobile" widget="phone"/>
                                    <field name="father_email" widget="email"/>
                                </group>
                            </group>

                            <group string="Mother's Details">
                                <group>
                                    <field name="mother_name"/>
                                    <field name="mother_occupation"/>
                                </group>
                                <group>
                                    <field name="mother_mobile" widget="phone"/>
                                    <field name="mother_email" widget="email"/>
                                </group>
                            </group>

                            <group string="Guardian Details (If Applicable)">
                                <group>
                                    <field name="guardian_name"/>
                                    <field name="guardian_relation"/>
                                </group>
                                <group>
                                    <field name="guardian_mobile" widget="phone"/>
                                    <field name="guardian_email" widget="email"/>
                                </group>
                            </group>

                            <group>
                                <field name="annual_income" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>

                        <page string="Documents" name="documents">
                            <group>
                                <field name="documents_verified" readonly="1"
                                       widget="boolean"/>
                            </group>
                            <field name="document_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="is_verified"/>
                                    <field name="attachment_id"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card">
                                                <div class="oe_kanban_content">
                                                    <div class="o_kanban_record_title">
                                                        <strong><field name="name"/></strong>
                                                    </div>
                                                    <div class="mt-2">
                                                        <field name="document_type" widget="badge"/>
                                                        <span class="ms-2">
                                                            <field name="is_verified" widget="boolean"/>
                                                            <span t-if="record.is_verified.raw_value"
                                                                  class="text-success"> Verified</span>
                                                            <span t-if="!record.is_verified.raw_value"
                                                                  class="text-warning"> Pending</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <page string="Admission Decision" name="decision"
                              invisible="state in ['draft', 'submitted']">
                            <group string="Admission Fee"
                                   invisible="state not in ['approved', 'admitted']">
                                <group>
                                    <field name="admission_fee" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="admission_fee_paid" widget="boolean_toggle"/>
                                </group>
                                <group>
                                    <field name="admission_payment_ref"
                                           invisible="not admission_fee_paid"/>
                                    <field name="admission_payment_date" widget="date"
                                           invisible="not admission_fee_paid"/>
                                </group>
                            </group>

                            <group string="Admission Details"
                                   invisible="state != 'admitted'">
                                <group>
                                    <field name="admission_date" widget="date" readonly="1"/>
                                    <field name="admission_letter_sent" widget="boolean_toggle"/>
                                </group>
                                <group>
                                    <field name="admission_letter_date" widget="date"
                                           invisible="not admission_letter_sent"/>
                                </group>
                            </group>

                            <group string="Rejection Details"
                                   invisible="state != 'rejected'">
                                <group>
                                    <field name="rejected_by" readonly="1"/>
                                    <field name="rejection_date" widget="date" readonly="1"/>
                                </group>
                            </group>
                            <group invisible="state != 'rejected'">
                                <field name="rejection_reason"
                                       placeholder="Enter rejection reason..."
                                       nolabel="1"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" placeholder="Public notes..."/>
                            </group>
                            <group>
                                <field name="internal_notes"
                                       placeholder="Internal notes (not visible to applicant)..."
                                       groups="base.group_user"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="student_admission_view_list" model="ir.ui.view">
        <field name="name">student.admission.view.list</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <list string="Student Admissions"
                  default_order="application_date desc"
                  multi_edit="1"
                  sample="1">
                <field name="applicant_photo" widget="image" optional="show"/>
                <field name="name"/>
                <field name="applicant_name"/>
                <field name="email" widget="email"/>
                <field name="mobile" widget="phone" optional="show"/>
                <field name="program_id"/>
                <field name="department_id" optional="show"/>
                <field name="academic_year_id" optional="hide"/>
                <field name="admission_category" optional="hide"/>
                <field name="application_date"/>
                <field name="application_fee_paid" widget="boolean_toggle" optional="show"/>
                <field name="admission_fee_paid" widget="boolean_toggle" optional="hide"/>
                <field name="documents_verified" widget="boolean_toggle" optional="show"/>
                <field name="previous_percentage" optional="hide"/>
                <field name="entrance_exam_rank" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-primary="state == 'under_review'"
                       decoration-success="state in ['approved', 'admitted']"
                       decoration-danger="state == 'rejected'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="student_admission_view_search" model="ir.ui.view">
        <field name="name">student.admission.view.search</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <search string="Search Admissions">
                <field name="name" string="Application"
                       filter_domain="['|', ('name', 'ilike', self), ('applicant_name', 'ilike', self)]"/>
                <field name="applicant_name"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="academic_year_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_submitted" string="Submitted"
                        domain="[('state', '=', 'submitted')]"/>
                <filter name="filter_under_review" string="Under Review"
                        domain="[('state', '=', 'under_review')]"/>
                <filter name="filter_approved" string="Approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter name="filter_admitted" string="Admitted"
                        domain="[('state', '=', 'admitted')]"/>
                <filter name="filter_rejected" string="Rejected"
                        domain="[('state', '=', 'rejected')]"/>
                <filter name="filter_cancelled" string="Cancelled"
                        domain="[('state', '=', 'cancelled')]"/>

                <separator/>

                <filter name="filter_male" string="Male"
                        domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female"
                        domain="[('gender', '=', 'female')]"/>

                <separator/>

                <filter name="filter_app_fee_paid" string="Application Fee Paid"
                        domain="[('application_fee_paid', '=', True)]"/>
                <filter name="filter_app_fee_pending" string="Application Fee Pending"
                        domain="[('application_fee_paid', '=', False)]"/>

                <filter name="filter_adm_fee_paid" string="Admission Fee Paid"
                        domain="[('admission_fee_paid', '=', True)]"/>
                <filter name="filter_adm_fee_pending" string="Admission Fee Pending"
                        domain="[('admission_fee_paid', '=', False), ('state', '=', 'approved')]"/>

                <separator/>

                <filter name="filter_docs_verified" string="Documents Verified"
                        domain="[('documents_verified', '=', True)]"/>
                <filter name="filter_docs_pending" string="Documents Pending"
                        domain="[('documents_verified', '=', False)]"/>

                <separator/>

                <filter name="filter_entrance_exam" string="With Entrance Exam"
                        domain="[('entrance_exam_taken', '=', True)]"/>

                <separator/>

                <filter name="filter_this_month" string="This Month"
                        domain="[('application_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('application_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_year" string="This Year"
                        domain="[('application_date', '&gt;=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d')),
                                 ('application_date', '&lt;=', (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_batch" string="Batch"
                            context="{'group_by': 'batch_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_category" string="Category"
                            context="{'group_by': 'admission_category'}"/>
                    <filter name="group_by_gender" string="Gender"
                            context="{'group_by': 'gender'}"/>
                    <filter name="group_by_application_date" string="Application Date"
                            context="{'group_by': 'application_date'}"/>
                </group>

                <searchpanel>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="academic_year_id" string="Academic Year"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="student_admission_view_kanban" model="ir.ui.view">
        <field name="name">student.admission.view.kanban</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="applicant_name"/>
                <field name="applicant_photo"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="application_date"/>
                <field name="application_fee_paid"/>
                <field name="admission_fee_paid"/>
                <field name="documents_verified"/>
                <field name="previous_percentage"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "submitted": "warning", "under_review": "primary", "approved": "success", "admitted": "success", "rejected": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('student.admission', 'applicant_photo', record.id.raw_value)"
                                     alt="Applicant Photo"
                                     class="o_image_128_max"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="applicant_name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-graduation-cap text-primary"/>
                                            <field name="program_id"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-calendar text-info"/>
                                            Applied on: <field name="application_date"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-envelope text-muted"/>
                                            <field name="email"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-phone text-muted"/>
                                            <field name="mobile"/>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <span t-if="record.application_fee_paid.raw_value"
                                                  class="badge text-bg-success">
                                                <i class="fa fa-check"/> App Fee Paid
                                            </span>
                                            <span t-else="" class="badge text-bg-warning">
                                                <i class="fa fa-clock-o"/> App Fee Pending
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span t-if="record.documents_verified.raw_value"
                                                  class="badge text-bg-success">
                                                <i class="fa fa-check"/> Docs Verified
                                            </span>
                                            <span t-else="" class="badge text-bg-warning">
                                                <i class="fa fa-clock-o"/> Docs Pending
                                            </span>
                                        </div>
                                    </div>

                                    <div class="row mt-2">
                                        <div class="col-12">
                                            Previous Score: <strong><field name="previous_percentage"/>%</strong>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"
                                               decoration-info="state == 'draft'"
                                               decoration-warning="state == 'submitted'"
                                               decoration-primary="state == 'under_review'"
                                               decoration-success="state in ['approved', 'admitted']"
                                               decoration-danger="state == 'rejected'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="student_admission_view_calendar" model="ir.ui.view">
        <field name="name">student.admission.view.calendar</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <calendar string="Admission Applications"
                      date_start="application_date"
                      color="program_id"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="applicant_name"/>
                <field name="name"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="student_admission_view_pivot" model="ir.ui.view">
        <field name="name">student.admission.view.pivot</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <pivot string="Admission Analysis">
                <field name="program_id" type="row"/>
                <field name="academic_year_id" type="row"/>
                <field name="state" type="col"/>
                <field name="previous_percentage" type="measure"/>
                <field name="entrance_exam_score" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="student_admission_view_graph" model="ir.ui.view">
        <field name="name">student.admission.view.graph</field>
        <field name="model">student.admission</field>
        <field name="arch" type="xml">
            <graph string="Admission Statistics" type="bar" stacked="1">
                <field name="program_id"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_student_admission" model="ir.actions.act_window">
        <field name="name">Admissions</field>
        <field name="res_model">student.admission</field>
        <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_submitted': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Admission Application
            </p>
            <p>
                Manage student admission applications with a complete workflow from
                submission to admission. Track documents, fees, and approvals.
            </p>
        </field>
    </record>


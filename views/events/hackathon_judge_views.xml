<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Hackathon Judge -->
    <record id="hackathon_judge_view_form" model="ir.ui.view">
        <field name="name">hackathon.judge.view.form</field>
        <field name="model">hackathon.judge</field>
        <field name="arch" type="xml">
            <form string="Hackathon Judge">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Judge Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Dr. John Smith"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Judge Details">
                            <field name="judge_type" widget="radio"/>
                            <field name="faculty_id"
                                   invisible="judge_type != 'internal'"
                                   required="judge_type == 'internal'"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group string="Professional Details"
                               invisible="judge_type == 'internal'">
                            <field name="designation"
                                   placeholder="e.g., Senior Software Engineer"/>
                            <field name="company"
                                   placeholder="e.g., Google Inc."/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Contact Information" name="contact">
                            <group>
                                <group string="Contact Details">
                                    <field name="email"
                                           widget="email"
                                           placeholder="email@example.com"/>
                                    <field name="phone"
                                           widget="phone"
                                           placeholder="+91 1234567890"/>
                                </group>
                            </group>
                        </page>

                        <page string="Expertise" name="expertise">
                            <group>
                                <field name="expertise" nolabel="1"
                                       placeholder="Describe areas of expertise (e.g., Artificial Intelligence, Machine Learning, Web Development, Cloud Computing, etc.)"/>
                            </group>
                        </page>

                        <page string="Biography" name="bio">
                            <group>
                                <field name="bio" nolabel="1"
                                       placeholder="Add judge biography, achievements, qualifications, experience, etc..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View - Hackathon Judge -->
    <record id="hackathon_judge_view_list" model="ir.ui.view">
        <field name="name">hackathon.judge.view.list</field>
        <field name="model">hackathon.judge</field>
        <field name="arch" type="xml">
            <list string="Hackathon Judges"
                  default_order="name"
                  multi_edit="1"
                  sample="1">
                <field name="photo" widget="image" optional="show"/>
                <field name="name"/>
                <field name="judge_type" widget="badge"
                       decoration-primary="judge_type == 'internal'"
                       decoration-success="judge_type == 'external'"
                       decoration-info="judge_type == 'industry'"
                       optional="show"/>
                <field name="faculty_id" optional="hide"/>
                <field name="designation" optional="show"/>
                <field name="company" optional="show"/>
                <field name="email" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="expertise" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View - Hackathon Judge -->
    <record id="hackathon_judge_view_search" model="ir.ui.view">
        <field name="name">hackathon.judge.view.search</field>
        <field name="model">hackathon.judge</field>
        <field name="arch" type="xml">
            <search string="Search Judges">
                <field name="name"/>
                <field name="faculty_id"/>
                <field name="designation"/>
                <field name="company"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="expertise"/>

                <separator/>

                <filter name="filter_internal" string="Internal Faculty"
                        domain="[('judge_type', '=', 'internal')]"/>
                <filter name="filter_external" string="External Expert"
                        domain="[('judge_type', '=', 'external')]"/>
                <filter name="filter_industry" string="Industry Professional"
                        domain="[('judge_type', '=', 'industry')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_judge_type" string="Judge Type"
                            context="{'group_by': 'judge_type'}"/>
                    <filter name="group_by_company" string="Company"
                            context="{'group_by': 'company'}"/>
                </group>

                <searchpanel>
                    <field name="judge_type" string="Judge Type"
                           select="multi"
                           icon="fa-user-circle-o"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Hackathon Judge -->
    <record id="hackathon_judge_view_kanban" model="ir.ui.view">
        <field name="name">hackathon.judge.view.kanban</field>
        <field name="model">hackathon.judge</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="judge_type"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="judge_type"/>
                <field name="faculty_id"/>
                <field name="designation"/>
                <field name="company"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="expertise"/>
                <field name="photo"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-3">
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <img t-if="record.photo.raw_value"
                                                 t-att-src="kanban_image('hackathon.judge', 'photo', record.id.raw_value)"
                                                 class="rounded-circle"
                                                 style="width: 100px; height: 100px; object-fit: cover;"
                                                 alt="Judge Photo"/>
                                            <div t-else=""
                                                 class="o_kanban_image rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center text-white"
                                                 style="width: 100px; height: 100px; font-size: 48px;">
                                                <i class="fa fa-user"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12 text-center">
                                            <strong class="o_kanban_record_title">
                                                <h5><field name="name"/></h5>
                                            </strong>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="card"
                                                 t-attf-class="{{
                                                    record.judge_type.raw_value == 'internal' ? 'bg-primary' :
                                                    (record.judge_type.raw_value == 'external' ? 'bg-success' : 'bg-info')
                                                 }} text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0">
                                                        <i class="fa fa-user-circle-o"/> <field name="judge_type"/>
                                                    </h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.faculty_id.raw_value and record.judge_type.raw_value == 'internal'">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <small class="text-muted">Faculty</small>
                                                <h6 class="mb-0">
                                                    <i class="fa fa-graduation-cap text-primary"/> <field name="faculty_id"/>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.designation.raw_value and record.judge_type.raw_value != 'internal'">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <small class="text-muted">Designation</small>
                                                <h6 class="mb-0">
                                                    <i class="fa fa-briefcase text-info"/> <field name="designation"/>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.company.raw_value and record.judge_type.raw_value != 'internal'">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <small class="text-muted">Organization</small>
                                                <h6 class="mb-0">
                                                    <i class="fa fa-building text-success"/> <field name="company"/>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.email.raw_value or record.phone.raw_value">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <small class="text-muted">Contact</small>
                                                <div t-if="record.email.raw_value">
                                                    <small>
                                                        <i class="fa fa-envelope text-primary"/> <field name="email"/>
                                                    </small>
                                                </div>
                                                <div t-if="record.phone.raw_value">
                                                    <small>
                                                        <i class="fa fa-phone text-success"/> <field name="phone"/>
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.expertise.raw_value">
                                        <div class="col-12">
                                            <div class="alert alert-info mb-0 p-2">
                                                <small class="text-muted d-block mb-1">
                                                    <strong>Expertise</strong>
                                                </small>
                                                <small>
                                                    <field name="expertise"/>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hackathon_judge" model="ir.actions.act_window">
        <field name="name">Judges</field>
        <field name="res_model">hackathon.judge</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_group_by_judge_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Hackathon Judge
            </p>
            <p>
                Manage hackathon judges and evaluators. Enter name (char required, placeholder "e.g., Dr.
                John Smith"). Select judge_type (3 options required, radio widget): internal (Internal
                Faculty - primary badge), external (External Expert - success badge), industry (Industry
                Professional - info badge). Select faculty_id (Many2one to faculty.faculty, visible and
                required if judge_type is internal, no-create). Enter designation (char, placeholder "e.g.,
                Senior Software Engineer", visible if judge_type is not internal). Enter company (char,
                placeholder "e.g., Google Inc.", visible if judge_type is not internal, labeled
                "Company/Organization"). Enter email (char, email widget, placeholder "email@example.com").
                Enter phone (char, phone widget, placeholder "+91 1234567890"). Enter expertise (text,
                placeholder "Describe areas of expertise (e.g., Artificial Intelligence, Machine Learning,
                Web Development, Cloud Computing, etc.)"). Upload photo (binary attachment, image widget
                class oe_avatar in form). Enter bio (html, placeholder "Add judge biography, achievements,
                qualifications, experience, etc..."). Form view with photo avatar at top, 2 groups: Judge
                Details (judge_type/faculty_id) and Professional Details (designation/company, invisible if
                internal), notebook having 3 pages: Contact Information (email/phone), Expertise (expertise
                text), Biography (bio html). List view with photo image widget, judge_type badge with 3-color
                decorations (primary/success/info), optional field controls. Kanban view grouped by
                judge_type showing centered circular photo (100px, rounded-circle, object-fit cover) or
                placeholder (rounded-circle bg-secondary 100px with fa-user icon white text 48px font),
                centered name h5, judge_type card (dynamic 3-color background: primary/internal,
                success/external, info/industry, centered, user-circle-o icon), conditional faculty_id card
                (light background, graduation-cap icon primary, small "Faculty" label, shown if faculty_id
                exists and judge_type is internal), conditional designation card (light background, briefcase
                icon info, small "Designation" label, shown if designation exists and judge_type is not
                internal), conditional company card (light background, building icon success, small
                "Organization" label, shown if company exists and judge_type is not internal), conditional
                contact card (light background, small "Contact" label, envelope icon primary with email,
                phone icon success with phone, shown if email or phone exists), conditional expertise alert
                (info/blue background, small "Expertise" bold label, expertise text, shown if expertise
                exists). Ordered by name (alphabetically). Default grouped by Judge Type. Comprehensive
                search filters for 3 judge types/group by judge_type-company. Searchpanel for judge_type
                multi-select. Simple judge management without chatter support. Complete judge profile
                management for hackathon evaluation.
            </p>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Event Sponsor -->
    <record id="event_sponsor_view_form" model="ir.ui.view">
        <field name="name">event.sponsor.view.form</field>
        <field name="model">event.sponsor</field>
        <field name="arch" type="xml">
            <form string="Event Sponsor">
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Sponsor Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., ABC Corporation"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Event Details">
                            <field name="event_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="sponsor_type" widget="radio"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Company Details">
                            <field name="company_id"
                                   domain="[('is_company', '=', True)]"
                                   context="{'default_is_company': True}"/>
                            <field name="website" widget="url"
                                   placeholder="https://www.example.com"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Contribution" name="contribution">
                            <group>
                                <group string="Contribution Details">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="contribution_amount"
                                           widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="contribution_type"/>
                                </group>
                            </group>
                        </page>

                        <page string="Contact Information" name="contact">
                            <group>
                                <group string="Contact Person">
                                    <field name="contact_person"
                                           placeholder="Contact person name"/>
                                    <field name="contact_email"
                                           widget="email"
                                           placeholder="email@example.com"/>
                                    <field name="contact_phone"
                                           widget="phone"
                                           placeholder="+91 1234567890"/>
                                </group>
                            </group>
                        </page>

                        <page string="Description" name="description">
                            <group>
                                <field name="description" nolabel="1"
                                       placeholder="Add sponsor details, benefits provided, partnership terms, etc..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View - Event Sponsor -->
    <record id="event_sponsor_view_list" model="ir.ui.view">
        <field name="name">event.sponsor.view.list</field>
        <field name="model">event.sponsor</field>
        <field name="arch" type="xml">
            <list string="Event Sponsors"
                  default_order="sequence, name"
                  multi_edit="1"
                  sample="1">
                <field name="sequence" widget="handle"/>
                <field name="logo" widget="image" optional="show"/>
                <field name="name"/>
                <field name="event_id"/>
                <field name="sponsor_type" widget="badge"
                       decoration-danger="sponsor_type == 'title'"
                       decoration-info="sponsor_type == 'platinum'"
                       decoration-warning="sponsor_type == 'gold'"
                       decoration-muted="sponsor_type == 'silver'"
                       decoration-primary="sponsor_type == 'bronze'"
                       optional="show"/>
                <field name="company_id" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="contribution_amount" optional="show"
                       widget="monetary"/>
                <field name="contribution_type" optional="hide"/>
                <field name="contact_person" optional="hide"/>
                <field name="contact_email" optional="hide"/>
                <field name="contact_phone" optional="hide"/>
                <field name="website" widget="url" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View - Event Sponsor -->
    <record id="event_sponsor_view_search" model="ir.ui.view">
        <field name="name">event.sponsor.view.search</field>
        <field name="model">event.sponsor</field>
        <field name="arch" type="xml">
            <search string="Search Sponsors">
                <field name="name"/>
                <field name="event_id"/>
                <field name="company_id"/>
                <field name="contact_person"/>

                <separator/>

                <filter name="filter_title" string="Title Sponsor"
                        domain="[('sponsor_type', '=', 'title')]"/>
                <filter name="filter_platinum" string="Platinum"
                        domain="[('sponsor_type', '=', 'platinum')]"/>
                <filter name="filter_gold" string="Gold"
                        domain="[('sponsor_type', '=', 'gold')]"/>
                <filter name="filter_silver" string="Silver"
                        domain="[('sponsor_type', '=', 'silver')]"/>
                <filter name="filter_bronze" string="Bronze"
                        domain="[('sponsor_type', '=', 'bronze')]"/>
                <filter name="filter_associate" string="Associate Partner"
                        domain="[('sponsor_type', '=', 'associate')]"/>

                <separator/>

                <filter name="filter_cash" string="Cash Contribution"
                        domain="[('contribution_type', '=', 'cash')]"/>
                <filter name="filter_kind" string="In-Kind Contribution"
                        domain="[('contribution_type', '=', 'kind')]"/>
                <filter name="filter_both" string="Both"
                        domain="[('contribution_type', '=', 'both')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_event" string="Event"
                            context="{'group_by': 'event_id'}"/>
                    <filter name="group_by_sponsor_type" string="Sponsor Type"
                            context="{'group_by': 'sponsor_type'}"/>
                    <filter name="group_by_contribution_type" string="Contribution Type"
                            context="{'group_by': 'contribution_type'}"/>
                    <filter name="group_by_company" string="Company"
                            context="{'group_by': 'company_id'}"/>
                </group>

                <searchpanel>
                    <field name="event_id" string="Event"
                           select="multi"
                           icon="fa-calendar-check-o"/>
                    <field name="sponsor_type" string="Sponsor Type"
                           select="multi"
                           icon="fa-trophy"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Event Sponsor -->
    <record id="event_sponsor_view_kanban" model="ir.ui.view">
        <field name="name">event.sponsor.view.kanban</field>
        <field name="model">event.sponsor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="sponsor_type"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="event_id"/>
                <field name="sponsor_type"/>
                <field name="company_id"/>
                <field name="contribution_amount"/>
                <field name="contribution_type"/>
                <field name="currency_id"/>
                <field name="contact_person"/>
                <field name="contact_email"/>
                <field name="contact_phone"/>
                <field name="website"/>
                <field name="logo"/>
                <field name="sequence"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="sequence" widget="handle"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mt-3">
                                    <div class="row mb-3" t-if="record.logo.raw_value">
                                        <div class="col-12 text-center">
                                            <img t-att-src="kanban_image('event.sponsor', 'logo', record.id.raw_value)"
                                                 class="img-fluid rounded"
                                                 style="max-height: 120px; max-width: 100%;"
                                                 alt="Sponsor Logo"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <h6 class="mb-0">
                                                    <i class="fa fa-calendar-check-o text-primary"/> <field name="event_id"/>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="card"
                                                 t-attf-class="{{
                                                    record.sponsor_type.raw_value == 'title' ? 'bg-danger' :
                                                    (record.sponsor_type.raw_value == 'platinum' ? 'bg-info' :
                                                    (record.sponsor_type.raw_value == 'gold' ? 'bg-warning' :
                                                    (record.sponsor_type.raw_value == 'silver' ? 'bg-secondary' :
                                                    (record.sponsor_type.raw_value == 'bronze' ? 'bg-primary' : 'bg-dark'))))
                                                 }} text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0">
                                                        <i class="fa fa-trophy"/> <field name="sponsor_type"/>
                                                    </h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.company_id.raw_value">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <small class="text-muted">Company</small>
                                                <h6 class="mb-0">
                                                    <i class="fa fa-building text-success"/> <field name="company_id"/>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.contribution_amount.raw_value &gt; 0">
                                        <div class="col-12">
                                            <div class="alert alert-success mb-0 p-2 text-center">
                                                <h5 class="mb-0">
                                                    <strong>
                                                        <field name="contribution_amount" widget="monetary"
                                                               options="{'currency_field': 'currency_id'}"/>
                                                    </strong>
                                                </h5>
                                                <small t-if="record.contribution_type.raw_value">
                                                    <field name="contribution_type"/>
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.contact_person.raw_value">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <small class="text-muted">Contact Person</small>
                                                <div>
                                                    <i class="fa fa-user text-primary"/> <field name="contact_person"/>
                                                </div>
                                                <div t-if="record.contact_email.raw_value">
                                                    <small>
                                                        <i class="fa fa-envelope"/> <field name="contact_email"/>
                                                    </small>
                                                </div>
                                                <div t-if="record.contact_phone.raw_value">
                                                    <small>
                                                        <i class="fa fa-phone"/> <field name="contact_phone"/>
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.website.raw_value">
                                        <div class="col-12">
                                            <div class="text-center">
                                                <a t-att-href="record.website.raw_value"
                                                   target="_blank"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fa fa-globe"/> Visit Website
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_event_sponsor" model="ir.actions.act_window">
        <field name="name">Sponsors</field>
        <field name="res_model">event.sponsor</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_group_by_event': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Event Sponsor
            </p>
            <p>
                Manage event sponsors and partnerships. Enter name (char required, placeholder "e.g., ABC
                Corporation"). Select event_id (Many2one to university.event required indexed ondelete
                cascade no-create). Select sponsor_type (6 options required, radio widget): title (Title
                Sponsor - danger badge), platinum (Platinum Sponsor - info badge), gold (Gold Sponsor -
                warning/yellow badge), silver (Silver Sponsor - muted/gray badge), bronze (Bronze Sponsor -
                primary badge), associate (Associate Partner - default badge). Select company_id (Many2one
                to res.partner with domain is_company=True and context default_is_company=True). Enter
                contribution_amount (monetary with currency_field and monetary widget with currency_field
                option). Select contribution_type (3 options): cash (Cash), kind (In-Kind), both (Both).
                View currency_id (Many2one to res.currency default company currency, invisible/
                column_invisible). Enter contact_person (char, placeholder "Contact person name"). Enter
                contact_email (char, email widget, placeholder "email@example.com"). Enter contact_phone
                (char, phone widget, placeholder "+91 1234567890"). Upload logo (binary attachment, image
                widget class oe_avatar in form). Enter website (char, url widget, placeholder
                "https://www.example.com"). Enter description (text, placeholder "Add sponsor details,
                benefits provided, partnership terms, etc..."). Set sequence (integer default 10, handle
                widget in list). Form view with logo avatar at top, notebook having 3 pages: Contribution
                (contribution_amount/contribution_type), Contact Information (contact_person/contact_email/
                contact_phone), Description (description field). List view with sequence handle widget for
                drag-drop reordering, logo image widget, sponsor_type badge with 6-color decorations
                (danger/info/warning/muted/primary/default), monetary widget for contribution_amount, url
                widget for website, optional field controls. Kanban view grouped by sponsor_type showing
                name as title with sequence handle widget at top-right, conditional logo image (centered,
                max-height 120px, rounded, shown if logo exists), event_id card (light background,
                calendar-check-o icon primary/blue), sponsor_type card (dynamic 6-color background:
                danger/title, info/platinum, warning/gold, secondary/silver, primary/bronze, dark/associate,
                centered, trophy icon), conditional company_id card (light background, building icon
                success/green, small "Company" label, shown if company_id exists), conditional
                contribution_amount alert (success/green background, centered, h5 bold monetary field, small
                contribution_type text, shown if contribution_amount &gt; 0), conditional contact_person card
                (light background, small "Contact Person" label, user icon primary/blue with contact_person,
                envelope icon with contact_email, phone icon with contact_phone, shown if contact_person
                exists), conditional website button (centered, outline-primary btn-sm, globe icon "Visit
                Website", target blank, shown if website exists). Ordered by sequence then name (drag-drop
                reordering support). Default grouped by Event. Comprehensive search filters for 6 sponsor
                types/3 contribution types/group by event-sponsor_type-contribution_type-company.
                Searchpanel for event_id and sponsor_type multi-select. Simple sponsor management without
                chatter support. Complete event sponsorship lifecycle management.
            </p>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Alumni Donation -->
    <record id="alumni_donation_view_form" model="ir.ui.view">
        <field name="name">alumni.donation.view.form</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <form string="Alumni Donation">
                <header>
                    <button name="action_acknowledge" string="Send Acknowledgement" type="object"
                            class="btn-primary"
                            invisible="state != 'received'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,received,acknowledged"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Receipt Number"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Donor Details">
                            <field name="alumni_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="alumni_name" invisible="1"/>
                            <field name="donation_date"/>
                        </group>
                        <group string="Donation Amount">
                            <label for="amount"/>
                            <div class="d-flex">
                                <field name="amount" class="oe_inline"/>
                                <field name="currency_id" class="oe_inline ms-2"
                                       options="{'no_open': True, 'no_create': True}"/>
                            </div>
                        </group>
                    </group>

                    <group>
                        <group string="Donation Purpose">
                            <field name="donation_purpose" widget="radio"/>
                            <field name="purpose_description"
                                   placeholder="Enter specific details about the donation purpose..."/>
                        </group>
                        <group string="Payment Details">
                            <field name="payment_method"/>
                            <field name="payment_reference"
                                   placeholder="Transaction ID / Cheque Number / DD Number"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Tax Exemption" name="tax_exemption">
                            <group>
                                <group string="80G Certificate">
                                    <field name="tax_exemption_certificate"
                                           filename="certificate_filename"
                                           widget="binary"/>
                                </group>
                            </group>
                        </page>

                        <page string="Acknowledgement" name="acknowledgement">
                            <group>
                                <group string="Acknowledgement Status">
                                    <field name="acknowledgement_sent" widget="boolean_toggle"/>
                                    <field name="acknowledgement_date"
                                           readonly="1"
                                           invisible="not acknowledgement_sent"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View - Alumni Donation -->
    <record id="alumni_donation_view_list" model="ir.ui.view">
        <field name="name">alumni.donation.view.list</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <list string="Alumni Donations"
                  default_order="donation_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-info="state == 'draft'"
                  decoration-primary="state == 'received'"
                  decoration-success="state == 'acknowledged'">
                <field name="name"/>
                <field name="alumni_id"/>
                <field name="donation_date"/>
                <field name="amount" widget="monetary" sum="Total Donations"/>
                <field name="currency_id" optional="hide"/>
                <field name="donation_purpose" widget="badge"
                       decoration-success="donation_purpose == 'scholarship'"
                       decoration-primary="donation_purpose == 'infrastructure'"
                       decoration-info="donation_purpose == 'research'"
                       decoration-warning="donation_purpose in ['library', 'sports']"/>
                <field name="payment_method" optional="show"/>
                <field name="payment_reference" optional="hide"/>
                <field name="acknowledgement_sent" widget="boolean_toggle" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'received'"
                       decoration-success="state == 'acknowledged'"/>
            </list>
        </field>
    </record>

    <!-- Search View - Alumni Donation -->
    <record id="alumni_donation_view_search" model="ir.ui.view">
        <field name="name">alumni.donation.view.search</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <search string="Search Donations">
                <field name="name"/>
                <field name="alumni_id"/>
                <field name="donation_purpose"/>
                <field name="payment_method"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_received" string="Received"
                        domain="[('state', '=', 'received')]"/>
                <filter name="filter_acknowledged" string="Acknowledged"
                        domain="[('state', '=', 'acknowledged')]"/>

                <separator/>

                <filter name="filter_acknowledgement_pending" string="Acknowledgement Pending"
                        domain="[('acknowledgement_sent', '=', False), ('state', '=', 'received')]"/>
                <filter name="filter_acknowledgement_sent" string="Acknowledgement Sent"
                        domain="[('acknowledgement_sent', '=', True)]"/>

                <separator/>

                <filter name="filter_infrastructure" string="Infrastructure"
                        domain="[('donation_purpose', '=', 'infrastructure')]"/>
                <filter name="filter_scholarship" string="Scholarship"
                        domain="[('donation_purpose', '=', 'scholarship')]"/>
                <filter name="filter_research" string="Research &amp; Development"
                        domain="[('donation_purpose', '=', 'research')]"/>
                <filter name="filter_library" string="Library"
                        domain="[('donation_purpose', '=', 'library')]"/>
                <filter name="filter_sports" string="Sports Facilities"
                        domain="[('donation_purpose', '=', 'sports')]"/>
                <filter name="filter_general" string="General Fund"
                        domain="[('donation_purpose', '=', 'general')]"/>

                <separator/>

                <filter name="filter_this_year" string="This Year"
                        domain="[('donation_date', '>=', context_today().strftime('%Y') + '-01-01')]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('donation_date', '>=', context_today().strftime('%Y-%m') + '-01')]"/>
                <filter name="filter_last_6_months" string="Last 6 Months"
                        domain="[('donation_date', '>=', (context_today() - relativedelta(months=6)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_alumni" string="Alumni"
                            context="{'group_by': 'alumni_id'}"/>
                    <filter name="group_by_donation_purpose" string="Donation Purpose"
                            context="{'group_by': 'donation_purpose'}"/>
                    <filter name="group_by_payment_method" string="Payment Method"
                            context="{'group_by': 'payment_method'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_donation_date" string="Donation Date"
                            context="{'group_by': 'donation_date'}"/>
                </group>

                <searchpanel>
                    <field name="donation_purpose" string="Purpose"
                           select="multi"
                           icon="fa-bullseye"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-flag"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Alumni Donation -->
    <record id="alumni_donation_view_kanban" model="ir.ui.view">
        <field name="name">alumni.donation.view.kanban</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="alumni_id"/>
                <field name="donation_date"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="donation_purpose"/>
                <field name="payment_method"/>
                <field name="payment_reference"/>
                <field name="acknowledgement_sent"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-money"/> <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <small>
                                                <i class="fa fa-user-graduate"/> <field name="alumni_id"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mt-3">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="card bg-success text-white">
                                                <div class="card-body p-3 text-center">
                                                    <h4 class="mb-0">
                                                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="card text-white"
                                                 t-attf-class="{{
                                                    record.donation_purpose.raw_value == 'scholarship' ? 'bg-success' :
                                                    (record.donation_purpose.raw_value == 'infrastructure' ? 'bg-primary' :
                                                    (record.donation_purpose.raw_value == 'research' ? 'bg-info' :
                                                    (record.donation_purpose.raw_value in ['library', 'sports'] ? 'bg-warning' : 'bg-secondary')))
                                                 }}">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0">
                                                        <i class="fa fa-bullseye"/> <field name="donation_purpose"/>
                                                    </h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded text-center">
                                                <div class="text-primary">
                                                    <i class="fa fa-calendar fa-lg"/>
                                                </div>
                                                <small class="text-muted">Donation Date</small>
                                                <h6 class="mb-0"><field name="donation_date"/></h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="card bg-secondary text-white">
                                                <div class="card-body p-2">
                                                    <h6 class="mb-1">
                                                        <i class="fa fa-credit-card"/> Payment Method
                                                    </h6>
                                                    <small><field name="payment_method"/></small>
                                                    <div t-if="record.payment_reference.raw_value">
                                                        <small class="text-muted">Ref: </small>
                                                        <small><field name="payment_reference"/></small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.acknowledgement_sent.raw_value">
                                        <div class="col-12">
                                            <div class="alert alert-success mb-0 p-2 text-center">
                                                <small>
                                                    <i class="fa fa-check-circle"/> Acknowledgement Sent
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="!record.acknowledgement_sent.raw_value and record.state.raw_value == 'received'">
                                        <div class="col-12">
                                            <div class="alert alert-warning mb-0 p-2 text-center">
                                                <small>
                                                    <i class="fa fa-exclamation-triangle"/> Pending Acknowledgement
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View - Alumni Donation -->
    <record id="alumni_donation_view_calendar" model="ir.ui.view">
        <field name="name">alumni.donation.view.calendar</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <calendar string="Donation Calendar"
                      date_start="donation_date"
                      mode="month"
                      color="donation_purpose"
                      quick_create="0"
                      event_limit="5">
                <field name="name"/>
                <field name="alumni_id"/>
                <field name="amount"/>
                <field name="donation_purpose"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View - Alumni Donation -->
    <record id="alumni_donation_view_pivot" model="ir.ui.view">
        <field name="name">alumni.donation.view.pivot</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <pivot string="Donation Analysis">
                <field name="donation_purpose" type="row"/>
                <field name="state" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View - Alumni Donation -->
    <record id="alumni_donation_view_graph" model="ir.ui.view">
        <field name="name">alumni.donation.view.graph</field>
        <field name="model">alumni.donation</field>
        <field name="arch" type="xml">
            <graph string="Donation Statistics" type="bar">
                <field name="donation_purpose"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_alumni_donation" model="ir.actions.act_window">
        <field name="name">Alumni Donations</field>
        <field name="res_model">alumni.donation</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_filter_this_year': 1, 'search_default_group_by_donation_purpose': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record Alumni Donation
            </p>
            <p>
                Track and manage alumni donations and contributions. Enter name (char, receipt number,
                required, readonly, copy=false, default '/' for auto-sequence generation via ir.sequence
                'alumni.donation', unique constraint name_unique). Select alumni_id (Many2one to
                alumni.alumni, required, tracked, indexed, no-create). View alumni_name (char, related to
                alumni_id.name, invisible). Enter donation_date (date, default today, required, tracked).
                Enter amount (monetary, required, tracked, currency_field currency_id, displayed inline
                with currency selector). Select currency_id (Many2one to res.currency, default company
                currency, inline, no-open no-create). Select donation_purpose (7 options, required,
                tracked, radio widget): infrastructure (Infrastructure Development - primary/blue badge),
                scholarship (Student Scholarship - success/green badge), research (Research &amp; Development -
                info badge), library (Library - warning/yellow badge), sports (Sports Facilities -
                warning/yellow badge), general (General Fund - secondary/gray badge in kanban), other
                (Other). Enter purpose_description (text, placeholder "Enter specific details about the
                donation purpose..."). Select payment_method (4 options, required): online (Online
                Transfer), cheque (Cheque), dd (Demand Draft), cash (Cash). Enter payment_reference (char,
                placeholder "Transaction ID / Cheque Number / DD Number"). Upload tax_exemption_certificate
                (binary, attachment, filename certificate_filename, binary widget, 80G Certificate). View
                acknowledgement tracking: acknowledgement_sent (boolean, boolean_toggle widget),
                acknowledgement_date (date, readonly, conditional visible if acknowledgement_sent). Select
                state (3 options, default draft, tracked, statusbar widget): draft (Draft - info/blue row
                and badge), received (Received - primary row and badge), acknowledged (Acknowledged -
                success/green row and badge). Header has 1 action button: Send Acknowledgement (calls
                action_acknowledge method, primary button, visible only when state=received, sets
                state=acknowledged, acknowledgement_sent=true, acknowledgement_date=today). List view with
                3-color row decorations: Info/Blue (draft), Primary (received), Success/Green
                (acknowledged). Badge widgets for donation_purpose (4-color decorations) and state
                (3-color decorations). Monetary widget for amount with sum="Total Donations" aggregate.
                Boolean toggle for acknowledgement_sent. Kanban view grouped by state showing receipt
                number (money icon), alumni name (user-graduate icon, small), donation amount card
                (success/green, large centered h4 monetary widget with currency), donation purpose card
                (dynamic 4-color background: success/scholarship, primary/infrastructure, info/research,
                warning/library+sports, secondary/general+other, centered, bullseye icon), donation date
                card (light background, centered, calendar icon primary/blue), payment method card
                (secondary/gray, credit-card icon, shows payment_method and payment_reference conditional),
                acknowledgement alert (success/green, check-circle icon, conditional if acknowledgement_sent),
                pending alert (warning/yellow, exclamation-triangle icon, conditional if not
                acknowledgement_sent and state=received). Calendar view for donation tracking (date_start:
                donation_date, color by donation_purpose, month mode, event_limit 5). Pivot view for
                analysis (donation_purpose Ã— state matrix, measure: amount). Graph view for statistics (bar
                chart, donation_purpose vs. amount). Ordered by donation_date desc (most recent first).
                Default filters: This year donations and Grouped by Donation Purpose. Full chatter support
                for tracking and communication.
            </p>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Library Reservation -->
    <record id="library_reservation_view_form" model="ir.ui.view">
        <field name="name">library.reservation.view.form</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <form string="Book Reservation">
                <header>
                    <button name="action_issue" type="object" string="Issue Book"
                            class="oe_highlight"
                            invisible="state != 'reserved'"
                            confirm="Are you sure you want to issue this book to the member?"/>
                    <button name="action_cancel" type="object" string="Cancel Reservation"
                            invisible="state not in ['reserved']"
                            confirm="Are you sure you want to cancel this reservation?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="reserved,issued"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Reserved" bg_color="text-bg-info"
                            invisible="state != 'reserved'"/>
                    <widget name="web_ribbon" title="Issued" bg_color="text-bg-success"
                            invisible="state != 'issued'"/>
                    <widget name="web_ribbon" title="Expired" bg_color="text-bg-warning"
                            invisible="state != 'expired'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger"
                            invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <label for="name" string="Reservation Number"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Member Details">
                            <field name="member_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="member_name" readonly="1"/>
                        </group>
                        <group string="Book Details">
                            <field name="book_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Reservation Details">
                            <field name="reservation_date" widget="date"/>
                            <field name="expiry_date" widget="date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1"
                                   placeholder="Enter any notes or remarks about this reservation..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View - Library Reservation -->
    <record id="library_reservation_view_list" model="ir.ui.view">
        <field name="name">library.reservation.view.list</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <list string="Book Reservations"
                  default_order="reservation_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-info="state == 'reserved'"
                  decoration-success="state == 'issued'"
                  decoration-warning="state == 'expired'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="member_name" optional="show"/>
                <field name="book_id"/>
                <field name="reservation_date"/>
                <field name="expiry_date"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'reserved'"
                       decoration-success="state == 'issued'"
                       decoration-warning="state == 'expired'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Search View - Library Reservation -->
    <record id="library_reservation_view_search" model="ir.ui.view">
        <field name="name">library.reservation.view.search</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <search string="Search Reservations">
                <field name="name"/>
                <field name="member_id"/>
                <field name="member_name"/>
                <field name="book_id"/>

                <separator/>

                <filter name="filter_reserved" string="Reserved"
                        domain="[('state', '=', 'reserved')]"/>
                <filter name="filter_issued" string="Issued"
                        domain="[('state', '=', 'issued')]"/>
                <filter name="filter_expired" string="Expired"
                        domain="[('state', '=', 'expired')]"/>
                <filter name="filter_cancelled" string="Cancelled"
                        domain="[('state', '=', 'cancelled')]"/>

                <separator/>

                <filter name="filter_active_reservations" string="Active Reservations"
                        domain="[('state', '=', 'reserved'), ('expiry_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_expiring_soon" string="Expiring Soon (7 days)"
                        domain="[('state', '=', 'reserved'),
                                 ('expiry_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('expiry_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <filter name="filter_today" string="Reserved Today"
                        domain="[('reservation_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="Reserved This Week"
                        domain="[('reservation_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('reservation_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="Reserved This Month"
                        domain="[('reservation_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('reservation_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_member" string="Member"
                            context="{'group_by': 'member_id'}"/>
                    <filter name="group_by_book" string="Book"
                            context="{'group_by': 'book_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_reservation_date" string="Reservation Date"
                            context="{'group_by': 'reservation_date'}"/>
                    <filter name="group_by_expiry_date" string="Expiry Date"
                            context="{'group_by': 'expiry_date'}"/>
                </group>

                <searchpanel>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Library Reservation -->
    <record id="library_reservation_view_kanban" model="ir.ui.view">
        <field name="name">library.reservation.view.kanban</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="member_id"/>
                <field name="member_name"/>
                <field name="book_id"/>
                <field name="reservation_date"/>
                <field name="expiry_date"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"reserved": "info", "issued": "success", "expired": "warning", "cancelled": "muted"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'reserved'">
                                <span class="text-bg-info">Reserved</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'issued'">
                                <span class="text-bg-success">Issued</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'expired'">
                                <span class="text-bg-warning">Expired</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'cancelled'">
                                <span class="text-bg-danger">Cancelled</span>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="member_name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mt-3">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="mb-1">
                                                    <i class="fa fa-book text-primary"/>
                                                    <strong>Book:</strong> <field name="book_id"/>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fa fa-calendar text-success"/>
                                                    <strong>Reserved:</strong> <field name="reservation_date"/>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fa fa-calendar-times-o text-danger"/>
                                                    <strong>Expires:</strong> <field name="expiry_date"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"
                                               decoration-info="state == 'reserved'"
                                               decoration-success="state == 'issued'"
                                               decoration-warning="state == 'expired'"
                                               decoration-muted="state == 'cancelled'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View - Library Reservation -->
    <record id="library_reservation_view_calendar" model="ir.ui.view">
        <field name="name">library.reservation.view.calendar</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <calendar string="Reservation Calendar"
                      date_start="reservation_date"
                      date_stop="expiry_date"
                      color="state"
                      mode="month"
                      quick_create="0"
                      event_open_popup="1">
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_reservation" model="ir.actions.act_window">
        <field name="name">Book Reservations</field>
        <field name="res_model">library.reservation</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_filter_reserved': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Book Reservation
            </p>
            <p>
                Manage book reservations for library members. System automatically assigns unique
                reservation numbers using sequence. Select member (library.member, required, tracked,
                indexed) - displays member_name. Select book (library.book, required, tracked, indexed).
                Enter reservation_date (default today, required, tracked) &amp; expiry_date (required -
                when reservation expires if not fulfilled). 4-state system: Reserved (default, awaiting
                book availability), Issued (book issued to member via action_issue), Expired (reservation
                not fulfilled by expiry_date, auto-set by cron), Cancelled (member cancelled, manual via
                action_cancel). Two action buttons: "Issue Book" (highlight, visible only in reserved
                state, creates library.issue record with member + book + issue_date=today, sets state='issued',
                opens issue form in current window, requires confirmation), "Cancel Reservation" (visible
                only in reserved state, sets state='cancelled', requires confirmation). Scheduled cron job
                (_cron_check_expired_reservations) runs periodically to auto-expire reservations where
                state='reserved' &amp; expiry_date &lt; today. Add notes for remarks. Full chatter support for
                communication &amp; tracking.
            </p>
        </field>
    </record>


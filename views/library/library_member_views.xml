<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View - Library Member -->
    <record id="library_member_view_form" model="ir.ui.view">
        <field name="name">library.member.view.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Library Member">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="active,expired"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Active" bg_color="text-bg-success"
                            invisible="state != 'active'"/>
                    <widget name="web_ribbon" title="Expired" bg_color="text-bg-warning"
                            invisible="state != 'expired'"/>
                    <widget name="web_ribbon" title="Suspended" bg_color="text-bg-danger"
                            invisible="state != 'suspended'"/>
                    <widget name="web_ribbon" title="Blocked" bg_color="text-bg-dark"
                            invisible="state != 'blocked'"/>

                    <div class="oe_title">
                        <label for="name" string="Membership Number"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Member Information">
                            <field name="member_type"/>
                            <field name="student_id"
                                   invisible="member_type != 'student'"
                                   required="member_type == 'student'"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="faculty_id"
                                   invisible="member_type != 'faculty'"
                                   required="member_type == 'faculty'"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="partner_id"
                                   invisible="member_type not in ['staff', 'external']"
                                   required="member_type in ['staff', 'external']"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="member_name" readonly="1"/>
                            <field name="member_email" readonly="1" widget="email"/>
                            <field name="member_phone" readonly="1" widget="phone"/>
                        </group>
                        <group string="Membership Details">
                            <field name="membership_date" widget="date"/>
                            <field name="expiry_date" widget="date"/>
                            <field name="is_active" widget="boolean_toggle" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Library Card">
                            <field name="card_number" placeholder="e.g., LC-2025-001"/>
                            <field name="card_issued_date" widget="date"/>
                        </group>
                        <group string="Issue Limits">
                            <field name="max_books_allowed"/>
                            <field name="max_issue_days"/>
                        </group>
                    </group>

                    <group>
                        <group string="Statistics">
                            <field name="current_issues" readonly="1"/>
                            <field name="total_issues" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_fine" widget="monetary" readonly="1"/>
                            <field name="pending_fine" widget="monetary" readonly="1"
                                   decoration-danger="pending_fine &gt; 0"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Current Issues" name="current_issues">
                            <field name="issue_ids" nolabel="1"
                                   domain="[('state', 'in', ['issued', 'overdue'])]">
                                <list string="Current Issues">
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="issue_date"/>
                                    <field name="due_date"/>
                                    <field name="overdue_days"
                                           decoration-danger="overdue_days &gt; 0"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'issued'"
                                           decoration-danger="state == 'overdue'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Issue History" name="issue_history">
                            <field name="issue_ids" nolabel="1">
                                <list string="All Issues">
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="issue_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date" optional="show"/>
                                    <field name="overdue_days" optional="show"/>
                                    <field name="fine_amount" widget="monetary" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'returned'"
                                           decoration-danger="state == 'overdue'"
                                           decoration-info="state == 'issued'"
                                           decoration-warning="state in ['lost', 'damaged']"/>
                                </list>
                            </field>
                        </page>

                        <page string="Reservations" name="reservations">
                            <field name="reservation_ids" nolabel="1">
                                <list string="Book Reservations">
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="reservation_date"/>
                                    <field name="expiry_date"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'reserved'"
                                           decoration-success="state == 'fulfilled'"
                                           decoration-warning="state == 'expired'"
                                           decoration-muted="state == 'cancelled'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Fines" name="fines">
                            <field name="fine_ids" nolabel="1">
                                <list string="Fine Records">
                                    <field name="name"/>
                                    <field name="fine_type"/>
                                    <field name="date"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="payment_date" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-warning="state == 'pending'"
                                           decoration-success="state == 'paid'"
                                           decoration-info="state == 'waived'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1"
                                   placeholder="Enter any notes or remarks about this member..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View - Library Member -->
    <record id="library_member_view_list" model="ir.ui.view">
        <field name="name">library.member.view.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list string="Library Members"
                  default_order="membership_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'active'"
                  decoration-warning="state == 'expired'"
                  decoration-danger="state == 'suspended'"
                  decoration-muted="state == 'blocked'">
                <field name="name"/>
                <field name="member_type"/>
                <field name="member_name"/>
                <field name="member_email" optional="show"/>
                <field name="member_phone" optional="show"/>
                <field name="membership_date"/>
                <field name="expiry_date" optional="show"/>
                <field name="is_active" widget="boolean_toggle" readonly="1" optional="hide"/>
                <field name="card_number" optional="hide"/>
                <field name="max_books_allowed" optional="hide"/>
                <field name="max_issue_days" optional="hide"/>
                <field name="current_issues" readonly="1" optional="show"/>
                <field name="total_issues" readonly="1" optional="hide"/>
                <field name="pending_fine" widget="monetary" readonly="1" optional="show"
                       decoration-danger="pending_fine &gt; 0"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'expired'"
                       decoration-danger="state == 'suspended'"
                       decoration-muted="state == 'blocked'"/>
            </list>
        </field>
    </record>

    <!-- Search View - Library Member -->
    <record id="library_member_view_search" model="ir.ui.view">
        <field name="name">library.member.view.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search string="Search Members">
                <field name="name"/>
                <field name="member_name"/>
                <field name="member_email"/>
                <field name="member_phone"/>
                <field name="card_number"/>
                <field name="student_id"/>
                <field name="faculty_id"/>

                <separator/>

                <filter name="filter_student" string="Students"
                        domain="[('member_type', '=', 'student')]"/>
                <filter name="filter_faculty" string="Faculty"
                        domain="[('member_type', '=', 'faculty')]"/>
                <filter name="filter_staff" string="Staff"
                        domain="[('member_type', '=', 'staff')]"/>
                <filter name="filter_external" string="External Members"
                        domain="[('member_type', '=', 'external')]"/>

                <separator/>

                <filter name="filter_active_state" string="Active"
                        domain="[('state', '=', 'active')]"/>
                <filter name="filter_expired" string="Expired"
                        domain="[('state', '=', 'expired')]"/>
                <filter name="filter_suspended" string="Suspended"
                        domain="[('state', '=', 'suspended')]"/>
                <filter name="filter_blocked" string="Blocked"
                        domain="[('state', '=', 'blocked')]"/>

                <separator/>

                <filter name="filter_active_membership" string="Active Membership"
                        domain="[('is_active', '=', True)]"/>
                <filter name="filter_expired_membership" string="Expired Membership"
                        domain="[('is_active', '=', False)]"/>

                <separator/>

                <filter name="filter_with_issues" string="With Current Issues"
                        domain="[('current_issues', '&gt;', 0)]"/>
                <filter name="filter_no_issues" string="No Current Issues"
                        domain="[('current_issues', '=', 0)]"/>

                <separator/>

                <filter name="filter_with_fines" string="With Pending Fines"
                        domain="[('pending_fine', '&gt;', 0)]"/>
                <filter name="filter_no_fines" string="No Pending Fines"
                        domain="[('pending_fine', '=', 0)]"/>

                <separator/>

                <filter name="filter_expiring_soon" string="Expiring Soon (30 days)"
                        domain="[('expiry_date', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('expiry_date', '&lt;=', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_member_type" string="Member Type"
                            context="{'group_by': 'member_type'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_membership_date" string="Membership Date"
                            context="{'group_by': 'membership_date'}"/>
                    <filter name="group_by_expiry_date" string="Expiry Date"
                            context="{'group_by': 'expiry_date'}"/>
                </group>

                <searchpanel>
                    <field name="member_type" string="Member Type"
                           select="multi"
                           icon="fa-users"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View - Library Member -->
    <record id="library_member_view_kanban" model="ir.ui.view">
        <field name="name">library.member.view.kanban</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="member_type"/>
                <field name="member_name"/>
                <field name="member_email"/>
                <field name="member_phone"/>
                <field name="membership_date"/>
                <field name="expiry_date"/>
                <field name="is_active"/>
                <field name="card_number"/>
                <field name="max_books_allowed"/>
                <field name="max_issue_days"/>
                <field name="current_issues"/>
                <field name="total_issues"/>
                <field name="pending_fine"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"active": "success", "expired": "warning", "suspended": "danger", "blocked": "muted"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'active'">
                                <span class="text-bg-success">Active</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'expired'">
                                <span class="text-bg-warning">Expired</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'suspended'">
                                <span class="text-bg-danger">Suspended</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'blocked'">
                                <span class="text-bg-dark">Blocked</span>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="member_name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/> - <field name="member_type"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body mt-3">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="mb-1" t-if="record.card_number.raw_value">
                                                    <i class="fa fa-id-card text-primary"/>
                                                    <strong>Card:</strong> <field name="card_number"/>
                                                </div>
                                                <div class="mb-1" t-if="record.member_email.raw_value">
                                                    <i class="fa fa-envelope text-info"/>
                                                    <field name="member_email"/>
                                                </div>
                                                <div class="mb-1" t-if="record.member_phone.raw_value">
                                                    <i class="fa fa-phone text-success"/>
                                                    <field name="member_phone"/>
                                                </div>
                                                <div class="mb-1">
                                                    <i class="fa fa-calendar text-warning"/>
                                                    <strong>Member Since:</strong> <field name="membership_date"/>
                                                </div>
                                                <div class="mb-1" t-if="record.expiry_date.raw_value">
                                                    <i class="fa fa-calendar-times-o text-danger"/>
                                                    <strong>Expires:</strong> <field name="expiry_date"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <div class="card bg-primary text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0"><field name="current_issues"/></h5>
                                                    <small>Current</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-info text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0"><field name="total_issues"/></h5>
                                                    <small>Total</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <div class="card bg-secondary text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0"><field name="max_books_allowed"/></h6>
                                                    <small>Max Books</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-secondary text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h6 class="mb-0"><field name="max_issue_days"/></h6>
                                                    <small>Max Days</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row" t-if="record.pending_fine.raw_value &gt; 0">
                                        <div class="col-12">
                                            <div class="card bg-danger text-white">
                                                <div class="card-body p-2 text-center">
                                                    <h5 class="mb-0">â‚¹<field name="pending_fine"/></h5>
                                                    <small>Pending Fine</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'active'"
                                               decoration-warning="state == 'expired'"
                                               decoration-danger="state == 'suspended'"
                                               decoration-muted="state == 'blocked'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View - Library Member -->
    <record id="library_member_view_calendar" model="ir.ui.view">
        <field name="name">library.member.view.calendar</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <calendar string="Membership Calendar"
                      date_start="membership_date"
                      date_stop="expiry_date"
                      color="state"
                      mode="month"
                      quick_create="0"
                      event_open_popup="1">
                <field name="member_name"/>
                <field name="member_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Library Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_filter_active_state': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register Library Member
            </p>
            <p>
                Manage library memberships for students, faculty, staff, and external members. System
                automatically assigns unique membership numbers using sequence. Select member_type
                (student/faculty/staff/external, required, tracked). Based on member_type, select
                corresponding entity: student_id (student.student), faculty_id (faculty.faculty), or
                partner_id (res.partner for staff/external). System automatically computes member_name
                (stored), member_email, and member_phone from selected entity. Enter membership_date
                (default today, required, tracked) and expiry_date (tracked). System computes is_active
                (checks expiry_date >= today). Optional card details: card_number, card_issued_date.
                Configure limits: max_books_allowed (default 3), max_issue_days (default 14). System
                tracks issue history via issue_ids (one2many to library.issue) and computes current_issues
                (filtered by state in issued/overdue) and total_issues. Track reservations via
                reservation_ids (one2many to library.reservation). System tracks fines via fine_ids
                (one2many to library.fine) and computes total_fine (sum of all fines) and pending_fine
                (sum of pending fines only, red decoration if > 0). 4-state system: Active (default),
                Expired, Suspended (administrative action), Blocked (policy violation). Add notes for
                remarks. Full chatter support for communication and tracking.
            </p>
        </field>
    </record>


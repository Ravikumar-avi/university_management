<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="exam_evaluation_view_form" model="ir.ui.view">
        <field name="name">examination.evaluation.view.form</field>
        <field name="model">examination.evaluation</field>
        <field name="arch" type="xml">
            <form string="Exam Evaluation">
                <header>
                    <button name="action_start" type="object" string="Start Evaluation"
                            class="oe_highlight"
                            invisible="state != 'assigned'"/>
                    <button name="action_complete" type="object" string="Mark as Completed"
                            class="oe_highlight"
                            invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="assigned,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Reference"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Examination Details">
                            <field name="examination_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="subject_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="evaluation_date" widget="date"/>
                        </group>
                        <group string="Evaluator">
                            <field name="evaluator_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Paper Status">
                            <label for="total_papers"/>
                            <div class="o_row">
                                <field name="total_papers" class="oe_inline"/>
                                <span class="text-muted">papers assigned</span>
                            </div>

                            <label for="papers_evaluated"/>
                            <div class="o_row">
                                <field name="papers_evaluated" class="oe_inline"/>
                                <span class="text-muted">papers evaluated</span>
                            </div>

                            <label for="papers_pending"/>
                            <div class="o_row">
                                <field name="papers_pending" readonly="1" class="oe_inline"/>
                                <span class="text-muted">papers pending</span>
                            </div>
                        </group>

                        <group string="Progress">
                            <field name="completion_percentage"
                                   widget="progressbar"
                                   readonly="1"/>
                        </group>
                    </group>

                    <separator string="Notes"/>
                    <field name="notes"
                           placeholder="Enter any notes or remarks about the evaluation process..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="exam_evaluation_view_list" model="ir.ui.view">
        <field name="name">examination.evaluation.view.list</field>
        <field name="model">examination.evaluation</field>
        <field name="arch" type="xml">
            <list string="Exam Evaluations"
                  default_order="evaluation_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'completed'"
                  decoration-info="state == 'in_progress'"
                  decoration-muted="state == 'assigned'"
                  decoration-warning="papers_pending > 0 and state == 'in_progress'">
                <field name="name"/>
                <field name="examination_id"/>
                <field name="subject_id"/>
                <field name="evaluator_id"/>
                <field name="evaluation_date"/>
                <field name="total_papers" sum="Total Papers"/>
                <field name="papers_evaluated" sum="Papers Evaluated"/>
                <field name="papers_pending" sum="Papers Pending"/>
                <field name="completion_percentage" widget="progressbar" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-info="state == 'in_progress'"
                       decoration-muted="state == 'assigned'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="exam_evaluation_view_search" model="ir.ui.view">
        <field name="name">examination.evaluation.view.search</field>
        <field name="model">examination.evaluation</field>
        <field name="arch" type="xml">
            <search string="Search Exam Evaluations">
                <field name="name"/>
                <field name="examination_id"/>
                <field name="subject_id"/>
                <field name="evaluator_id"/>

                <separator/>

                <filter name="filter_assigned" string="Assigned"
                        domain="[('state', '=', 'assigned')]"/>
                <filter name="filter_in_progress" string="In Progress"
                        domain="[('state', '=', 'in_progress')]"/>
                <filter name="filter_completed" string="Completed"
                        domain="[('state', '=', 'completed')]"/>

                <separator/>

                <filter name="filter_pending" string="Has Pending Papers"
                        domain="[('papers_pending', '>', 0)]"/>
                <filter name="filter_fully_evaluated" string="Fully Evaluated"
                        domain="[('papers_pending', '=', 0), ('total_papers', '>', 0)]"/>

                <separator/>

                <filter name="filter_today" string="Today"
                        domain="[('evaluation_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('evaluation_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('evaluation_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('evaluation_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('evaluation_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_examination" string="Examination"
                            context="{'group_by': 'examination_id'}"/>
                    <filter name="group_by_subject" string="Subject"
                            context="{'group_by': 'subject_id'}"/>
                    <filter name="group_by_evaluator" string="Evaluator"
                            context="{'group_by': 'evaluator_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Evaluation Date"
                            context="{'group_by': 'evaluation_date'}"/>
                    <filter name="group_by_month" string="Month"
                            context="{'group_by': 'evaluation_date:month'}"/>
                </group>

                <searchpanel>
                    <field name="examination_id" string="Examination"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="subject_id" string="Subject"
                           select="multi"
                           icon="fa-book"/>
                    <field name="evaluator_id" string="Evaluator"
                           select="multi"
                           icon="fa-user"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="exam_evaluation_view_kanban" model="ir.ui.view">
        <field name="name">examination.evaluation.view.kanban</field>
        <field name="model">examination.evaluation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="examination_id"/>
                <field name="subject_id"/>
                <field name="evaluator_id"/>
                <field name="evaluation_date"/>
                <field name="total_papers"/>
                <field name="papers_evaluated"/>
                <field name="papers_pending"/>
                <field name="completion_percentage"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"assigned": "muted", "in_progress": "info", "completed": "success"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="examination_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="subject_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'completed'"
                                               decoration-info="state == 'in_progress'"
                                               decoration-muted="state == 'assigned'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-user text-primary"/>
                                            <strong>Evaluator:</strong> <field name="evaluator_id"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-calendar text-secondary"/>
                                            Date: <field name="evaluation_date"/>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small class="text-muted">Total Papers:</small>
                                                    <strong><field name="total_papers"/></strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small class="text-muted">Evaluated:</small>
                                                    <strong class="text-success"><field name="papers_evaluated"/></strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-2">
                                                    <small class="text-muted">Pending:</small>
                                                    <strong class="text-danger"><field name="papers_pending"/></strong>
                                                </div>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar"
                                                         role="progressbar"
                                                         t-attf-style="width: #{record.completion_percentage.raw_value}%"
                                                         t-attf-class="#{record.completion_percentage.raw_value == 100 ? 'bg-success' : 'bg-info'}">
                                                        <t t-esc="Math.round(record.completion_percentage.raw_value)"/>%
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="exam_evaluation_view_pivot" model="ir.ui.view">
        <field name="name">examination.evaluation.view.pivot</field>
        <field name="model">examination.evaluation</field>
        <field name="arch" type="xml">
            <pivot string="Evaluation Analysis">
                <field name="evaluator_id" type="row"/>
                <field name="examination_id" type="col"/>
                <field name="total_papers" type="measure"/>
                <field name="papers_evaluated" type="measure"/>
                <field name="papers_pending" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="exam_evaluation_view_graph" model="ir.ui.view">
        <field name="name">examination.evaluation.view.graph</field>
        <field name="model">examination.evaluation</field>
        <field name="arch" type="xml">
            <graph string="Evaluation Statistics" type="bar" stacked="True">
                <field name="evaluator_id"/>
                <field name="papers_evaluated" type="measure"/>
                <field name="papers_pending" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_exam_evaluation" model="ir.actions.act_window">
        <field name="name">Exam Evaluations</field>
        <field name="res_model">examination.evaluation</field>
        <field name="view_mode">list,kanban,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Exam Evaluation Record
            </p>
            <p>
                Track exam answer sheet evaluation progress with paper assignment to faculty
                evaluators. Monitor papers evaluated, pending papers, and completion percentage.
                Manage evaluation workflow from assignment through in-progress to completion.
            </p>
        </field>
    </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="examination_view_form" model="ir.ui.view">
        <field name="name">examination.examination.view.form</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <form string="Examination">
                <header>
                    <button name="action_schedule" type="object" string="Schedule"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_open_registration" type="object" string="Open Registration"
                            class="oe_highlight"
                            invisible="state != 'scheduled'"/>
                    <button name="action_close_registration" type="object" string="Close Registration"
                            class="oe_highlight"
                            invisible="state != 'registration_open'"/>
                    <button name="action_start_exam" type="object" string="Start Exam"
                            class="oe_highlight"
                            invisible="state != 'registration_closed'"/>
                    <button name="action_complete_exam" type="object" string="Complete Exam"
                            class="oe_highlight"
                            invisible="state != 'ongoing'"/>
                    <button name="action_publish_results" type="object" string="Publish Results"
                            class="oe_highlight"
                            invisible="state != 'completed'"/>

                    <button name="action_generate_hall_tickets" type="object" string="Generate Hall Tickets"
                            class="btn-secondary"
                            invisible="state in ['draft', 'results_published']"/>
                    <button name="action_generate_seating" type="object" string="Generate Seating"
                            class="btn-secondary"
                            invisible="state in ['draft', 'results_published']"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,registration_open,ongoing,completed,results_published"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_exam_timetable)d" type="action"
                                class="oe_stat_button" icon="fa-calendar"
                                context="{'default_examination_id': id, 'search_default_examination_id': id}">
                            <field name="timetable_ids" widget="statinfo"
                                   string="Timetable"/>
                        </button>
                        <button name="%(action_examination_hall_ticket)d" type="action"
                                class="oe_stat_button" icon="fa-ticket"
                                context="{'default_examination_id': id, 'search_default_examination_id': id}">
                            <field name="hall_ticket_ids" widget="statinfo"
                                   string="Hall Tickets"/>
                        </button>
                        <button name="%(action_exam_result)d" type="action"
                                class="oe_stat_button" icon="fa-bar-chart"
                                context="{'default_examination_id': id, 'search_default_examination_id': id}">
                            <field name="result_ids" widget="statinfo"
                                   string="Results"/>
                        </button>
                        <button name="%(action_exam_seating)d" type="action"
                                class="oe_stat_button" icon="fa-chair"
                                context="{'default_examination_id': id, 'search_default_examination_id': id}">
                            <field name="seating_ids" widget="statinfo"
                                   string="Seating"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Ongoing" bg_color="text-bg-warning"
                            invisible="state != 'ongoing'"/>
                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success"
                            invisible="state != 'completed'"/>
                    <widget name="web_ribbon" title="Results Published" bg_color="text-bg-info"
                            invisible="state != 'results_published'"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>

                    <div class="oe_title">
                        <label for="name" string="Examination Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Final Exam December 2025"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Details">
                            <field name="code" placeholder="e.g., FINAL-2025-DEC"/>
                            <field name="exam_type"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Academic Details">
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="semester_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Exam Period">
                            <field name="start_date" widget="date"/>
                            <field name="end_date" widget="date"/>
                        </group>
                        <group string="Registration Period">
                            <field name="registration_start_date" widget="date"/>
                            <field name="registration_end_date" widget="date"/>
                        </group>
                    </group>

                    <group>
                        <group string="Applicable Scope">
                            <field name="program_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create': True}"
                                   placeholder="Select programs..."/>
                            <field name="department_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create': True}"
                                   placeholder="Select departments..."/>
                        </group>
                        <group string="Examination Fee">
                            <field name="currency_id" invisible="1"/>
                            <field name="exam_fee" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Status Indicators">
                            <field name="hall_tickets_generated" readonly="1"
                                   widget="boolean"
                                   string="Hall Tickets Generated"/>
                            <field name="results_published" readonly="1"
                                   widget="boolean"
                                   string="All Results Published"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Exam Timetable" name="timetable">
                            <field name="timetable_ids"
                                   context="{'default_examination_id': id}">
                                <list string="Timetable">
                                    <field name="subject_id"/>
                                    <field name="exam_date"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="venue"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Hall Tickets" name="hall_tickets">
                            <field name="hall_ticket_ids"
                                   context="{'default_examination_id': id}">
                                <list string="Hall Tickets">
                                    <field name="student_id"/>
                                    <field name="name"/>
                                    <field name="is_eligible"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Results" name="results">
                            <field name="result_ids"
                                   context="{'default_examination_id': id}">
                                <list string="Results">
                                    <field name="student_id"/>
                                    <field name="subject_id"/>
                                    <field name="total_marks"/>
                                    <field name="grade_letter"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Seating Arrangement" name="seating">
                            <field name="seating_ids"
                                   context="{'default_examination_id': id}">
                                <list string="Seating">
                                    <field name="student_id"/>
                                    <field name="room_number_id"/>
                                    <field name="seat_number"/>
                                    <field name="is_confirmed"/>
                                </list>
                            </field>
                        </page>

                        <page string="Instructions" name="instructions">
                            <field name="instructions"
                                   placeholder="Enter exam instructions (rules, allowed materials, etc.)..."/>
                        </page>

                        <page string="Description" name="description">
                            <field name="description"
                                   placeholder="Enter exam description..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="examination_view_list" model="ir.ui.view">
        <field name="name">examination.examination.view.list</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <list string="Examinations"
                  default_order="start_date desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'completed'"
                  decoration-info="state == 'results_published'"
                  decoration-warning="state == 'ongoing'"
                  decoration-primary="state in ['scheduled', 'registration_open']"
                  decoration-muted="active == False">
                <field name="name"/>
                <field name="code"/>
                <field name="exam_type" optional="show"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="program_ids" widget="many2many_tags" optional="hide"/>
                <field name="department_ids" widget="many2many_tags" optional="hide"/>
                <field name="registration_start_date" optional="hide"/>
                <field name="registration_end_date" optional="hide"/>
                <field name="exam_fee" optional="hide"/>
                <field name="hall_tickets_generated" optional="hide" widget="boolean"/>
                <field name="results_published" optional="hide" widget="boolean"/>
                <field name="active" optional="hide" widget="boolean_toggle"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-info="state == 'results_published'"
                       decoration-warning="state == 'ongoing'"
                       decoration-primary="state in ['scheduled', 'registration_open']"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="examination_view_search" model="ir.ui.view">
        <field name="name">examination.examination.view.search</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <search string="Search Examinations">
                <field name="name"/>
                <field name="code"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="exam_type"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_scheduled" string="Scheduled"
                        domain="[('state', '=', 'scheduled')]"/>
                <filter name="filter_registration_open" string="Registration Open"
                        domain="[('state', '=', 'registration_open')]"/>
                <filter name="filter_ongoing" string="Ongoing"
                        domain="[('state', '=', 'ongoing')]"/>
                <filter name="filter_completed" string="Completed"
                        domain="[('state', '=', 'completed')]"/>
                <filter name="filter_results_published" string="Results Published"
                        domain="[('state', '=', 'results_published')]"/>

                <separator/>

                <filter name="filter_internal" string="Internal/Mid-term"
                        domain="[('exam_type', '=', 'internal')]"/>
                <filter name="filter_external" string="External/End-term"
                        domain="[('exam_type', '=', 'external')]"/>
                <filter name="filter_final" string="Final Examination"
                        domain="[('exam_type', '=', 'final')]"/>
                <filter name="filter_supplementary" string="Supplementary"
                        domain="[('exam_type', '=', 'supplementary')]"/>
                <filter name="filter_improvement" string="Improvement"
                        domain="[('exam_type', '=', 'improvement')]"/>
                <filter name="filter_practical" string="Practical"
                        domain="[('exam_type', '=', 'practical')]"/>

                <separator/>

                <filter name="filter_upcoming" string="Upcoming"
                        domain="[('start_date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('state', 'in', ['scheduled', 'registration_open', 'registration_closed'])]"/>
                <filter name="filter_current" string="Current"
                        domain="[('start_date', '&lt;=', context_today().strftime('%Y-%m-%d')), ('end_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_past" string="Past"
                        domain="[('end_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>

                <separator/>

                <filter name="filter_hall_tickets_generated" string="Hall Tickets Generated"
                        domain="[('hall_tickets_generated', '=', True)]"/>
                <filter name="filter_results_published_bool" string="Results Published"
                        domain="[('results_published', '=', True)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_semester" string="Semester"
                            context="{'group_by': 'semester_id'}"/>
                    <filter name="group_by_exam_type" string="Examination Type"
                            context="{'group_by': 'exam_type'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_start_date" string="Start Date"
                            context="{'group_by': 'start_date'}"/>
                </group>

                <searchpanel>
                    <field name="academic_year_id" string="Academic Year"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="semester_id" string="Semester"
                           select="multi"
                           icon="fa-list-ol"/>
                    <field name="exam_type" string="Exam Type"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="examination_view_kanban" model="ir.ui.view">
        <field name="name">examination.examination.view.kanban</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="exam_type"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="registration_start_date"/>
                <field name="registration_end_date"/>
                <field name="exam_fee"/>
                <field name="program_ids"/>
                <field name="department_ids"/>
                <field name="timetable_ids"/>
                <field name="hall_ticket_ids"/>
                <field name="result_ids"/>
                <field name="seating_ids"/>
                <field name="hall_tickets_generated"/>
                <field name="results_published"/>
                <field name="state"/>
                <field name="active"/>

                <progressbar field="state"
                             colors='{"draft": "secondary", "scheduled": "primary", "registration_open": "info", "ongoing": "warning", "completed": "success", "results_published": "info"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'ongoing'">
                                <span class="text-bg-warning">Ongoing</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'completed'">
                                <span class="text-bg-success">Completed</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="record.state.raw_value == 'results_published'">
                                <span class="text-bg-info">Results Published</span>
                            </div>
                            <div class="ribbon ribbon-top-right" t-if="!record.active.raw_value">
                                <span class="text-bg-danger">Archived</span>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'completed'"
                                               decoration-info="state == 'results_published'"
                                               decoration-warning="state == 'ongoing'"
                                               decoration-primary="state in ['scheduled', 'registration_open']"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <span class="badge rounded-pill"
                                                  t-attf-class="{{record.exam_type.raw_value == 'internal' ? 'text-bg-primary' : record.exam_type.raw_value == 'external' ? 'text-bg-success' : record.exam_type.raw_value == 'final' ? 'text-bg-danger' : record.exam_type.raw_value == 'supplementary' ? 'text-bg-warning' : record.exam_type.raw_value == 'improvement' ? 'text-bg-info' : 'text-bg-secondary'}}">
                                                <field name="exam_type"/>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-primary"/>
                                            <strong><field name="academic_year_id"/></strong>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-list-ol text-info"/>
                                            <strong><field name="semester_id"/></strong>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span>
                                                        <i class="fa fa-calendar-check-o text-success"/>
                                                        <strong> Start:</strong>
                                                    </span>
                                                    <strong class="text-success">
                                                        <field name="start_date"/>
                                                    </strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span>
                                                        <i class="fa fa-calendar-times-o text-danger"/>
                                                        <strong> End:</strong>
                                                    </span>
                                                    <strong class="text-danger">
                                                        <field name="end_date"/>
                                                    </strong>
                                                </div>
                                                <hr class="my-1"/>
                                                <div class="d-flex justify-content-between mb-1" t-if="record.exam_fee.raw_value">
                                                    <span>
                                                        <i class="fa fa-money text-warning"/>
                                                        <strong> Fee:</strong>
                                                    </span>
                                                    <strong class="text-warning">
                                                        <field name="exam_fee"/>
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <div class="d-flex justify-content-around text-center">
                                                <div>
                                                    <i class="fa fa-calendar fa-2x text-primary"/>
                                                    <div><strong><t t-esc="record.timetable_ids.raw_value.length"/></strong></div>
                                                    <small class="text-muted">Timetable</small>
                                                </div>
                                                <div>
                                                    <i class="fa fa-ticket fa-2x text-info"/>
                                                    <div><strong><t t-esc="record.hall_ticket_ids.raw_value.length"/></strong></div>
                                                    <small class="text-muted">Hall Tickets</small>
                                                </div>
                                                <div>
                                                    <i class="fa fa-bar-chart fa-2x text-success"/>
                                                    <div><strong><t t-esc="record.result_ids.raw_value.length"/></strong></div>
                                                    <small class="text-muted">Results</small>
                                                </div>
                                                <div>
                                                    <i class="fa fa-chair fa-2x text-warning"/>
                                                    <div><strong><t t-esc="record.seating_ids.raw_value.length"/></strong></div>
                                                    <small class="text-muted">Seating</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-2" t-if="record.hall_tickets_generated.raw_value or record.results_published.raw_value">
                                        <div class="col-12">
                                            <span class="badge text-bg-success me-1" t-if="record.hall_tickets_generated.raw_value">
                                                <i class="fa fa-check"/> Hall Tickets Generated
                                            </span>
                                            <span class="badge text-bg-info" t-if="record.results_published.raw_value">
                                                <i class="fa fa-check"/> Results Published
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="examination_view_calendar" model="ir.ui.view">
        <field name="name">examination.examination.view.calendar</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <calendar string="Examination Calendar"
                      date_start="start_date"
                      date_stop="end_date"
                      mode="month"
                      color="state"
                      quick_create="false"
                      event_open_popup="true">
                <field name="name"/>
                <field name="exam_type"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="examination_view_pivot" model="ir.ui.view">
        <field name="name">examination.examination.view.pivot</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <pivot string="Examination Analysis">
                <field name="academic_year_id" type="row"/>
                <field name="exam_type" type="col"/>
                <field name="exam_fee" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="examination_view_graph" model="ir.ui.view">
        <field name="name">examination.examination.view.graph</field>
        <field name="model">examination.examination</field>
        <field name="arch" type="xml">
            <graph string="Examination Statistics" type="bar">
                <field name="academic_year_id"/>
                <field name="exam_type"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_examination" model="ir.actions.act_window">
        <field name="name">Examinations</field>
        <field name="res_model">examination.examination</field>
        <field name="view_mode">list,kanban,calendar,form,pivot,graph</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Examination
            </p>
            <p>
                Manage examinations with complete workflow from scheduling to result publication.
                Define examination type (Internal/External/Final/Supplementary/Improvement/Practical),
                academic year, semester, and applicable programs/departments. Set exam period and
                registration dates. Configure examination fee. Track 7-state workflow: Draft →
                Scheduled → Registration Open → Registration Closed → Ongoing → Completed →
                Results Published. Generate hall tickets and seating arrangements via wizard.
                Monitor timetable, hall tickets, results, and seating through one2many relations.
                Computed indicators show hall ticket generation and result publication status.
            </p>
        </field>
    </record>


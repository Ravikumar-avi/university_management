<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="faculty_workload_view_form" model="ir.ui.view">
        <field name="name">faculty.workload.view.form</field>
        <field name="model">faculty.workload</field>
        <field name="arch" type="xml">
            <form string="Faculty Workload">
                <header>
                    <button name="action_submit" type="object" string="Submit"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve"
                            class="oe_highlight"
                            invisible="state != 'submitted'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="1">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Overloaded" bg_color="text-bg-danger"
                            invisible="not is_overloaded"/>

                    <div class="oe_title">
                        <label for="name" string="Reference"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Faculty Information">
                            <field name="faculty_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id" readonly="1"/>
                            <field name="designation_id" readonly="1"/>
                        </group>
                        <group string="Academic Period">
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="semester_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Teaching Load" name="teaching_load">
                            <group>
                                <group string="Course Assignments">
                                    <field name="course_ids" widget="many2many_tags"
                                           options="{'color_field': 'color', 'no_create': True}"/>
                                    <field name="total_courses" readonly="1"/>
                                    <field name="total_students" readonly="1"/>
                                </group>
                            </group>

                            <separator string="Teaching Hours (Per Week)"/>

                            <group>
                                <group string="Class Hours">
                                    <label for="theory_hours"/>
                                    <div class="o_row">
                                        <field name="theory_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>

                                    <label for="practical_hours"/>
                                    <div class="o_row">
                                        <field name="practical_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>

                                    <label for="lab_hours"/>
                                    <div class="o_row">
                                        <field name="lab_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>

                                    <label for="tutorial_hours"/>
                                    <div class="o_row">
                                        <field name="tutorial_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>
                                </group>

                                <group string="Workload Summary">
                                    <field name="total_hours" readonly="1"
                                           class="oe_read_only fw-bold"/>
                                    <field name="hours_per_week" readonly="1"
                                           class="oe_read_only"/>
                                    <field name="max_allowed_hours" readonly="1"/>
                                    <field name="is_overloaded" readonly="1"
                                           widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>

                        <page string="Non-Teaching Activities" name="non_teaching">
                            <group>
                                <group string="Additional Responsibilities">
                                    <label for="administrative_hours"/>
                                    <div class="o_row">
                                        <field name="administrative_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>

                                    <label for="research_hours"/>
                                    <div class="o_row">
                                        <field name="research_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>

                                    <label for="exam_duties_hours"/>
                                    <div class="o_row">
                                        <field name="exam_duties_hours" widget="float"/>
                                        <span>hours/week</span>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Approval Details" name="approval">
                            <group>
                                <group string="Approval Information">
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approval_date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes"
                                   placeholder="Enter any additional notes about workload..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="faculty_workload_view_list" model="ir.ui.view">
        <field name="name">faculty.workload.view.list</field>
        <field name="model">faculty.workload</field>
        <field name="arch" type="xml">
            <list string="Faculty Workload"
                  default_order="academic_year_id desc, semester_id"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'approved'"
                  decoration-warning="state == 'submitted'"
                  decoration-muted="state == 'draft'"
                  decoration-danger="is_overloaded == True">
                <field name="name"/>
                <field name="faculty_id"/>
                <field name="department_id" optional="show"/>
                <field name="designation_id" optional="hide"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="total_courses" optional="show"/>
                <field name="total_students" optional="show" sum="Total Students"/>
                <field name="theory_hours" optional="hide" sum="Total Theory Hours"/>
                <field name="practical_hours" optional="hide" sum="Total Practical Hours"/>
                <field name="lab_hours" optional="hide" sum="Total Lab Hours"/>
                <field name="tutorial_hours" optional="hide" sum="Total Tutorial Hours"/>
                <field name="total_hours" optional="show" sum="Total Teaching Hours"/>
                <field name="max_allowed_hours" optional="hide"/>
                <field name="is_overloaded" optional="show" widget="boolean_toggle"/>
                <field name="administrative_hours" optional="hide"/>
                <field name="research_hours" optional="hide"/>
                <field name="exam_duties_hours" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'approved'"
                       decoration-warning="state == 'submitted'"
                       decoration-muted="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="faculty_workload_view_search" model="ir.ui.view">
        <field name="name">faculty.workload.view.search</field>
        <field name="model">faculty.workload</field>
        <field name="arch" type="xml">
            <search string="Search Faculty Workload">
                <field name="name"/>
                <field name="faculty_id"/>
                <field name="department_id"/>
                <field name="designation_id"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_submitted" string="Submitted"
                        domain="[('state', '=', 'submitted')]"/>
                <filter name="filter_approved" string="Approved"
                        domain="[('state', '=', 'approved')]"/>

                <separator/>

                <filter name="filter_overloaded" string="Overloaded"
                        domain="[('is_overloaded', '=', True)]"/>
                <filter name="filter_normal_load" string="Normal Load"
                        domain="[('is_overloaded', '=', False)]"/>

                <separator/>

                <filter name="filter_current_year" string="Current Academic Year"
                        domain="[('academic_year_id.is_current', '=', True)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_faculty" string="Faculty"
                            context="{'group_by': 'faculty_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_designation" string="Designation"
                            context="{'group_by': 'designation_id'}"/>
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_semester" string="Semester"
                            context="{'group_by': 'semester_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_overload" string="Overload Status"
                            context="{'group_by': 'is_overloaded'}"/>
                </group>

                <searchpanel>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="academic_year_id" string="Academic Year"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="semester_id" string="Semester"
                           select="multi"
                           icon="fa-book"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="faculty_workload_view_kanban" model="ir.ui.view">
        <field name="name">faculty.workload.view.kanban</field>
        <field name="model">faculty.workload</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="faculty_id"/>
                <field name="department_id"/>
                <field name="designation_id"/>
                <field name="academic_year_id"/>
                <field name="semester_id"/>
                <field name="total_courses"/>
                <field name="total_students"/>
                <field name="theory_hours"/>
                <field name="practical_hours"/>
                <field name="lab_hours"/>
                <field name="tutorial_hours"/>
                <field name="total_hours"/>
                <field name="max_allowed_hours"/>
                <field name="is_overloaded"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "submitted": "warning", "approved": "success"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" t-if="record.is_overloaded.raw_value">
                                <span class="text-bg-danger">Overloaded</span>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="faculty_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'approved'"
                                               decoration-warning="state == 'submitted'"
                                               decoration-muted="state == 'draft'"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-building text-primary"/>
                                            <field name="department_id"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-id-badge text-info"/>
                                            <field name="designation_id"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-calendar text-secondary"/>
                                            <strong><field name="academic_year_id"/> - <field name="semester_id"/></strong>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-book text-success"/>
                                            <strong><field name="total_courses"/></strong> Courses
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-users text-warning"/>
                                            <strong><field name="total_students"/></strong> Students
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="bg-light p-2 rounded">
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small class="text-muted">Theory:</small>
                                                    <strong><field name="theory_hours"/> hrs</strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small class="text-muted">Practical:</small>
                                                    <strong><field name="practical_hours"/> hrs</strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small class="text-muted">Lab:</small>
                                                    <strong><field name="lab_hours"/> hrs</strong>
                                                </div>
                                                <div class="d-flex justify-content-between mb-1">
                                                    <small class="text-muted">Tutorial:</small>
                                                    <strong><field name="tutorial_hours"/> hrs</strong>
                                                </div>
                                                <hr class="my-1"/>
                                                <div class="d-flex justify-content-between">
                                                    <strong>Total Hours/Week:</strong>
                                                    <strong t-attf-class="#{record.is_overloaded.raw_value ? 'text-danger' : 'text-success'}">
                                                        <field name="total_hours"/> / <field name="max_allowed_hours"/>
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="faculty_workload_view_pivot" model="ir.ui.view">
        <field name="name">faculty.workload.view.pivot</field>
        <field name="model">faculty.workload</field>
        <field name="arch" type="xml">
            <pivot string="Workload Analysis">
                <field name="department_id" type="row"/>
                <field name="semester_id" type="col"/>
                <field name="total_hours" type="measure"/>
                <field name="total_courses" type="measure"/>
                <field name="total_students" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="faculty_workload_view_graph" model="ir.ui.view">
        <field name="name">faculty.workload.view.graph</field>
        <field name="model">faculty.workload</field>
        <field name="arch" type="xml">
            <graph string="Workload Statistics" type="bar" stacked="True">
                <field name="faculty_id"/>
                <field name="theory_hours" type="measure"/>
                <field name="practical_hours" type="measure"/>
                <field name="lab_hours" type="measure"/>
                <field name="tutorial_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_faculty_workload" model="ir.actions.act_window">
        <field name="name">Faculty Workload</field>
        <field name="res_model">faculty.workload</field>
        <field name="view_mode">list,kanban,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Faculty Workload
            </p>
            <p>
                Track faculty teaching workload with detailed hour breakdown (theory, practical,
                lab, tutorial), course assignments, student count, and non-teaching activities
                (administrative, research, exam duties). Automatically detects overload when
                hours exceed designation limits.
            </p>
        </field>
    </record>


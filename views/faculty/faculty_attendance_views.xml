<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="faculty_attendance_view_form" model="ir.ui.view">
        <field name="name">faculty.attendance.view.form</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <form string="Faculty Attendance">
                <sheet>
                    <div class="oe_title">
                        <label for="faculty_id" string="Faculty"/>
                        <h1>
                            <field name="faculty_id"
                                   placeholder="Select Faculty"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <h3>
                            <field name="name" readonly="1"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Attendance Information">
                            <field name="employee_id" readonly="1" invisible="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="date" widget="date"/>
                            <field name="state" widget="radio"/>
                        </group>
                        <group string="Time Information">
                            <field name="check_in" widget="datetime"/>
                            <field name="check_out" widget="datetime"/>
                            <field name="worked_hours" readonly="1"
                                   widget="float_time"/>
                        </group>
                    </group>

                    <group string="Leave Reference"
                           invisible="state != 'on_leave'">
                        <field name="leave_id"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>

                    <group string="Late Coming Details"
                           invisible="not is_late">
                        <group>
                            <field name="is_late" widget="boolean_toggle"/>
                            <field name="late_minutes" invisible="not is_late"/>
                        </group>
                        <group>
                            <field name="late_reason"
                                   placeholder="Enter reason for late coming..."
                                   invisible="not is_late"/>
                        </group>
                    </group>

                    <group string="Overtime Details"
                           invisible="not is_overtime">
                        <group>
                            <field name="is_overtime" widget="boolean_toggle"/>
                            <field name="overtime_hours" widget="float_time"
                                   invisible="not is_overtime"/>
                        </group>
                        <group>
                            <field name="overtime_approved" widget="boolean_toggle"
                                   invisible="not is_overtime"/>
                        </group>
                    </group>

                    <group string="Additional Information">
                        <field name="remarks"
                               placeholder="Enter any additional remarks..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="faculty_attendance_view_list" model="ir.ui.view">
        <field name="name">faculty.attendance.view.list</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <list string="Faculty Attendance"
                  default_order="date desc, faculty_id"
                  multi_edit="1"
                  sample="1"
                  decoration-success="state == 'present'"
                  decoration-danger="state == 'absent'"
                  decoration-warning="state in ['half_day', 'late']"
                  decoration-info="state in ['on_leave', 'holiday', 'week_off']">
                <field name="faculty_id"/>
                <field name="department_id" optional="show"/>
                <field name="date"/>
                <field name="check_in" widget="datetime" optional="show"/>
                <field name="check_out" widget="datetime" optional="show"/>
                <field name="worked_hours" widget="float_time"
                       sum="Total Hours" optional="show"/>
                <field name="is_late" widget="boolean_toggle" optional="show"/>
                <field name="late_minutes" optional="hide"/>
                <field name="is_overtime" widget="boolean_toggle" optional="hide"/>
                <field name="overtime_hours" widget="float_time"
                       sum="Total Overtime" optional="hide"/>
                <field name="overtime_approved" widget="boolean_toggle" optional="hide"/>
                <field name="leave_id" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'present'"
                       decoration-danger="state == 'absent'"
                       decoration-warning="state in ['half_day', 'late']"
                       decoration-info="state in ['on_leave', 'holiday', 'week_off']"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="faculty_attendance_view_search" model="ir.ui.view">
        <field name="name">faculty.attendance.view.search</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Faculty Attendance">
                <field name="faculty_id"/>
                <field name="department_id"/>
                <field name="date"/>

                <separator/>

                <filter name="filter_present" string="Present"
                        domain="[('state', '=', 'present')]"/>
                <filter name="filter_absent" string="Absent"
                        domain="[('state', '=', 'absent')]"/>
                <filter name="filter_half_day" string="Half Day"
                        domain="[('state', '=', 'half_day')]"/>
                <filter name="filter_on_leave" string="On Leave"
                        domain="[('state', '=', 'on_leave')]"/>
                <filter name="filter_late" string="Late"
                        domain="[('state', '=', 'late')]"/>
                <filter name="filter_holiday" string="Holiday"
                        domain="[('state', '=', 'holiday')]"/>
                <filter name="filter_week_off" string="Week Off"
                        domain="[('state', '=', 'week_off')]"/>

                <separator/>

                <filter name="filter_is_late" string="Late Coming"
                        domain="[('is_late', '=', True)]"/>
                <filter name="filter_is_overtime" string="Overtime"
                        domain="[('is_overtime', '=', True)]"/>
                <filter name="filter_overtime_approved" string="Overtime Approved"
                        domain="[('overtime_approved', '=', True)]"/>

                <separator/>

                <filter name="filter_today" string="Today"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="This Week"
                        domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                 ('date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_last_month" string="Last Month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;=', (context_today() - relativedelta(months=1, day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_faculty" string="Faculty"
                            context="{'group_by': 'faculty_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Date"
                            context="{'group_by': 'date'}"/>
                    <filter name="group_by_month" string="Month"
                            context="{'group_by': 'date:month'}"/>
                </group>

                <searchpanel>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="faculty_attendance_view_kanban" model="ir.ui.view">
        <field name="name">faculty.attendance.view.kanban</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="faculty_id"/>
                <field name="department_id"/>
                <field name="date"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours"/>
                <field name="is_late"/>
                <field name="late_minutes"/>
                <field name="is_overtime"/>
                <field name="overtime_hours"/>
                <field name="state"/>

                <progressbar field="state"
                             colors='{"present": "success", "absent": "danger", "half_day": "warning", "late": "warning", "on_leave": "info", "holiday": "info", "week_off": "info"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="faculty_id"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="department_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'present'"
                                               decoration-danger="state == 'absent'"
                                               decoration-warning="state in ['half_day', 'late']"
                                               decoration-info="state in ['on_leave', 'holiday', 'week_off']"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-calendar text-primary"/>
                                            <field name="date"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.check_in.raw_value">
                                        <div class="col-6">
                                            <i class="fa fa-sign-in text-success"/>
                                            <small>In: <field name="check_in" widget="datetime"/></small>
                                        </div>
                                        <div class="col-6" t-if="record.check_out.raw_value">
                                            <i class="fa fa-sign-out text-danger"/>
                                            <small>Out: <field name="check_out" widget="datetime"/></small>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.worked_hours.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-clock-o text-info"/>
                                            Worked: <strong><field name="worked_hours" widget="float_time"/> hrs</strong>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6" t-if="record.is_late.raw_value">
                                            <span class="badge text-bg-warning">
                                                <i class="fa fa-clock-o"/> Late (<field name="late_minutes"/> min)
                                            </span>
                                        </div>
                                        <div class="col-6" t-if="record.is_overtime.raw_value">
                                            <span class="badge text-bg-info">
                                                <i class="fa fa-plus"/> OT (<field name="overtime_hours" widget="float_time"/> hrs)
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="faculty_attendance_view_calendar" model="ir.ui.view">
        <field name="name">faculty.attendance.view.calendar</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <calendar string="Attendance Calendar"
                      date_start="date"
                      color="faculty_id"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="faculty_id"/>
                <field name="department_id"/>
                <field name="state"/>
                <field name="worked_hours"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="faculty_attendance_view_pivot" model="ir.ui.view">
        <field name="name">faculty.attendance.view.pivot</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <pivot string="Attendance Analysis">
                <field name="faculty_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="worked_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="faculty_attendance_view_graph" model="ir.ui.view">
        <field name="name">faculty.attendance.view.graph</field>
        <field name="model">faculty.attendance</field>
        <field name="arch" type="xml">
            <graph string="Attendance Statistics" type="bar">
                <field name="date" interval="week"/>
                <field name="worked_hours" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_faculty_attendance" model="ir.actions.act_window">
        <field name="name">Faculty Attendance</field>
        <field name="res_model">faculty.attendance</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Mark Faculty Attendance
            </p>
            <p>
                Track faculty attendance with check-in/check-out times, late coming,
                overtime hours, and comprehensive reporting capabilities.
            </p>
        </field>
    </record>


    <!-- ===================== Faculty Qualification Views ===================== -->

    <!-- Form View -->
    <record id="faculty_qualification_view_form" model="ir.ui.view">
        <field name="name">faculty.qualification.view.form</field>
        <field name="model">faculty.qualification</field>
        <field name="arch" type="xml">
            <form string="Faculty Qualification">
                <sheet>
                    <div class="oe_title">
                        <label for="degree" string="Qualification"/>
                        <h1>
                            <field name="degree" placeholder="e.g., Ph.D in Computer Science"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Academic Details">
                            <field name="faculty_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="specialization"/>
                            <field name="institution"/>
                        </group>
                        <group string="Performance">
                            <field name="year_of_passing"/>
                            <field name="percentage"/>
                            <field name="is_verified" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group string="Certificate/Document">
                        <field name="certificate" filename="certificate_name"/>
                        <field name="certificate_name" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="faculty_qualification_view_list" model="ir.ui.view">
        <field name="name">faculty.qualification.view.list</field>
        <field name="model">faculty.qualification</field>
        <field name="arch" type="xml">
            <list string="Faculty Qualifications"
                  default_order="year_of_passing desc"
                  multi_edit="1"
                  sample="1"
                  decoration-success="is_verified == True"
                  decoration-warning="is_verified == False">
                <field name="faculty_id"/>
                <field name="degree"/>
                <field name="specialization" optional="show"/>
                <field name="institution"/>
                <field name="year_of_passing"/>
                <field name="percentage" optional="show"/>
                <field name="is_verified" widget="boolean_toggle" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="faculty_qualification_view_search" model="ir.ui.view">
        <field name="name">faculty.qualification.view.search</field>
        <field name="model">faculty.qualification</field>
        <field name="arch" type="xml">
            <search string="Search Faculty Qualifications">
                <field name="faculty_id"/>
                <field name="degree"/>
                <field name="specialization"/>
                <field name="institution"/>

                <separator/>

                <filter name="filter_verified" string="Verified"
                        domain="[('is_verified', '=', True)]"/>
                <filter name="filter_not_verified" string="Not Verified"
                        domain="[('is_verified', '=', False)]"/>

                <separator/>

                <filter name="filter_phd" string="Ph.D"
                        domain="[('degree', 'ilike', 'phd')]"/>
                <filter name="filter_masters" string="Masters"
                        domain="['|', ('degree', 'ilike', 'master'), ('degree', 'ilike', 'm.tech'), ('degree', 'ilike', 'm.sc')]"/>
                <filter name="filter_bachelors" string="Bachelors"
                        domain="['|', ('degree', 'ilike', 'bachelor'), ('degree', 'ilike', 'b.tech'), ('degree', 'ilike', 'b.sc')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_faculty" string="Faculty"
                            context="{'group_by': 'faculty_id'}"/>
                    <filter name="group_by_degree" string="Degree"
                            context="{'group_by': 'degree'}"/>
                    <filter name="group_by_institution" string="Institution"
                            context="{'group_by': 'institution'}"/>
                    <filter name="group_by_year" string="Year of Passing"
                            context="{'group_by': 'year_of_passing'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="faculty_qualification_view_kanban" model="ir.ui.view">
        <field name="name">faculty.qualification.view.kanban</field>
        <field name="model">faculty.qualification</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_order="year_of_passing desc"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="faculty_id"/>
                <field name="degree"/>
                <field name="specialization"/>
                <field name="institution"/>
                <field name="year_of_passing"/>
                <field name="percentage"/>
                <field name="is_verified"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="degree"/>
                                        </strong>
                                        <div class="text-muted">
                                            <field name="faculty_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-if="record.is_verified.raw_value"
                                              class="badge text-bg-success">
                                            <i class="fa fa-check"/> Verified
                                        </span>
                                        <span t-else="" class="badge text-bg-warning">
                                            <i class="fa fa-clock-o"/> Pending
                                        </span>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2" t-if="record.specialization.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-bookmark text-primary"/>
                                            <field name="specialization"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-university text-info"/>
                                            <field name="institution"/>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fa fa-calendar text-secondary"/>
                                            Year: <strong><field name="year_of_passing"/></strong>
                                        </div>
                                        <div class="col-6" t-if="record.percentage.raw_value">
                                            <i class="fa fa-star text-warning"/>
                                            Score: <strong><field name="percentage"/>%</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_faculty_qualification" model="ir.actions.act_window">
        <field name="name">Faculty Qualifications</field>
        <field name="res_model">faculty.qualification</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Faculty Qualification
            </p>
            <p>
                Track all academic qualifications of faculty members including degrees,
                specializations, institutions, and verification status.
            </p>
        </field>
    </record>


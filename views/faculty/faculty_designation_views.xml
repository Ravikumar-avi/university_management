<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================== Faculty Designation Views ===================== -->

    <!-- Form View -->
    <record id="faculty_designation_view_form" model="ir.ui.view">
        <field name="name">faculty.designation.view.form</field>
        <field name="model">faculty.designation</field>
        <field name="arch" type="xml">
            <form string="Faculty Designation">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                        <button name="action_faculty" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="total_faculty" widget="statinfo"
                                   string="Faculty Members"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" string="Designation Name"/>
                        <h1>
                            <field name="name"
                                   placeholder="e.g., Professor, Associate Professor"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="code"/>
                            <field name="level" widget="radio"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Workload">
                            <field name="max_teaching_hours" widget="float_time"/>
                        </group>
                    </group>

                    <group>
                        <group string="Salary Range">
                            <field name="currency_id" invisible="1"/>
                            <field name="min_salary" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="max_salary" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group string="Minimum Requirements">
                            <field name="min_qualification"/>
                            <field name="min_experience_years"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Responsibilities" name="responsibilities">
                            <field name="responsibilities"
                                   placeholder="Enter key responsibilities and duties for this designation..."
                                   widget="html"/>
                        </page>

                        <page string="Description" name="description">
                            <field name="description"
                                   placeholder="Enter detailed description of this designation..."/>
                        </page>

                        <page string="Faculty Members" name="faculty">
                            <field name="faculty_ids" readonly="1">
                                <list>
                                    <field name="faculty_code"/>
                                    <field name="name"/>
                                    <field name="faculty_id_number"/>
                                    <field name="department_id"/>
                                    <field name="employment_type"/>
                                    <field name="date_of_joining"/>
                                    <field name="experience_years"/>
                                    <field name="highest_qualification"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="faculty_designation_view_list" model="ir.ui.view">
        <field name="name">faculty.designation.view.list</field>
        <field name="model">faculty.designation</field>
        <field name="arch" type="xml">
            <list string="Faculty Designations"
                  default_order="sequence, name"
                  multi_edit="1"
                  sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="level"/>
                <field name="min_qualification" optional="show"/>
                <field name="min_experience_years" optional="show"/>
                <field name="min_salary" widget="monetary"
                       optional="show" sum="Total Min Salary"/>
                <field name="max_salary" widget="monetary"
                       optional="show" sum="Total Max Salary"/>
                <field name="max_teaching_hours" widget="float_time"
                       optional="show"/>
                <field name="total_faculty" optional="show"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="faculty_designation_view_search" model="ir.ui.view">
        <field name="name">faculty.designation.view.search</field>
        <field name="model">faculty.designation</field>
        <field name="arch" type="xml">
            <search string="Search Faculty Designations">
                <field name="name"/>
                <field name="code"/>
                <field name="level"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_professor" string="Professor"
                        domain="[('level', '=', 'professor')]"/>
                <filter name="filter_associate_prof" string="Associate Professor"
                        domain="[('level', '=', 'associate_professor')]"/>
                <filter name="filter_assistant_prof" string="Assistant Professor"
                        domain="[('level', '=', 'assistant_professor')]"/>
                <filter name="filter_lecturer" string="Lecturer"
                        domain="[('level', '=', 'lecturer')]"/>
                <filter name="filter_senior_lecturer" string="Senior Lecturer"
                        domain="[('level', '=', 'senior_lecturer')]"/>
                <filter name="filter_guest_faculty" string="Guest Faculty"
                        domain="[('level', '=', 'guest_faculty')]"/>
                <filter name="filter_visiting_faculty" string="Visiting Faculty"
                        domain="[('level', '=', 'visiting_faculty')]"/>
                <filter name="filter_lab_assistant" string="Lab Assistant"
                        domain="[('level', '=', 'lab_assistant')]"/>
                <filter name="filter_teaching_assistant" string="Teaching Assistant"
                        domain="[('level', '=', 'teaching_assistant')]"/>

                <separator/>

                <filter name="filter_phd_required" string="Ph.D Required"
                        domain="[('min_qualification', '=', 'phd')]"/>
                <filter name="filter_postgrad_required" string="Post Graduate Required"
                        domain="[('min_qualification', '=', 'postgraduate')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_level" string="Designation Level"
                            context="{'group_by': 'level'}"/>
                    <filter name="group_by_qualification" string="Minimum Qualification"
                            context="{'group_by': 'min_qualification'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="faculty_designation_view_kanban" model="ir.ui.view">
        <field name="name">faculty.designation.view.kanban</field>
        <field name="model">faculty.designation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_order="sequence, name"
                    quick_create="false"
                    sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="level"/>
                <field name="min_salary"/>
                <field name="max_salary"/>
                <field name="min_qualification"/>
                <field name="min_experience_years"/>
                <field name="max_teaching_hours"/>
                <field name="total_faculty"/>
                <field name="active"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="text-muted">
                                            Code: <field name="code"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge text-bg-primary">
                                            <field name="level"/>
                                        </span>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-12">
                                            <i class="fa fa-money text-success"/>
                                            Salary Range:
                                            <strong>
                                                <field name="min_salary" widget="monetary"/> -
                                                <field name="max_salary" widget="monetary"/>
                                            </strong>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.min_qualification.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-graduation-cap text-info"/>
                                            Min. Qualification: <field name="min_qualification"/>
                                        </div>
                                    </div>

                                    <div class="row mb-2" t-if="record.min_experience_years.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-briefcase text-warning"/>
                                            Min. Experience: <field name="min_experience_years"/> years
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <i class="fa fa-clock-o text-primary"/>
                                            Max Hours: <field name="max_teaching_hours" widget="float_time"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-users text-secondary"/>
                                            Faculty: <strong><field name="total_faculty"/></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_faculty_designation" model="ir.actions.act_window">
        <field name="name">Faculty Designations</field>
        <field name="res_model">faculty.designation</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Faculty Designation
            </p>
            <p>
                Define faculty designation levels with salary ranges, qualification requirements,
                and responsibilities. Examples: Professor, Associate Professor, Assistant Professor, Lecturer, etc.
            </p>
        </field>
    </record>


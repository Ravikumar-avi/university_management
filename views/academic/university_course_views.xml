<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_course_view_form" model="ir.ui.view">
        <field name="name">university.course.view.form</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <form string="University Course">
                <header>
                    <button name="action_start_course" string="Start Course"
                            type="object" class="oe_highlight"
                            invisible="state != 'scheduled'"
                            confirm="Are you sure you want to start this course?"/>
                    <button name="action_complete_course" string="Complete Course"
                            type="object" class="oe_highlight"
                            invisible="state != 'ongoing'"
                            confirm="Are you sure you want to complete this course?"/>
                    <button name="action_view_students" string="View Students"
                            type="object"
                            invisible="total_enrolled == 0"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,ongoing,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_students"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                            <div class="o_stat_info">
                                <field name="total_enrolled" class="o_stat_value"/>
                                <span class="o_stat_text">/ </span>
                                <field name="max_students" class="o_stat_value"/>
                                <span class="o_stat_text">Students</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Completed"
                            bg_color="text-bg-success"
                            invisible="state != 'completed'"/>
                    <widget name="web_ribbon" title="Cancelled"
                            bg_color="text-bg-danger"
                            invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <label for="name" string="Course Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Data Structures and Algorithms"
                                   required="1"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="e.g., CS101" required="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Academic Information">
                            <field name="program_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="semester_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="batch_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="subject_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group string="Course Details">
                            <field name="course_type" widget="radio"/>
                            <field name="credits"/>
                            <field name="theory_credits"
                                   invisible="course_type not in ['theory', 'elective']"/>
                            <field name="practical_credits"
                                   invisible="course_type not in ['practical', 'lab']"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group>
                        <group string="Duration">
                            <field name="total_hours"/>
                            <field name="hours_per_week"/>
                            <field name="start_date" widget="date"/>
                            <field name="end_date" widget="date"/>
                        </group>
                        <group string="Faculty &amp; Classroom">
                            <field name="faculty_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="classroom_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Examination">
                            <field name="has_internal_exam" widget="boolean_toggle"/>
                            <field name="internal_marks"
                                   invisible="has_internal_exam == False"/>
                            <field name="external_marks"/>
                            <field name="total_marks"/>
                            <field name="passing_marks"/>
                        </group>
                        <group string="Attendance">
                            <field name="minimum_attendance"
                                   widget="percentage"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description"
                                       placeholder="Enter detailed course description..."/>
                            </group>
                            <group>
                                <field name="objectives"
                                       placeholder="Enter course objectives..."/>
                            </group>
                            <group>
                                <field name="learning_outcomes"
                                       placeholder="Enter learning outcomes..."/>
                            </group>
                        </page>

                        <page string="Students" name="students">
                            <field name="student_ids" mode="list">
                                <list>
                                    <field name="registration_number"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="batch_id"/>
                                    <field name="current_semester"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Co-Faculty" name="co_faculty">
                            <field name="co_faculty_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="designation_id"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card">
                                                <div class="o_kanban_card_content">
                                                    <div class="o_kanban_primary_left">
                                                        <img t-att-src="kanban_image('faculty.faculty', 'image_128', record.id.raw_value)"
                                                             alt="Faculty" class="o_kanban_image"/>
                                                    </div>
                                                    <div class="o_kanban_primary_right">
                                                        <strong class="o_kanban_record_title">
                                                            <field name="name"/>
                                                        </strong>
                                                        <div class="text-muted">
                                                            <field name="designation_id"/>
                                                        </div>
                                                        <div>
                                                            <i class="fa fa-envelope"/> <field name="email"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <page string="Prerequisites" name="prerequisites">
                            <field name="prerequisite_course_ids" mode="list">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="semester_id"/>
                                    <field name="credits"/>
                                    <field name="course_type"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Timetable" name="timetable">
                            <field name="timetable_ids" mode="list">
                                <list>
                                    <field name="day_of_week"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="classroom_id"/>
                                    <field name="faculty_id"/>
                                    <field name="class_type"/>
                                </list>
                            </field>
                        </page>

                        <page string="Syllabus" name="syllabus">
                            <group>
                                <field name="syllabus_id"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_course_view_list" model="ir.ui.view">
        <field name="name">university.course.view.list</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <list string="University Courses"
                  default_order="semester_id, name"
                  multi_edit="1">
                <field name="code"/>
                <field name="name"/>
                <field name="program_id"/>
                <field name="department_id" optional="show"/>
                <field name="semester_id"/>
                <field name="subject_id"/>
                <field name="course_type" widget="badge"/>
                <field name="credits"/>
                <field name="faculty_id"/>
                <field name="total_enrolled" string="Enrolled"/>
                <field name="max_students" optional="hide"/>
                <field name="academic_year_id" optional="hide"/>
                <field name="batch_id" optional="hide"/>
                <field name="start_date" optional="hide"/>
                <field name="end_date" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'scheduled'"
                       decoration-success="state == 'ongoing'"
                       decoration-muted="state == 'completed'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_course_view_search" model="ir.ui.view">
        <field name="name">university.course.view.search</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <search string="Search Courses">
                <field name="name" string="Course"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="semester_id"/>
                <field name="subject_id"/>
                <field name="faculty_id"/>
                <field name="academic_year_id"/>
                <field name="batch_id"/>

                <separator/>

                <filter name="filter_theory" string="Theory"
                        domain="[('course_type', '=', 'theory')]"/>
                <filter name="filter_practical" string="Practical"
                        domain="[('course_type', '=', 'practical')]"/>
                <filter name="filter_lab" string="Laboratory"
                        domain="[('course_type', '=', 'lab')]"/>
                <filter name="filter_elective" string="Elective"
                        domain="[('course_type', '=', 'elective')]"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_ongoing" string="Ongoing"
                        domain="[('state', '=', 'ongoing')]"/>
                <filter name="filter_completed" string="Completed"
                        domain="[('state', '=', 'completed')]"/>

                <separator/>

                <filter name="filter_has_students" string="Has Students"
                        domain="[('total_enrolled', '&gt;', 0)]"/>
                <filter name="filter_full" string="Full Capacity"
                        domain="[('total_enrolled', '&gt;=', 'max_students')]"/>
                <filter name="filter_available" string="Available Seats"
                        domain="[('total_enrolled', '&lt;', 'max_students')]"/>

                <separator/>

                <filter name="filter_internal_exam" string="Has Internal Exam"
                        domain="[('has_internal_exam', '=', True)]"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_this_month" string="Starting This Month"
                        domain="[('start_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('start_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_semester" string="Semester"
                            context="{'group_by': 'semester_id'}"/>
                    <filter name="group_by_course_type" string="Course Type"
                            context="{'group_by': 'course_type'}"/>
                    <filter name="group_by_faculty" string="Faculty"
                            context="{'group_by': 'faculty_id'}"/>
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_batch" string="Batch"
                            context="{'group_by': 'batch_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                </group>

                <searchpanel>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="semester_id" string="Semester"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="course_type" string="Type"
                           select="multi"
                           icon="fa-tags"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_course_view_kanban" model="ir.ui.view">
        <field name="name">university.course.view.kanban</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="semester_id"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="semester_id"/>
                <field name="subject_id"/>
                <field name="course_type"/>
                <field name="credits"/>
                <field name="faculty_id"/>
                <field name="total_enrolled"/>
                <field name="max_students"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "scheduled": "warning", "ongoing": "success", "completed": "info", "cancelled": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="code"/> - <field name="name"/>
                                        </strong>
                                        <span t-att-class="'badge ms-2 text-bg-' + (record.course_type.raw_value == 'theory' ? 'primary' : record.course_type.raw_value == 'practical' ? 'success' : record.course_type.raw_value == 'lab' ? 'info' : 'warning')">
                                            <field name="course_type"/>
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="subject_id"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-graduation-cap text-muted"/>
                                        <field name="program_id"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar text-info"/>
                                        <field name="semester_id"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <i class="fa fa-user-circle text-primary"/>
                                        <field name="faculty_id"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-trophy text-warning"/>
                                        <field name="credits"/> Credits
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="progress">
                                            <div class="progress-bar"
                                                 role="progressbar"
                                                 t-att-style="'width: ' + (record.total_enrolled.raw_value / record.max_students.raw_value * 100) + '%'"
                                                 t-att-aria-valuenow="record.total_enrolled.raw_value"
                                                 aria-valuemin="0"
                                                 t-att-aria-valuemax="record.max_students.raw_value">
                                            </div>
                                        </div>
                                        <small class="text-muted">
                                            <field name="total_enrolled"/> / <field name="max_students"/> Students
                                        </small>
                                    </div>
                                </div>
                                <div class="row mt-2" t-if="record.start_date.value">
                                    <div class="col-6">
                                        <i class="fa fa-calendar-check-o"/>
                                        <field name="start_date"/>
                                    </div>
                                    <div class="col-6" t-if="record.end_date.value">
                                        <i class="fa fa-calendar-times-o"/>
                                        <field name="end_date"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'scheduled'"
                                           decoration-success="state == 'ongoing'"
                                           decoration-muted="state == 'completed'"
                                           decoration-danger="state == 'cancelled'"/>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="university_course_view_calendar" model="ir.ui.view">
        <field name="name">university.course.view.calendar</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <calendar string="Course Calendar"
                      date_start="start_date"
                      date_stop="end_date"
                      color="semester_id"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="code"/>
                <field name="name"/>
                <field name="program_id"/>
                <field name="semester_id"/>
                <field name="faculty_id"/>
                <field name="course_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="university_course_view_pivot" model="ir.ui.view">
        <field name="name">university.course.view.pivot</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <pivot string="Course Analysis">
                <field name="program_id" type="row"/>
                <field name="semester_id" type="row"/>
                <field name="course_type" type="col"/>
                <field name="credits" type="measure"/>
                <field name="total_enrolled" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="university_course_view_graph" model="ir.ui.view">
        <field name="name">university.course.view.graph</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <graph string="Course Statistics" type="bar" stacked="1">
                <field name="semester_id"/>
                <field name="course_type"/>
                <field name="total_enrolled" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">university.course</field>
        <field name="view_mode">list,form,kanban,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_ongoing': 1,
            'search_default_group_by_semester': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Course
            </p>
            <p>
                Manage university courses with detailed information about schedules, faculty,
                students, prerequisites, and examination details.
            </p>
        </field>
    </record>


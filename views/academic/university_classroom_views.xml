<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_university_classroom_list" model="ir.ui.view">
        <field name="name">university.classroom.list</field>
        <field name="model">university.classroom</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="room_number"/>
                <field name="building_name"/>
                <field name="floor"/>
                <field name="capacity"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_university_classroom_form" model="ir.ui.view">
        <field name="name">university.classroom.form</field>
        <field name="model">university.classroom</field>
        <field name="arch" type="xml">
            <form string="Classroom">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="room_number"/>
                        <field name="building_name"/>
                        <field name="floor"/>
                        <field name="capacity"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_classroom" model="ir.actions.act_window">
        <field name="name">Classrooms</field>
        <field name="res_model">university.classroom</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
<!--    <menuitem id="menu_university_classroom_root"-->
<!--              name="Classrooms"-->
<!--              parent="menu_university_root"-->
<!--              action="action_university_classroom"/>-->
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_academic_year_view_form" model="ir.ui.view">
        <field name="name">university.academic.year.view.form</field>
        <field name="model">university.academic.year</field>
        <field name="arch" type="xml">
            <form string="Academic Year">
                <header>
                    <button name="action_activate" string="Activate"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_set_current" string="Set as Current"
                            type="object" class="oe_highlight"
                            invisible="state != 'active' or is_current == True"/>
                    <button name="action_close" string="Close"
                            type="object"
                            invisible="state != 'active'"
                            confirm="Are you sure you want to close this academic year?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_university_semester)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-calendar-check-o">
                            <field name="total_semesters" widget="statinfo"
                                   string="Semesters"/>
                        </button>
                        <button name="%(action_university_course)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-book">
                            <field name="total_courses" widget="statinfo"
                                   string="Courses"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Current"
                            bg_color="text-bg-success"
                            invisible="is_current == False"/>

                    <div class="oe_title">
                        <label for="name" string="Academic Year"/>
                        <h1>
                            <field name="name" placeholder="e.g., 2024-2025"
                                   required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="code" placeholder="e.g., AY-2024-25"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="is_current" widget="boolean_toggle"/>
                        </group>
                        <group string="Duration">
                            <field name="start_date" widget="date"/>
                            <field name="end_date" widget="date"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Enter academic year description..."/>
                    </group>

                    <notebook>
                        <page string="Semesters" name="semesters">
                            <field name="semester_ids" mode="list">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="semester_number"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-success="state == 'active'"
                                           decoration-muted="state == 'closed'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Courses" name="courses">
                            <field name="course_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="department_id"/>
                                    <field name="program_id"/>
                                    <field name="course_type"/>
                                    <field name="credits"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Examinations" name="examinations">
                            <field name="examination_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="exam_type"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_academic_year_view_list" model="ir.ui.view">
        <field name="name">university.academic.year.view.list</field>
        <field name="model">university.academic.year</field>
        <field name="arch" type="xml">
            <list string="Academic Years"
                  default_order="start_date desc"
                  multi_edit="1">
                <field name="name" string="Academic Year"/>
                <field name="code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_semesters"/>
                <field name="total_courses"/>
                <field name="is_current" string="Current"
                       widget="boolean_toggle"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'active'"
                       decoration-muted="state == 'closed'"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_academic_year_view_search" model="ir.ui.view">
        <field name="name">university.academic.year.view.search</field>
        <field name="model">university.academic.year</field>
        <field name="arch" type="xml">
            <search string="Search Academic Years">
                <field name="name" string="Academic Year"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="start_date"/>
                <field name="end_date"/>

                <separator/>

                <filter name="filter_current" string="Current Year"
                        domain="[('is_current', '=', True)]"/>
                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_active_state" string="Active"
                        domain="[('state', '=', 'active')]"/>
                <filter name="filter_closed" string="Closed"
                        domain="[('state', '=', 'closed')]"/>

                <separator/>

                <filter name="filter_active" string="Active Records"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_this_year" string="This Year"
                        domain="[('start_date', '&gt;=', (context_today() - relativedelta(months=6)).strftime('%Y-01-01')),
                                 ('start_date', '&lt;=', (context_today() + relativedelta(months=6)).strftime('%Y-12-31'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_start_date" string="Start Date"
                            context="{'group_by': 'start_date'}"/>
                    <filter name="group_by_is_current" string="Current Year"
                            context="{'group_by': 'is_current'}"/>
                </group>

                <searchpanel>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-hourglass"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_academic_year_view_kanban" model="ir.ui.view">
        <field name="name">university.academic.year.view.kanban</field>
        <field name="model">university.academic.year</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="state"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_current"/>
                <field name="state"/>
                <field name="total_semesters"/>
                <field name="total_courses"/>
                <field name="active"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "active": "success", "closed": "danger"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.is_current.raw_value"
                                              class="badge text-bg-success ms-2">
                                            Current
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-calendar"/>
                                        <field name="start_date"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar"/>
                                        <field name="end_date"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <i class="fa fa-calendar-check-o"/>
                                        <field name="total_semesters"/> Semesters
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-book"/>
                                        <field name="total_courses"/> Courses
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-success="state == 'active'"
                                           decoration-muted="state == 'closed'"/>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="university_academic_year_view_calendar" model="ir.ui.view">
        <field name="name">university.academic.year.view.calendar</field>
        <field name="model">university.academic.year</field>
        <field name="arch" type="xml">
            <calendar string="Academic Year Calendar"
                      date_start="start_date"
                      date_stop="end_date"
                      color="state"
                      mode="year"
                      event_open_popup="true"
                      quick_create="false">
                <field name="name"/>
                <field name="code"/>
                <field name="state"/>
                <field name="is_current"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_academic_year" model="ir.actions.act_window">
        <field name="name">Academic Years</field>
        <field name="res_model">university.academic.year</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="context">{
            'search_default_filter_active_state': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Academic Year
            </p>
            <p>
                Define academic years to manage your university's educational timeline.
                You can set one academic year as current and track semesters, courses, and examinations.
            </p>
        </field>
    </record>


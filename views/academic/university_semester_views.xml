<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_semester_view_form" model="ir.ui.view">
        <field name="name">university.semester.view.form</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <form string="University Semester">
                <header>
                    <button name="action_start_semester" string="Start Semester"
                            type="object" class="oe_highlight"
                            invisible="state != 'scheduled'"
                            confirm="Are you sure you want to start this semester?"/>
                    <button name="action_complete_semester" string="Complete Semester"
                            type="object" class="oe_highlight"
                            invisible="state != 'ongoing'"
                            confirm="Are you sure you want to complete this semester?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,scheduled,ongoing,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_courses" type="object"
                                class="oe_stat_button" icon="fa-book">
                            <field name="total_courses" widget="statinfo" string="Courses"/>
                        </button>
                        <button name="action_view_examinations" type="object"
                                class="oe_stat_button" icon="fa-file-text">
                            <field name="total_exams" widget="statinfo" string="Exams"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Ongoing"
                            bg_color="text-bg-success"
                            invisible="state != 'ongoing'"/>
                    <widget name="web_ribbon" title="Completed"
                            bg_color="text-bg-info"
                            invisible="state != 'completed'"/>

                    <div class="oe_title">
                        <label for="name" string="Semester Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Semester 1, Semester 2"
                                   required="1"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="e.g., SEM-1" required="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="semester_number" placeholder="1"/>
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="program_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Duration">
                            <field name="start_date" widget="date"/>
                            <field name="end_date" widget="date"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Enter semester description..."/>
                    </group>

                    <notebook>
                        <page string="Courses" name="courses">
                            <field name="course_ids" mode="list">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="program_id"/>
                                    <field name="department_id"/>
                                    <field name="subject_id"/>
                                    <field name="course_type"/>
                                    <field name="credits"/>
                                    <field name="faculty_id"/>
                                    <field name="total_enrolled"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'scheduled'"
                                           decoration-success="state == 'ongoing'"
                                           decoration-muted="state == 'completed'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Examinations" name="examinations">
                            <field name="examination_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="exam_type"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'scheduled'"
                                           decoration-success="state == 'ongoing'"
                                           decoration-muted="state == 'completed'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_semester_view_list" model="ir.ui.view">
        <field name="name">university.semester.view.list</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <list string="University Semesters"
                  default_order="sequence, name"
                  multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Semester"/>
                <field name="code"/>
                <field name="semester_number"/>
                <field name="academic_year_id"/>
                <field name="program_id" optional="show"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_courses"/>
                <field name="total_exams" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'scheduled'"
                       decoration-success="state == 'ongoing'"
                       decoration-muted="state == 'completed'"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_semester_view_search" model="ir.ui.view">
        <field name="name">university.semester.view.search</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <search string="Search Semesters">
                <field name="name" string="Semester"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="semester_number"/>
                <field name="academic_year_id"/>
                <field name="program_id"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_scheduled" string="Scheduled"
                        domain="[('state', '=', 'scheduled')]"/>
                <filter name="filter_ongoing" string="Ongoing"
                        domain="[('state', '=', 'ongoing')]"/>
                <filter name="filter_completed" string="Completed"
                        domain="[('state', '=', 'completed')]"/>

                <separator/>

                <filter name="filter_sem_1_2" string="Semester 1 &amp; 2"
                        domain="[('semester_number', 'in', [1, 2])]"/>
                <filter name="filter_sem_3_4" string="Semester 3 &amp; 4"
                        domain="[('semester_number', 'in', [3, 4])]"/>
                <filter name="filter_sem_5_6" string="Semester 5 &amp; 6"
                        domain="[('semester_number', 'in', [5, 6])]"/>
                <filter name="filter_sem_7_8" string="Semester 7 &amp; 8"
                        domain="[('semester_number', 'in', [7, 8])]"/>

                <separator/>

                <filter name="filter_has_courses" string="Has Courses"
                        domain="[('total_courses', '&gt;', 0)]"/>
                <filter name="filter_has_exams" string="Has Exams"
                        domain="[('total_exams', '&gt;', 0)]"/>

                <separator/>

                <filter name="filter_this_month" string="Starting This Month"
                        domain="[('start_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('start_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_semester_number" string="Semester Number"
                            context="{'group_by': 'semester_number'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_start_date" string="Start Date"
                            context="{'group_by': 'start_date'}"/>
                </group>

                <searchpanel>
                    <field name="academic_year_id" string="Academic Year"
                           select="multi"
                           icon="fa-calendar"/>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_semester_view_kanban" model="ir.ui.view">
        <field name="name">university.semester.view.kanban</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="academic_year_id"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="semester_number"/>
                <field name="academic_year_id"/>
                <field name="program_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_courses"/>
                <field name="total_exams"/>
                <field name="state"/>
                <field name="sequence"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "scheduled": "warning", "ongoing": "success", "completed": "info"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <span class="badge text-bg-primary ms-2">
                                            Sem <field name="semester_number"/>
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/> - <field name="academic_year_id"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row" t-if="record.program_id.value">
                                    <div class="col-12 mb-2">
                                        <i class="fa fa-graduation-cap text-primary"/>
                                        <field name="program_id"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-calendar text-info"/>
                                        <field name="start_date"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar-times-o text-danger"/>
                                        <field name="end_date"/>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-6">
                                        <i class="fa fa-book text-success"/>
                                        <strong><field name="total_courses"/></strong> Courses
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-file-text text-warning"/>
                                        <strong><field name="total_exams"/></strong> Exams
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'scheduled'"
                                           decoration-success="state == 'ongoing'"
                                           decoration-muted="state == 'completed'"/>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="university_semester_view_calendar" model="ir.ui.view">
        <field name="name">university.semester.view.calendar</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <calendar string="Semester Calendar"
                      date_start="start_date"
                      date_stop="end_date"
                      color="academic_year_id"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="name"/>
                <field name="code"/>
                <field name="semester_number"/>
                <field name="academic_year_id"/>
                <field name="program_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Timeline View (Gantt-style) -->
    <record id="university_semester_view_timeline" model="ir.ui.view">
        <field name="name">university.semester.view.timeline</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <timeline date_start="start_date"
                      date_stop="end_date"
                      string="Semester Timeline"
                      default_group_by="academic_year_id"
                      color="state">
                <field name="name"/>
                <field name="semester_number"/>
                <field name="program_id"/>
            </timeline>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="university_semester_view_pivot" model="ir.ui.view">
        <field name="name">university.semester.view.pivot</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <pivot string="Semester Analysis">
                <field name="academic_year_id" type="row"/>
                <field name="semester_number" type="row"/>
                <field name="state" type="col"/>
                <field name="total_courses" type="measure"/>
                <field name="total_exams" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="university_semester_view_graph" model="ir.ui.view">
        <field name="name">university.semester.view.graph</field>
        <field name="model">university.semester</field>
        <field name="arch" type="xml">
            <graph string="Semester Statistics" type="bar">
                <field name="semester_number"/>
                <field name="total_courses" type="measure"/>
                <field name="total_exams" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_semester" model="ir.actions.act_window">
        <field name="name">Semesters</field>
        <field name="res_model">university.semester</field>
        <field name="view_mode">list,form,kanban,calendar,timeline,pivot,graph</field>
        <field name="context">{
            'search_default_filter_ongoing': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Semester
            </p>
            <p>
                Manage university semesters to organize academic periods.
                Track courses, examinations, and semester schedules for each academic year.
            </p>
        </field>
    </record>


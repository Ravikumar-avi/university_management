<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_program_view_form" model="ir.ui.view">
        <field name="name">university.program.view.form</field>
        <field name="model">university.program</field>
        <field name="arch" type="xml">
            <form string="University Program">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_students"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="total_students" widget="statinfo"
                                   string="Students"/>
                        </button>
                        <button name="action_view_courses"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book">
                            <field name="total_courses" widget="statinfo"
                                   string="Courses"/>
                        </button>
                        <button name="%(action_university_batch)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                context="{'search_default_program_id': id}">
                            <field name="total_batches" widget="statinfo"
                                   string="Batches"/>
                        </button>
                        <button class="oe_stat_button"
                                icon="fa-chair">
                            <div class="o_stat_info">
                                <field name="available_seats" class="o_stat_value"/>
                                <span class="o_stat_text">/ </span>
                                <field name="total_seats" class="o_stat_value"/>
                                <span class="o_stat_text">Seats</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Accredited"
                            bg_color="text-bg-success"
                            invisible="is_accredited == False"/>

                    <field name="image_128" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="name" string="Program Name"/>
                        <h1>
                            <field name="name"
                                   placeholder="e.g., B.Tech, M.Tech, MBA, BBA, B.Pharmacy"
                                   required="1"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="e.g., BTECH-CSE" required="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="program_type" widget="radio"/>
                            <field name="department_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Duration">
                            <field name="duration_years"/>
                            <field name="total_semesters"/>
                        </group>
                    </group>

                    <group>
                        <group string="Eligibility">
                            <field name="min_percentage" widget="percentage"/>
                        </group>
                        <group string="Accreditation">
                            <field name="is_accredited" widget="boolean_toggle"/>
                            <field name="accreditation_body"
                                   placeholder="e.g., NAAC, NBA"
                                   invisible="is_accredited == False"/>
                            <field name="accreditation_grade"
                                   placeholder="e.g., A++, A+"
                                   invisible="is_accredited == False"/>
                        </group>
                    </group>

                    <group>
                        <field name="eligibility_criteria"
                               placeholder="Enter minimum qualification required..."/>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description"
                                       placeholder="Enter program description..."/>
                            </group>
                            <group>
                                <field name="career_opportunities"
                                       placeholder="Enter career opportunities..."/>
                            </group>
                        </page>

                        <page string="Students" name="students">
                            <field name="student_ids" mode="list" readonly="1">
                                <list create="false" delete="false">
                                    <field name="registration_number"/>
                                    <field name="name"/>
                                    <field name="batch_id"/>
                                    <field name="current_semester"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-success="state == 'active'"
                                           decoration-warning="state == 'suspended'"
                                           decoration-muted="state == 'graduated'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Batches" name="batches">
                            <field name="batch_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="start_year"/>
                                    <field name="end_year"/>
                                    <field name="current_semester"/>
                                    <field name="total_students"/>
                                    <field name="coordinator_id"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'active'"
                                           decoration-success="state == 'graduated'"
                                           decoration-muted="state == 'archived'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Courses" name="courses">
                            <field name="course_ids" mode="list">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="semester_id"/>
                                    <field name="subject_id"/>
                                    <field name="course_type"/>
                                    <field name="credits"/>
                                    <field name="faculty_id"/>
                                    <field name="total_enrolled"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Syllabus" name="syllabus">
                            <field name="syllabus_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="semester_id"/>
                                    <field name="academic_year_id"/>
                                    <field name="total_subjects"/>
                                    <field name="total_credits"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>

                        <page string="Fee Structure" name="fee_structure">
                            <field name="fee_structure_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="academic_year_id"/>
                                    <field name="semester_id"/>
                                    <field name="total_amount"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_program_view_list" model="ir.ui.view">
        <field name="name">university.program.view.list</field>
        <field name="model">university.program</field>
        <field name="arch" type="xml">
            <list string="University Programs"
                  default_order="name"
                  multi_edit="1">
                <field name="name" string="Program Name"/>
                <field name="code"/>
                <field name="program_type" widget="badge"/>
                <field name="department_id"/>
                <field name="duration_years"/>
                <field name="total_semesters"/>
                <field name="total_students"/>
                <field name="total_batches" optional="show"/>
                <field name="total_courses" optional="show"/>
                <field name="available_seats" optional="hide"/>
                <field name="total_seats" optional="hide"/>
                <field name="is_accredited" widget="boolean_toggle" optional="show"/>
                <field name="accreditation_grade" optional="hide"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_program_view_search" model="ir.ui.view">
        <field name="name">university.program.view.search</field>
        <field name="model">university.program</field>
        <field name="arch" type="xml">
            <search string="Search Programs">
                <field name="name" string="Program"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="department_id"/>
                <field name="program_type"/>
                <field name="accreditation_body"/>

                <separator/>

                <filter name="filter_undergraduate" string="Undergraduate (UG)"
                        domain="[('program_type', '=', 'undergraduate')]"/>
                <filter name="filter_postgraduate" string="Postgraduate (PG)"
                        domain="[('program_type', '=', 'postgraduate')]"/>
                <filter name="filter_diploma" string="Diploma"
                        domain="[('program_type', '=', 'diploma')]"/>
                <filter name="filter_phd" string="Ph.D"
                        domain="[('program_type', '=', 'phd')]"/>
                <filter name="filter_certificate" string="Certificate"
                        domain="[('program_type', '=', 'certificate')]"/>

                <separator/>

                <filter name="filter_accredited" string="Accredited"
                        domain="[('is_accredited', '=', True)]"/>
                <filter name="filter_not_accredited" string="Not Accredited"
                        domain="[('is_accredited', '=', False)]"/>

                <separator/>

                <filter name="filter_has_students" string="Has Students"
                        domain="[('total_students', '&gt;', 0)]"/>
                <filter name="filter_no_students" string="No Students"
                        domain="[('total_students', '=', 0)]"/>

                <separator/>

                <filter name="filter_seats_available" string="Seats Available"
                        domain="[('available_seats', '&gt;', 0)]"/>
                <filter name="filter_full" string="Full"
                        domain="[('available_seats', '&lt;=', 0)]"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_program_type" string="Program Type"
                            context="{'group_by': 'program_type'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_duration" string="Duration"
                            context="{'group_by': 'duration_years'}"/>
                    <filter name="group_by_accreditation" string="Accreditation Status"
                            context="{'group_by': 'is_accredited'}"/>
                    <filter name="group_by_accreditation_body" string="Accreditation Body"
                            context="{'group_by': 'accreditation_body'}"/>
                </group>

                <searchpanel>
                    <field name="program_type" string="Type"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
<!--                    <field name="is_accredited" string="Accreditation"   -->
<!--                           select="multi"-->
<!--                           icon="fa-certificate"/> because of using a boolean field (is_accredited) in the searchpanel -->
<!--                                                    section, which only supports many2one, many2many, or selection fields.-->
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_program_view_kanban" model="ir.ui.view">
        <field name="name">university.program.view.kanban</field>
        <field name="model">university.program</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="program_type"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="program_type"/>
                <field name="department_id"/>
                <field name="duration_years"/>
                <field name="total_semesters"/>
                <field name="total_students"/>
                <field name="total_batches"/>
                <field name="total_courses"/>
                <field name="available_seats"/>
                <field name="total_seats"/>
                <field name="is_accredited"/>
                <field name="accreditation_body"/>
                <field name="accreditation_grade"/>
                <field name="active"/>

                <progressbar field="is_accredited"
                             colors='{"True": "success", "False": "muted"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.is_accredited.raw_value"
                                              class="badge text-bg-success ms-2">
                                            <i class="fa fa-certificate"/>
                                            <t t-esc="record.accreditation_grade.value || 'Accredited'"/>
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/> - <field name="program_type"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <i class="fa fa-building text-primary"/>
                                        <field name="department_id"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-clock-o text-warning"/>
                                        <field name="duration_years"/> Years
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar text-info"/>
                                        <field name="total_semesters"/> Semesters
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-6">
                                        <i class="fa fa-users text-success"/>
                                        <strong><field name="total_students"/></strong> Students
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar-check-o text-danger"/>
                                        <strong><field name="total_batches"/></strong> Batches
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-success"
                                                 role="progressbar"
                                                 t-att-style="'width: ' + ((record.total_seats.raw_value - record.available_seats.raw_value) / record.total_seats.raw_value * 100) + '%'">
                                                <span class="fw-bold">
                                                    <t t-esc="record.total_seats.raw_value - record.available_seats.raw_value"/> /
                                                    <t t-esc="record.total_seats.raw_value"/> Seats
                                                </span>
                                            </div>
                                        </div>
                                        <small class="text-muted">
                                            <field name="available_seats"/> seats available
                                        </small>
                                    </div>
                                </div>

                                <div class="row mt-2" t-if="record.is_accredited.raw_value">
                                    <div class="col-12">
                                        <i class="fa fa-certificate text-warning"/>
                                        <field name="accreditation_body"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <field name="total_courses" string="Courses"/>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="university_program_view_pivot" model="ir.ui.view">
        <field name="name">university.program.view.pivot</field>
        <field name="model">university.program</field>
        <field name="arch" type="xml">
            <pivot string="Program Analysis">
                <field name="department_id" type="row"/>
                <field name="program_type" type="col"/>
                <field name="total_students" type="measure"/>
                <field name="total_batches" type="measure"/>
                <field name="total_courses" type="measure"/>
                <field name="total_seats" type="measure"/>
                <field name="available_seats" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="university_program_view_graph" model="ir.ui.view">
        <field name="name">university.program.view.graph</field>
        <field name="model">university.program</field>
        <field name="arch" type="xml">
            <graph string="Program Statistics" type="bar" stacked="1">
                <field name="program_type"/>
                <field name="department_id"/>
                <field name="total_students" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_program" model="ir.actions.act_window">
        <field name="name">Programs</field>
        <field name="res_model">university.program</field>
        <field name="view_mode">kanban,list,form,pivot,graph</field>
        <field name="context">{
            'search_default_filter_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Program
            </p>
            <p>
                Manage university programs like B.Tech, M.Tech, MBA, BBA, B.Pharmacy, etc.
                Track students, batches, courses, syllabus, and fee structures for each program.
            </p>
        </field>
    </record>


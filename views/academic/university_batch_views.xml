<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_batch_view_form" model="ir.ui.view">
        <field name="name">university.batch.view.form</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <form string="University Batch">
                <header>
                    <button name="action_view_students" string="View Students"
                            type="object" class="oe_highlight"
                            invisible="total_students == 0"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="active,graduated,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_students"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="total_students" widget="statinfo"
                                   string="Students"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Graduated"
                            bg_color="text-bg-success"
                            invisible="state != 'graduated'"/>
                    <widget name="web_ribbon" title="Archived"
                            bg_color="text-bg-danger"
                            invisible="state != 'archived'"/>

                    <div class="oe_title">
                        <label for="name" string="Batch Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., 2021-2025 Batch, 2022 Batch"
                                   required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="code" placeholder="e.g., BATCH-2021"/>
                            <field name="program_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Academic Details">
                            <field name="start_year" placeholder="2021"/>
                            <field name="end_year" placeholder="2025"/>
                            <field name="current_semester" placeholder="Current Semester"/>
                            <field name="coordinator_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Enter batch description..."/>
                    </group>

                    <notebook>
                        <page string="Students" name="students">
                            <field name="student_ids" mode="list" readonly="1">
                                <list create="false" delete="false">
                                    <field name="registration_number"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="current_semester"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-success="state == 'active'"
                                           decoration-warning="state == 'suspended'"
                                           decoration-muted="state == 'graduated'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Courses" name="courses">
                            <field name="course_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="semester_id"/>
                                    <field name="subject_id"/>
                                    <field name="course_type"/>
                                    <field name="credits"/>
                                    <field name="faculty_id"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_batch_view_list" model="ir.ui.view">
        <field name="name">university.batch.view.list</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <list string="University Batches"
                  default_order="start_year desc"
                  multi_edit="1">
                <field name="name" string="Batch Name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="start_year"/>
                <field name="end_year"/>
                <field name="current_semester"/>
                <field name="total_students"/>
                <field name="coordinator_id" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'active'"
                       decoration-success="state == 'graduated'"
                       decoration-muted="state == 'archived'"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_batch_view_search" model="ir.ui.view">
        <field name="name">university.batch.view.search</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <search string="Search Batches">
                <field name="name" string="Batch"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="coordinator_id"/>
                <field name="start_year"/>
                <field name="end_year"/>

                <separator/>

                <filter name="filter_active" string="Active Batches"
                        domain="[('state', '=', 'active')]"/>
                <filter name="filter_graduated" string="Graduated"
                        domain="[('state', '=', 'graduated')]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('state', '=', 'archived')]"/>

                <separator/>

                <filter name="filter_current_year" string="Current Year"
                        domain="[('start_year', '&lt;=', context_today().year),
                                 ('end_year', '&gt;=', context_today().year)]"/>

                <separator/>

                <filter name="filter_has_students" string="Has Students"
                        domain="[('total_students', '&gt;', 0)]"/>
                <filter name="filter_no_students" string="No Students"
                        domain="[('total_students', '=', 0)]"/>

                <separator/>

                <filter name="filter_active_records" string="Active Records"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived_records" string="Archived Records"
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_start_year" string="Start Year"
                            context="{'group_by': 'start_year'}"/>
                    <filter name="group_by_coordinator" string="Coordinator"
                            context="{'group_by': 'coordinator_id'}"/>
                </group>

                <searchpanel>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_batch_view_kanban" model="ir.ui.view">
        <field name="name">university.batch.view.kanban</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="program_id"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="start_year"/>
                <field name="end_year"/>
                <field name="current_semester"/>
                <field name="total_students"/>
                <field name="coordinator_id"/>
                <field name="state"/>
                <field name="active"/>

                <progressbar field="state"
                             colors='{"active": "success", "graduated": "info", "archived": "muted"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.state.raw_value == 'graduated'"
                                              class="badge text-bg-success ms-2">
                                            Graduated
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/> - <field name="program_id"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-building text-muted"/>
                                        <field name="department_id"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-users text-primary"/>
                                        <field name="total_students"/> Students
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <i class="fa fa-calendar"/>
                                        <field name="start_year"/> - <field name="end_year"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar-check-o"/>
                                        Sem: <field name="current_semester"/>
                                    </div>
                                </div>
                                <div class="row mt-2" t-if="record.coordinator_id.value">
                                    <div class="col-12">
                                        <i class="fa fa-user-circle text-info"/>
                                        <field name="coordinator_id"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'active'"
                                           decoration-success="state == 'graduated'"
                                           decoration-muted="state == 'archived'"/>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="university_batch_view_calendar" model="ir.ui.view">
        <field name="name">university.batch.view.calendar</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <calendar string="Batch Timeline"
                      date_start="calendar_start_date"
                      date_stop="calendar_end_date"
                      color="program_id"
                      mode="year"
                      event_open_popup="true"
                      quick_create="false">
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="total_students"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View (Bonus: Analytics) -->
    <record id="university_batch_view_pivot" model="ir.ui.view">
        <field name="name">university.batch.view.pivot</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <pivot string="Batch Analysis">
                <field name="program_id" type="row"/>
                <field name="department_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_students" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View (Bonus: Analytics) -->
    <record id="university_batch_view_graph" model="ir.ui.view">
        <field name="name">university.batch.view.graph</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <graph string="Batch Statistics" type="bar">
                <field name="program_id"/>
                <field name="total_students" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_batch" model="ir.actions.act_window">
        <field name="name">Batches</field>
        <field name="res_model">university.batch</field>
        <field name="view_mode">list,form,kanban,calendar,pivot,graph</field>
        <field name="context">{
            'search_default_filter_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Batch
            </p>
            <p>
                Manage university batches to organize students by their enrollment year and program.
                Track batch progress, assign coordinators, and monitor student counts.
            </p>
        </field>
    </record>


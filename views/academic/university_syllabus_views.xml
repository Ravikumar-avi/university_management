<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_syllabus_view_form" model="ir.ui.view">
        <field name="name">university.syllabus.view.form</field>
        <field name="model">university.syllabus</field>
        <field name="arch" type="xml">
            <form string="University Syllabus">
                <header>
                    <button name="action_submit" string="Submit for Approval"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"
                            confirm="Are you sure you want to submit this syllabus for approval?"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="oe_highlight"
                            invisible="state != 'submitted'"
                            groups="base.group_system"
                            confirm="Are you sure you want to approve this syllabus?"/>
                    <button name="action_publish" string="Publish"
                            type="object" class="oe_highlight"
                            invisible="state != 'approved'"
                            confirm="Are you sure you want to publish this syllabus?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,published"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Published"
                            bg_color="text-bg-success"
                            invisible="state != 'published'"/>
                    <widget name="web_ribbon" title="Approved"
                            bg_color="text-bg-info"
                            invisible="state != 'approved'"/>

                    <div class="oe_title">
                        <label for="name" string="Syllabus Title"/>
                        <h1>
                            <field name="name"
                                   placeholder="e.g., Data Structures Syllabus 2024-25"
                                   required="1"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="e.g., SYL-CS201-2024" required="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Academic Information">
                            <field name="program_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="department_id" readonly="1"/>
                            <field name="semester_number" placeholder="1"/>
                            <field name="subject_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="academic_year_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group string="Version &amp; Credits">
                            <field name="version" placeholder="1.0"/>
                            <field name="effective_from" widget="date"/>
                            <field name="credits"/>
                            <field name="theory_hours"/>
                            <field name="practical_hours"/>
                            <field name="total_hours" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <group string="Approval Information" invisible="state == 'draft'">
                        <group>
                            <field name="approved_by" readonly="1"/>
                        </group>
                        <group>
                            <field name="approval_date" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Course Details" name="course_details">
                            <group>
                                <field name="description"
                                       placeholder="Enter course description..."/>
                            </group>
                            <group>
                                <field name="course_objectives"
                                       placeholder="Enter course objectives..."/>
                            </group>
                            <group>
                                <field name="course_outcomes"
                                       placeholder="Enter course outcomes..."/>
                            </group>
                        </page>

                        <page string="Units" name="units">
                            <field name="unit_ids" mode="list">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="hours"/>
                                    <field name="topics" optional="hide"/>
                                    <field name="learning_outcomes" optional="hide"/>
                                    <field name="description"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="sequence"/>
                                                <field name="hours"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="description"
                                                   placeholder="Enter unit description..."/>
                                        </group>
                                        <group>
                                            <field name="topics"
                                                   placeholder="Enter topics covered..."/>
                                        </group>
                                        <group>
                                            <field name="learning_outcomes"
                                                   placeholder="Enter learning outcomes..."/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="References" name="references">
                            <group>
                                <group string="Textbooks">
                                    <field name="textbooks"
                                           placeholder="Enter textbook details..."
                                           nolabel="1"/>
                                </group>
                                <group string="Reference Books">
                                    <field name="reference_books"
                                           placeholder="Enter reference book details..."
                                           nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="online_resources"
                                       placeholder="Enter online resources..."/>
                            </group>
                        </page>

                        <page string="Assessment" name="assessment">
                            <group>
                                <field name="internal_assessment_structure"
                                       placeholder="Enter internal assessment structure..."/>
                            </group>
                            <group>
                                <field name="external_assessment_structure"
                                       placeholder="Enter external assessment structure..."/>
                            </group>
                        </page>

                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"
                                   string="Syllabus Documents"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_syllabus_view_list" model="ir.ui.view">
        <field name="name">university.syllabus.view.list</field>
        <field name="model">university.syllabus</field>
        <field name="arch" type="xml">
            <list string="University Syllabus"
                  default_order="program_id, semester_number"
                  multi_edit="1">
                <field name="name" string="Syllabus Title"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id" optional="show"/>
                <field name="semester_number"/>
                <field name="subject_id"/>
                <field name="academic_year_id" optional="hide"/>
                <field name="credits"/>
                <field name="total_hours" optional="show"/>
                <field name="version" optional="hide"/>
                <field name="effective_from" optional="hide"/>
                <field name="approved_by" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-success="state == 'approved'"
                       decoration-primary="state == 'published'"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_syllabus_view_search" model="ir.ui.view">
        <field name="name">university.syllabus.view.search</field>
        <field name="model">university.syllabus</field>
        <field name="arch" type="xml">
            <search string="Search Syllabus">
                <field name="name" string="Syllabus"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="subject_id"/>
                <field name="academic_year_id"/>
                <field name="semester_number"/>

                <separator/>

                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_submitted" string="Submitted"
                        domain="[('state', '=', 'submitted')]"/>
                <filter name="filter_approved" string="Approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter name="filter_published" string="Published"
                        domain="[('state', '=', 'published')]"/>

                <separator/>

                <filter name="filter_sem_1_2" string="Semester 1 &amp; 2"
                        domain="[('semester_number', 'in', [1, 2])]"/>
                <filter name="filter_sem_3_4" string="Semester 3 &amp; 4"
                        domain="[('semester_number', 'in', [3, 4])]"/>
                <filter name="filter_sem_5_6" string="Semester 5 &amp; 6"
                        domain="[('semester_number', 'in', [5, 6])]"/>
                <filter name="filter_sem_7_8" string="Semester 7 &amp; 8"
                        domain="[('semester_number', 'in', [7, 8])]"/>

                <separator/>

                <filter name="filter_current_year" string="Current Academic Year"
                        domain="[('academic_year_id.is_current', '=', True)]"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_program" string="Program"
                            context="{'group_by': 'program_id'}"/>
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_semester" string="Semester"
                            context="{'group_by': 'semester_number'}"/>
                    <filter name="group_by_subject" string="Subject"
                            context="{'group_by': 'subject_id'}"/>
                    <filter name="group_by_academic_year" string="Academic Year"
                            context="{'group_by': 'academic_year_id'}"/>
                    <filter name="group_by_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_version" string="Version"
                            context="{'group_by': 'version'}"/>
                </group>

                <searchpanel>
                    <field name="program_id" string="Program"
                           select="multi"
                           icon="fa-graduation-cap"/>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="state" string="Status"
                           select="multi"
                           icon="fa-filter"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_syllabus_view_kanban" model="ir.ui.view">
        <field name="name">university.syllabus.view.kanban</field>
        <field name="model">university.syllabus</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="program_id"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="department_id"/>
                <field name="semester_number"/>
                <field name="subject_id"/>
                <field name="academic_year_id"/>
                <field name="credits"/>
                <field name="total_hours"/>
                <field name="version"/>
                <field name="effective_from"/>
                <field name="state"/>
                <field name="approved_by"/>
                <field name="approval_date"/>

                <progressbar field="state"
                             colors='{"draft": "muted", "submitted": "warning", "approved": "success", "published": "primary"}'/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <span class="badge text-bg-primary ms-2">
                                            v<field name="version"/>
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <i class="fa fa-graduation-cap text-primary"/>
                                        <field name="program_id"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-calendar text-info"/>
                                        Sem <field name="semester_number"/>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-12">
                                        <i class="fa fa-book text-success"/>
                                        <field name="subject_id"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-trophy text-warning"/>
                                        <strong><field name="credits"/></strong> Credits
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-clock-o text-danger"/>
                                        <strong><field name="total_hours"/></strong> Hours
                                    </div>
                                </div>

                                <div class="row mt-2" t-if="record.academic_year_id.value">
                                    <div class="col-12">
                                        <i class="fa fa-calendar-check-o text-muted"/>
                                        <field name="academic_year_id"/>
                                    </div>
                                </div>

                                <div class="row mt-2" t-if="record.effective_from.value">
                                    <div class="col-12">
                                        <small class="text-muted">
                                            Effective from: <field name="effective_from"/>
                                        </small>
                                    </div>
                                </div>

                                <div class="row mt-2" t-if="record.approved_by.value">
                                    <div class="col-12">
                                        <i class="fa fa-check-circle text-success"/>
                                        Approved by <field name="approved_by"/>
                                        on <field name="approval_date"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'submitted'"
                                           decoration-success="state == 'approved'"
                                           decoration-primary="state == 'published'"/>
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="university_syllabus_view_pivot" model="ir.ui.view">
        <field name="name">university.syllabus.view.pivot</field>
        <field name="model">university.syllabus</field>
        <field name="arch" type="xml">
            <pivot string="Syllabus Analysis">
                <field name="program_id" type="row"/>
                <field name="semester_number" type="row"/>
                <field name="state" type="col"/>
                <field name="credits" type="measure"/>
                <field name="total_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="university_syllabus_view_graph" model="ir.ui.view">
        <field name="name">university.syllabus.view.graph</field>
        <field name="model">university.syllabus</field>
        <field name="arch" type="xml">
            <graph string="Syllabus Statistics" type="bar" stacked="1">
                <field name="program_id"/>
                <field name="semester_number"/>
                <field name="credits" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_syllabus" model="ir.actions.act_window">
        <field name="name">Syllabus</field>
        <field name="res_model">university.syllabus</field>
        <field name="view_mode">kanban,list,form,pivot,graph</field>
        <field name="context">{
            'search_default_filter_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Syllabus
            </p>
            <p>
                Manage university syllabus with detailed units, course objectives,
                learning outcomes, references, and assessment structures. Track approval workflow.
            </p>
        </field>
    </record>


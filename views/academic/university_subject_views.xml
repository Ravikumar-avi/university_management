<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="university_subject_view_form" model="ir.ui.view">
        <field name="name">university.subject.view.form</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <form string="University Subject">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_courses"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book">
                            <field name="course_count" widget="statinfo" string="Courses"/>
                        </button>
                    </div>

                    <field name="image_128" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="name" string="Subject Name"/>
                        <h1>
                            <field name="name"
                                   placeholder="e.g., Data Structures and Algorithms"
                                   required="1"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="e.g., CS201" required="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="department_id"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="subject_type" widget="radio"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Credits">
                            <field name="credits"/>
                            <field name="theory_credits"
                                   invisible="subject_type in ['lab']"/>
                            <field name="practical_credits"
                                   invisible="subject_type not in ['lab', 'core']"/>
                        </group>
                    </group>

                    <group>
                        <group string="Duration (Hours)">
                            <field name="total_hours"/>
                            <field name="theory_hours"
                                   invisible="subject_type in ['lab']"/>
                            <field name="practical_hours"
                                   invisible="subject_type not in ['lab', 'core']"/>
                        </group>
                        <group string="References">
                            <field name="textbooks"
                                   placeholder="Enter textbooks and reference materials..."
                                   nolabel="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description"
                                       placeholder="Enter detailed subject description..."/>
                            </group>
                            <group>
                                <field name="learning_outcomes"
                                       placeholder="Enter learning outcomes..."/>
                            </group>
                        </page>

                        <page string="Courses" name="courses">
                            <field name="course_ids" mode="list">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="program_id"/>
                                    <field name="semester_id"/>
                                    <field name="course_type"/>
                                    <field name="credits"/>
                                    <field name="faculty_id"/>
                                    <field name="total_enrolled"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-warning="state == 'scheduled'"
                                           decoration-success="state == 'ongoing'"
                                           decoration-muted="state == 'completed'"/>
                                </list>
                            </field>
                        </page>

                        <page string="Faculty" name="faculty">
                            <field name="faculty_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="designation_id"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="specialization"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_card_content">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <img t-att-src="kanban_image('faculty.faculty', 'image_128', record.id.raw_value)"
                                                                 alt="Faculty"
                                                                 class="o_image_64_max rounded"/>
                                                        </div>
                                                        <div class="col-9">
                                                            <strong class="o_kanban_record_title">
                                                                <field name="name"/>
                                                            </strong>
                                                            <div class="text-muted">
                                                                <field name="designation_id"/>
                                                            </div>
                                                            <div class="mt-1">
                                                                <i class="fa fa-envelope text-primary"/>
                                                                <field name="email"/>
                                                            </div>
                                                            <div t-if="record.specialization.value" class="mt-1">
                                                                <i class="fa fa-lightbulb-o text-warning"/>
                                                                <field name="specialization"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <page string="Syllabus" name="syllabus">
                            <field name="syllabus_ids" mode="list">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="program_id"/>
                                    <field name="semester_id"/>
                                    <field name="academic_year_id"/>
                                    <field name="total_subjects"/>
                                    <field name="total_credits"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_subject_view_list" model="ir.ui.view">
        <field name="name">university.subject.view.list</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <list string="University Subjects"
                  default_order="name"
                  multi_edit="1">
                <field name="name" string="Subject Name"/>
                <field name="code"/>
                <field name="department_id"/>
                <field name="subject_type" widget="badge"/>
                <field name="credits"/>
                <field name="theory_credits" optional="hide"/>
                <field name="practical_credits" optional="hide"/>
                <field name="total_hours" optional="show"/>
                <field name="theory_hours" optional="hide"/>
                <field name="practical_hours" optional="hide"/>
                <field name="active" widget="boolean_toggle"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="university_subject_view_search" model="ir.ui.view">
        <field name="name">university.subject.view.search</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <search string="Search Subjects">
                <field name="name" string="Subject"
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <field name="department_id"/>
                <field name="subject_type"/>

                <separator/>

                <filter name="filter_core" string="Core Subject"
                        domain="[('subject_type', '=', 'core')]"/>
                <filter name="filter_elective" string="Elective"
                        domain="[('subject_type', '=', 'elective')]"/>
                <filter name="filter_open_elective" string="Open Elective"
                        domain="[('subject_type', '=', 'open_elective')]"/>
                <filter name="filter_mandatory" string="Mandatory"
                        domain="[('subject_type', '=', 'mandatory')]"/>
                <filter name="filter_lab" string="Laboratory"
                        domain="[('subject_type', '=', 'lab')]"/>

                <separator/>

                <filter name="filter_3_credits" string="3 Credits"
                        domain="[('credits', '=', 3)]"/>
                <filter name="filter_4_credits" string="4 Credits"
                        domain="[('credits', '=', 4)]"/>
                <filter name="filter_more_than_4" string="More than 4 Credits"
                        domain="[('credits', '&gt;', 4)]"/>

                <separator/>

                <filter name="filter_has_theory" string="Has Theory"
                        domain="[('theory_credits', '&gt;', 0)]"/>
                <filter name="filter_has_practical" string="Has Practical"
                        domain="[('practical_credits', '&gt;', 0)]"/>

                <separator/>

                <filter name="filter_active" string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived"
                        domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_subject_type" string="Subject Type"
                            context="{'group_by': 'subject_type'}"/>
                    <filter name="group_by_credits" string="Credits"
                            context="{'group_by': 'credits'}"/>
                </group>

                <searchpanel>
                    <field name="department_id" string="Department"
                           select="multi"
                           icon="fa-building"/>
                    <field name="subject_type" string="Type"
                           select="multi"
                           icon="fa-tags"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="university_subject_view_kanban" model="ir.ui.view">
        <field name="name">university.subject.view.kanban</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile"
                    default_group_by="department_id"
                    quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="department_id"/>
                <field name="subject_type"/>
                <field name="credits"/>
                <field name="theory_credits"/>
                <field name="practical_credits"/>
                <field name="total_hours"/>
                <field name="theory_hours"/>
                <field name="practical_hours"/>
                <field name="active"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <span t-att-class="'badge ms-2 text-bg-' + (record.subject_type.raw_value == 'core' ? 'primary' : record.subject_type.raw_value == 'elective' ? 'success' : record.subject_type.raw_value == 'lab' ? 'info' : 'warning')">
                                            <field name="subject_type"/>
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_content">
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <i class="fa fa-building text-primary"/>
                                        <field name="department_id"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-trophy text-warning"/>
                                        <strong><field name="credits"/></strong> Credits
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-clock-o text-info"/>
                                        <strong><field name="total_hours"/></strong> Hours
                                    </div>
                                </div>

                                <div class="row mt-2" t-if="record.theory_credits.raw_value &gt; 0 or record.practical_credits.raw_value &gt; 0">
                                    <div class="col-6" t-if="record.theory_credits.raw_value &gt; 0">
                                        <small class="text-muted">
                                            Theory: <field name="theory_credits"/> credits
                                        </small>
                                    </div>
                                    <div class="col-6" t-if="record.practical_credits.raw_value &gt; 0">
                                        <small class="text-muted">
                                            Practical: <field name="practical_credits"/> credits
                                        </small>
                                    </div>
                                </div>

                                <div class="row mt-2" t-if="record.theory_hours.raw_value &gt; 0 or record.practical_hours.raw_value &gt; 0">
                                    <div class="col-6" t-if="record.theory_hours.raw_value &gt; 0">
                                        <small class="text-muted">
                                            Theory: <field name="theory_hours"/>h
                                        </small>
                                    </div>
                                    <div class="col-6" t-if="record.practical_hours.raw_value &gt; 0">
                                        <small class="text-muted">
                                            Practical: <field name="practical_hours"/>h
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_footer_left">
                                    <!-- Empty for future use -->
                                </div>
                                <div class="o_kanban_footer_right">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="university_subject_view_pivot" model="ir.ui.view">
        <field name="name">university.subject.view.pivot</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <pivot string="Subject Analysis">
                <field name="department_id" type="row"/>
                <field name="subject_type" type="col"/>
                <field name="credits" type="measure"/>
                <field name="total_hours" type="measure"/>
                <field name="theory_hours" type="measure"/>
                <field name="practical_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="university_subject_view_graph" model="ir.ui.view">
        <field name="name">university.subject.view.graph</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <graph string="Subject Statistics" type="bar" stacked="1">
                <field name="department_id"/>
                <field name="subject_type"/>
                <field name="credits" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">university.subject</field>
        <field name="view_mode">kanban,list,form,pivot,graph</field>
        <field name="context">{
            'search_default_filter_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Subject
            </p>
            <p>
                Manage university subjects with details about credits, hours, faculty,
                and learning outcomes. Subjects can be core, elective, or laboratory.
            </p>
        </field>
    </record>


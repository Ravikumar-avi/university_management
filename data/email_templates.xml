<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ========================================== -->
        <!-- EMAIL TEMPLATES -->
        <!-- ========================================== -->

        <!-- 1. Student Welcome Email -->
        <record id="email_template_student_welcome" model="mail.template">
            <field name="name">Student: Welcome Email</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="subject">Welcome to {{ object.program_id.name }} - {{ object.company_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #4CAF50; color: white; padding: 20px; text-align: center;">
        <h1>Welcome to {{ object.company_id.name }}!</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.name }}</strong>,</p>

        <p>Congratulations! We are delighted to welcome you to <strong>{{ object.program_id.name }}</strong> program.</p>

        <h3>Your Student Details:</h3>
        <table style="width: 100%; border-collapse: collapse;">
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Registration Number:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.registration_number }}</td>
            </tr>
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Program:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.program_id.name }}</td>
            </tr>
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Department:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.department_id.name }}</td>
            </tr>
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Batch:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.batch_id.name }}</td>
            </tr>
        </table>

        <p style="margin-top: 20px;">Please visit the student portal to access your dashboard, fee details, timetable, and more.</p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.get_portal_url() }}" style="background: #4CAF50; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block;">
                Visit Student Portal
            </a>
        </div>

        <p>Wishing you a successful academic journey!</p>

        <p>Best Regards,<br/>
        <strong>Academic Office</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 2. Fee Payment Reminder -->
        <record id="email_template_fee_reminder" model="mail.template">
            <field name="name">Fee: Payment Reminder</field>
            <field name="model_id" ref="model_fee_reminder"/>
            <field name="subject">Fee Payment Reminder - {{ object.student_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.student_id.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #FF5722; color: white; padding: 20px; text-align: center;">
        <h1>Fee Payment Reminder</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.student_id.name }}</strong>,</p>

        <p>This is a friendly reminder regarding your pending fee payment.</p>

        <div style="background: white; padding: 15px; border-left: 4px solid #FF5722; margin: 20px 0;">
            <h3 style="margin-top: 0;">Outstanding Amount: <span style="color: #FF5722;">â‚¹ {{ "{:,.2f}".format(object.amount_due) }}</span></h3>
        </div>

        <p><strong>Due Date:</strong> {{ object.due_date }}</p>
        <p><strong>Installment:</strong> {{ object.installment_id.name if object.installment_id else 'General Payment' }}</p>

        <p>Please make the payment at your earliest convenience to avoid any late fees or restrictions.</p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.student_id.get_portal_url() }}" style="background: #FF5722; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block;">
                Pay Now
            </a>
        </div>

        <p>For any queries, please contact the Accounts Office.</p>

        <p>Best Regards,<br/>
        <strong>Accounts Department</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 3. Hall Ticket Available -->
        <record id="email_template_hall_ticket" model="mail.template">
            <field name="name">Examination: Hall Ticket Available</field>
            <field name="model_id" ref="model_examination_hall_ticket"/>
            <field name="subject">Hall Ticket Available - {{ object.examination_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.student_id.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #2196F3; color: white; padding: 20px; text-align: center;">
        <h1>Hall Ticket Available</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.student_id.name }}</strong>,</p>

        <p>Your Hall Ticket for <strong>{{ object.examination_id.name }}</strong> is now available for download.</p>

        <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Hall Ticket Number:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.name }}</td>
            </tr>
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Examination:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.examination_id.name }}</td>
            </tr>
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;"><strong>Exam Start Date:</strong></td>
                <td style="padding: 8px; border: 1px solid #ddd;">{{ object.examination_id.start_date }}</td>
            </tr>
        </table>

        <div style="background: #FFF3CD; padding: 15px; border-left: 4px solid #FFC107; margin: 20px 0;">
            <strong>Important Instructions:</strong>
            <ul>
                <li>Please carry a printed copy of the hall ticket to the examination center</li>
                <li>Also carry a valid photo ID proof</li>
                <li>Report to the exam center 30 minutes before the exam time</li>
            </ul>
        </div>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.get_portal_url() }}" style="background: #2196F3; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block;">
                Download Hall Ticket
            </a>
        </div>

        <p>Wishing you all the best for your examinations!</p>

        <p>Best Regards,<br/>
        <strong>Examination Controller</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 4. Result Published -->
        <record id="email_template_result_published" model="mail.template">
            <field name="name">Examination: Result Published</field>
            <field name="model_id" ref="model_examination_result"/>
            <field name="subject">Exam Results Published - {{ object.examination_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.student_id.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #4CAF50; color: white; padding: 20px; text-align: center;">
        <h1>Examination Results Published</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.student_id.name }}</strong>,</p>

        <p>Your examination results for <strong>{{ object.examination_id.name }}</strong> have been published.</p>

        <div style="background: white; padding: 20px; border-radius: 5px; margin: 20px 0; text-align: center;">
            <h2 style="color: #4CAF50; margin: 0;">CGPA: {{ object.cgpa }}</h2>
            <p style="margin: 5px 0;">{{ object.grade }}</p>
        </div>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.get_portal_url() }}" style="background: #4CAF50; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block;">
                View Detailed Results
            </a>
        </div>

        <p>You can download your marksheet from the student portal.</p>

        <p>Congratulations on completing your examination!</p>

        <p>Best Regards,<br/>
        <strong>Examination Controller</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 5. Placement Drive Notification -->
        <record id="email_template_placement_drive" model="mail.template">
            <field name="name">Placement: Drive Notification</field>
            <field name="model_id" ref="model_placement_drive"/>
            <field name="subject">New Placement Drive - {{ object.company_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ ctx.get('student_email') }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #9C27B0; color: white; padding: 20px; text-align: center;">
        <h1>New Placement Drive</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear Student,</p>

        <p>A new placement drive has been scheduled. Details are provided below:</p>

        <div style="background: white; padding: 20px; border-radius: 5px; margin: 20px 0;">
            <h2 style="color: #9C27B0; margin-top: 0;">{{ object.company_id.name }}</h2>
            <p><strong>Position:</strong> {{ object.job_title }}</p>
            <p><strong>CTC:</strong> â‚¹ {{ object.ctc_min }} - â‚¹ {{ object.ctc_max }} LPA</p>
            <p><strong>Location:</strong> {{ object.job_location }}</p>
            <p><strong>Drive Date:</strong> {{ object.drive_date }}</p>
        </div>

        <h3>Eligibility:</h3>
        <ul>
            <li>Minimum CGPA: {{ object.min_cgpa }}</li>
            <li>Maximum Backlogs: {{ object.max_backlogs }}</li>
        </ul>

        <p><strong>Registration Deadline:</strong> {{ object.registration_end }}</p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.get_portal_url() }}" style="background: #9C27B0; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block;">
                Register Now
            </a>
        </div>

        <p>Don't miss this opportunity! Register before the deadline.</p>

        <p>Best Regards,<br/>
        <strong>Placement Cell</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 6. Placement Offer Letter -->
        <record id="email_template_placement_offer" model="mail.template">
            <field name="name">Placement: Offer Letter</field>
            <field name="model_id" ref="model_placement_offer"/>
            <field name="subject">Congratulations! Placement Offer from {{ object.company_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.student_id.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #FF9800; color: white; padding: 20px; text-align: center;">
        <h1>ðŸŽ‰ Congratulations! ðŸŽ‰</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.student_id.name }}</strong>,</p>

        <p>We are delighted to inform you that you have been selected by <strong>{{ object.company_id.name }}</strong>!</p>

        <div style="background: white; padding: 20px; border-radius: 5px; margin: 20px 0; border-left: 4px solid #FF9800;">
            <h3 style="margin-top: 0;">Offer Details:</h3>
            <table style="width: 100%;">
                <tr>
                    <td><strong>Position:</strong></td>
                    <td>{{ object.job_title }}</td>
                </tr>
                <tr>
                    <td><strong>CTC:</strong></td>
                    <td>â‚¹ {{ "{:,.2f}".format(object.ctc) }} LPA</td>
                </tr>
                <tr>
                    <td><strong>Location:</strong></td>
                    <td>{{ object.job_location }}</td>
                </tr>
                <tr>
                    <td><strong>Joining Date:</strong></td>
                    <td>{{ object.joining_date }}</td>
                </tr>
            </table>
        </div>

        <p><strong>Acceptance Deadline:</strong> {{ object.acceptance_deadline }}</p>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.get_portal_url() }}" style="background: #4CAF50; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block; margin: 5px;">
                Accept Offer
            </a>
            <a href="{{ object.get_portal_url() }}" style="background: #F44336; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block; margin: 5px;">
                Decline Offer
            </a>
        </div>

        <p>Please review the attached offer letter and respond before the deadline.</p>

        <p>Congratulations once again on your achievement!</p>

        <p>Best Regards,<br/>
        <strong>Placement Cell</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 7. Library Book Overdue Notice -->
        <record id="email_template_library_overdue" model="mail.template">
            <field name="name">Library: Book Overdue Notice</field>
            <field name="model_id" ref="model_library_issue"/>
            <field name="subject">Library Book Overdue - {{ object.book_id.title }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.member_id.student_id.email if object.member_id.member_type == 'student' else object.member_id.faculty_id.work_email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #F44336; color: white; padding: 20px; text-align: center;">
        <h1>Library Book Overdue</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.member_id.name }}</strong>,</p>

        <p>This is a reminder that the following book is overdue and should be returned immediately:</p>

        <div style="background: white; padding: 15px; border-left: 4px solid #F44336; margin: 20px 0;">
            <h3 style="margin-top: 0;">{{ object.book_id.title }}</h3>
            <p><strong>Author:</strong> {{ object.book_id.author }}</p>
            <p><strong>Issue Date:</strong> {{ object.issue_date }}</p>
            <p><strong>Due Date:</strong> {{ object.due_date }}</p>
            <p><strong>Days Overdue:</strong> <span style="color: #F44336;">{{ object.days_overdue }}</span></p>
        </div>

        <div style="background: #FFF3CD; padding: 15px; border-left: 4px solid #FFC107; margin: 20px 0;">
            <p style="margin: 0;"><strong>Fine Amount:</strong> â‚¹ {{ "{:,.2f}".format(object.fine_amount) }}</p>
        </div>

        <p>Please return the book at your earliest convenience to avoid further penalties.</p>

        <p>Best Regards,<br/>
        <strong>Library Department</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 8. Admission Approval -->
        <record id="email_template_admission_approved" model="mail.template">
            <field name="name">Admission: Application Approved</field>
            <field name="model_id" ref="model_student_admission"/>
            <field name="subject">Admission Approved - {{ object.program_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #4CAF50; color: white; padding: 20px; text-align: center;">
        <h1>ðŸŽ“ Admission Approved! ðŸŽ“</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.applicant_name }}</strong>,</p>

        <p>Congratulations! We are pleased to inform you that your application for admission to <strong>{{ object.program_id.name }}</strong> has been approved.</p>

        <div style="background: white; padding: 20px; border-radius: 5px; margin: 20px 0;">
            <h3>Next Steps:</h3>
            <ol>
                <li>Complete the fee payment (Amount: â‚¹ {{ "{:,.2f}".format(object.total_fee) }})</li>
                <li>Submit required documents</li>
                <li>Complete registration process</li>
            </ol>
        </div>

        <div style="text-align: center; margin: 20px 0;">
            <a href="{{ object.get_portal_url() }}" style="background: #4CAF50; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; display: inline-block;">
                Complete Admission Process
            </a>
        </div>

        <p>Please complete the above steps before <strong>{{ object.admission_deadline }}</strong>.</p>

        <p>Welcome to our institution! We look forward to having you as part of our academic community.</p>

        <p>Best Regards,<br/>
        <strong>Admission Office</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 9. Event Registration Confirmation -->
        <record id="email_template_event_registration" model="mail.template">
            <field name="name">Events: Registration Confirmation</field>
            <field name="model_id" ref="model_event_registration"/>
            <field name="subject">Event Registration Confirmed - {{ object.event_id.name }}</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.participant_email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: #3F51B5; color: white; padding: 20px; text-align: center;">
        <h1>Event Registration Confirmed</h1>
    </div>
    <div style="padding: 20px; background: #f9f9f9;">
        <p>Dear <strong>{{ object.participant_name }}</strong>,</p>

        <p>Your registration for the following event has been confirmed:</p>

        <div style="background: white; padding: 20px; border-radius: 5px; margin: 20px 0;">
            <h2 style="color: #3F51B5; margin-top: 0;">{{ object.event_id.name }}</h2>
            <p><strong>Date:</strong> {{ object.event_id.start }}</p>
            <p><strong>Venue:</strong> {{ object.event_id.venue_address or 'Online' }}</p>
            <p><strong>Registration Number:</strong> {{ object.name }}</p>
        </div>

        <p>Please keep this email for your records. You may be required to show it at the event.</p>

        <p>Looking forward to seeing you at the event!</p>

        <p>Best Regards,<br/>
        <strong>Event Organizing Committee</strong><br/>
        {{ object.company_id.name }}</p>
    </div>
</div>
            </field>
        </record>

        <!-- 10. Birthday Wishes -->
        <record id="email_template_birthday_wishes" model="mail.template">
            <field name="name">Student: Birthday Wishes</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="subject">Happy Birthday {{ object.name }}! ðŸŽ‚ðŸŽ‰</field>
            <field name="email_from">{{ (object.company_id.email or user.email_formatted) }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html" type="html">
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 40px 20px; text-align: center;">
        <h1 style="font-size: 36px; margin: 0;">ðŸŽ‰ Happy Birthday! ðŸŽ‰</h1>

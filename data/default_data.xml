        <record id="scholarship_merit" model="scholarship.scholarship">
            <field name="name">Merit Scholarship</field>
            <field name="code">MERIT001</field>
            <field name="scholarship_type">merit</field>
            <field name="total_amount">500000</field>
            <field name="amount_per_student">50000</field>
            <field name="coverage_type">partial</field>
            <field name="coverage_percentage">50</field>
            <field name="total_scholarships">10</field>
            <field name="eligibility_criteria"><![CDATA[
                <ul>
                    <li>Minimum CGPA: 8.5</li>
                    <li>No active backlogs</li>
                    <li>Regular attendance (minimum 75%)</li>
                </ul>
            ]]></field>
            <field name="min_percentage">8.5</field>
            <field name="academic_year_id" ref="academic_year_2024_25"/>
            <field name="application_start_date">2024-07-01</field>
            <field name="application_end_date">2024-08-31</field>
            <field name="payment_frequency">semester</field>
            <field name="state">draft</field>
            <field name="active" eval="True"/>
        </record>

        <record id="scholarship_need_based" model="scholarship.scholarship">

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ========================================== -->
        <!-- DEFAULT ACADEMIC YEAR (Current Year) -->
        <!-- ========================================== -->

        <record id="academic_year_2024_25" model="university.academic.year">
            <field name="name">Academic Year 2024-25</field>
            <field name="code">AY2024-25</field>
            <field name="start_date">2024-07-01</field>
            <field name="end_date">2025-06-30</field>
            <field name="is_current" eval="True"/>
        </record>

        <record id="academic_year_2025_26" model="university.academic.year">
            <field name="name">Academic Year 2025-26</field>
            <field name="code">AY2025-26</field>
            <field name="start_date">2025-07-01</field>
            <field name="end_date">2026-06-30</field>
            <field name="is_current" eval="False"/>
        </record>

        <!-- ========================================== -->
        <!-- GRADE SYSTEMS -->
        <!-- ========================================== -->

        <record id="grade_o" model="examination.grade.system">
            <field name="name">Outstanding</field>
            <field name="grade">O</field>
            <field name="grade_point">10</field>
            <field name="min_percentage">90</field>
            <field name="max_percentage">100</field>
            <field name="is_pass" eval="True"/>
            <field name="color">10</field>
            <field name="description">Outstanding - Exceptional performance</field>
        </record>

        <record id="grade_a_plus" model="examination.grade.system">
            <field name="name">Excellent</field>
            <field name="grade">A+</field>
            <field name="grade_point">9</field>
            <field name="min_percentage">80</field>
            <field name="max_percentage">89.99</field>
            <field name="is_pass" eval="True"/>
            <field name="color">9</field>
            <field name="description">Excellent - Very high level of achievement</field>
        </record>

        <record id="grade_a" model="examination.grade.system">
            <field name="name">Very Good</field>
            <field name="grade">A</field>
            <field name="grade_point">8</field>
            <field name="min_percentage">70</field>
            <field name="max_percentage">79.99</field>
            <field name="is_pass" eval="True"/>
            <field name="color">8</field>
            <field name="description">Very Good - High level of achievement</field>
        </record>

        <record id="grade_b_plus" model="examination.grade.system">
            <field name="name">Good</field>
            <field name="grade">B+</field>
            <field name="grade_point">7</field>
            <field name="min_percentage">60</field>
            <field name="max_percentage">69.99</field>
            <field name="is_pass" eval="True"/>
            <field name="color">7</field>
            <field name="description">Good - Above average performance</field>
        </record>

        <record id="grade_b" model="examination.grade.system">
            <field name="name">Above Average</field>
            <field name="grade">B</field>
            <field name="grade_point">6</field>
            <field name="min_percentage">50</field>
            <field name="max_percentage">59.99</field>
            <field name="is_pass" eval="True"/>
            <field name="color">6</field>
            <field name="description">Above Average - Satisfactory performance</field>
        </record>

        <record id="grade_c" model="examination.grade.system">
            <field name="name">Average</field>
            <field name="grade">C</field>
            <field name="grade_point">5</field>
            <field name="min_percentage">40</field>
            <field name="max_percentage">49.99</field>
            <field name="is_pass" eval="True"/>
            <field name="color">5</field>
            <field name="description">Average - Minimum passing grade</field>
        </record>

        <record id="grade_d" model="examination.grade.system">
            <field name="name">Pass</field>
            <field name="grade">D</field>
            <field name="grade_point">4</field>
            <field name="min_percentage">35</field>
            <field name="max_percentage">39.99</field>
            <field name="is_pass" eval="True"/>
            <field name="color">4</field>
            <field name="description">Pass - Just passed</field>
        </record>

        <record id="grade_f" model="examination.grade.system">
            <field name="name">Fail</field>
            <field name="grade">F</field>
            <field name="grade_point">0</field>
            <field name="min_percentage">0</field>
            <field name="max_percentage">34.99</field>
            <field name="is_pass" eval="False"/>
            <field name="color">1</field>
            <field name="description">Fail - Did not meet minimum requirements</field>
        </record>

